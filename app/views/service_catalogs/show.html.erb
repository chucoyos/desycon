<% content_for :title, @service_catalog.name %>

<div class="w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6 overflow-hidden rounded-2xl bg-white shadow-lg shadow-slate-200/70 border border-slate-100">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 p-6 bg-gradient-to-r from-indigo-600 to-indigo-500 text-white">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.2em] opacity-90">Servicio</p>
          <div class="flex items-center gap-2">
            <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-white/15">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="h-5 w-5">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" d="M6 7h12M6 12h12M6 17h6" />
              </svg>
            </span>
            <h1 class="text-3xl font-bold leading-tight"><%= @service_catalog.name %></h1>
          </div>
          <p class="text-sm text-indigo-100">Última actualización <%= l(@service_catalog.updated_at, format: :short) %></p>
        </div>
        <div class="flex items-center gap-2">
          <% if policy(@service_catalog).update? %>
            <%= link_to edit_service_catalog_path(@service_catalog), class: "inline-flex items-center gap-2 rounded-xl bg-white/90 px-4 py-2 text-sm font-semibold text-indigo-700 shadow-md shadow-indigo-900/15 hover:bg-white" do %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="h-4 w-4">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" d="M15.5 4.5l4 4-9 9H6.5v-4.5l9-9z" />
              </svg>
              <span>Editar</span>
            <% end %>
          <% end %>
          <%= link_to service_catalogs_path, class: "inline-flex items-center gap-2 rounded-xl border border-white/60 bg-transparent px-4 py-2 text-sm font-semibold text-white hover:bg-white/10" do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="h-4 w-4">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" d="M15 19l-7-7 7-7" />
            </svg>
            <span>Volver</span>
          <% end %>
        </div>
      </div>

      <div class="p-6 space-y-4 bg-white">
        <div class="flex flex-wrap gap-2">
          <span class="inline-flex items-center gap-1 rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">
            <span class="h-2 w-2 rounded-full bg-indigo-500"></span>
            <%= @service_catalog.applies_to == "container" ? "Contenedores" : "BL House" %>
          </span>
          <% if @service_catalog.active? %>
            <span class="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700">
              <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
              Activo
            </span>
          <% else %>
            <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">
              <span class="h-2 w-2 rounded-full bg-slate-500"></span>
              Inactivo
            </span>
          <% end %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="rounded-xl border border-slate-100 bg-slate-50/70 p-4 flex items-start gap-3">
            <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-white text-indigo-600 shadow-sm">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="h-5 w-5">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" d="M4 7h16M4 12h10m-6 5h12" />
              </svg>
            </span>
            <div>
              <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Código</p>
              <p class="text-lg font-semibold text-slate-900"><%= @service_catalog.code.presence || "Sin código" %></p>
            </div>
          </div>
          <div class="rounded-xl border border-slate-100 bg-slate-50/70 p-4 flex items-start gap-3">
            <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-white text-emerald-600 shadow-sm">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="h-5 w-5">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" d="M12 6v12m6-6H6" />
              </svg>
            </span>
            <div>
              <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Monto</p>
              <p class="text-lg font-semibold text-slate-900"><%= number_to_currency(@service_catalog.amount, unit: "#{@service_catalog.currency} $", format: "%u %n") %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
