<div id="<%= dom_id(notification) %>" 
     data-controller="notification"
     data-notification-url-value="<%= mark_as_read_notification_path(notification) %>"
     data-notification-read-value="<%= notification.read? %>"
     class="group relative flex flex-col h-full rounded-3xl bg-white transition-all duration-300 hover:shadow-lg hover:-translate-y-1 <%= notification.read? ? 'border border-slate-100 shadow-sm' : 'border-2 border-blue-100 shadow-md bg-blue-50/10' %>">
  <!-- Card Header -->
  <div class="px-6 pt-6 pb-2">
    <div class="flex items-start justify-between gap-4">
      <div class="flex items-center gap-4">
        <div class="relative">
          <span class="inline-flex h-12 w-12 items-center justify-center rounded-2xl <%= notification.read? ? 'bg-slate-100 text-slate-600' : 'bg-blue-100 text-blue-600' %> transition-colors">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0M3.124 7.5A8.969 8.969 0 015.292 3m13.416 0a8.969 8.969 0 012.168 4.5" />
            </svg>
          </span>
          <% unless notification.read? %>
            <span class="absolute -right-1 -top-1 flex h-4 w-4">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-4 w-4 bg-blue-500 border-2 border-white"></span>
            </span>
          <% end %>
        </div>
        <div>
          <div class="flex items-center gap-2 mb-1">
            <%
              actor = notification.actor
              actor_name = if actor && actor.entity
                             actor.entity.name
                           elsif actor
                             actor.email
                           else
                             "Sistema"
                           end
            %>
            <h3 class="text-base font-bold text-slate-800"><%= actor_name %></h3>
            <span class="text-xs font-medium text-slate-500 flex items-center gap-1">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <%= time_ago_in_words(notification.created_at)
                  .gsub('alrededor de ', '')
                  .gsub('menos de un minuto', '1m')
                  .gsub(' minutos', 'm')
                  .gsub(' minuto', 'm')
                  .gsub(' horas', 'hr')
                  .gsub(' hora', 'hr')
                  .gsub(' días', 'd')
                  .gsub(' día', 'd') %>
            </span>
          </div>
          <p class="text-sm font-medium text-slate-600 leading-relaxed flex items-center gap-2">
            <% if notification.action == "revalidado" %>
              <svg class="h-5 w-5 text-green-600 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="font-bold text-green-700 uppercase tracking-wide">¡Revalidado!</span>
            <% elsif notification.action == "solicitó revalidación" %>
              <svg class="h-5 w-5 text-orange-600 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
              </svg>
              <span class="font-bold text-orange-700 tracking-wide">Solicitó Revalidación</span>
            <% else %>
              <%= notification.action %>
            <% end %>
          </p>
        </div>
      </div>
      
      <!-- Option Menu (Optional, nice for cleaning up actions later) -->
    </div>
  </div>

  <!-- Content / Context -->
  <div class="px-6 py-2 flex-grow">
    <% if notification.notifiable %>
      <div class="mt-3 p-4 rounded-2xl bg-white border border-slate-200/60 shadow-sm hover:shadow-lg hover:border-slate-300 transition-all duration-300 group-hover:shadow-md group-hover:-translate-y-0.5">
        <p class="text-xs font-bold uppercase tracking-wider text-slate-500 mb-3 flex items-center gap-2">
          <svg class="h-4 w-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Referencia
        </p>
        <% if notification.action == "revalidado" %>
          <%= link_to revalidation_path(notification.notifiable, format: :pdf), target: "_blank", data: { action: "click->notification#markAsRead" }, class: "group/item flex items-center justify-between" do %>
            <div class="flex items-center gap-3">
              <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <span class="text-sm font-semibold text-slate-700 group-hover/item:text-blue-600 transition-colors">
                Revalidación 
                <p>Partida: <%= notification.notifiable.try(:blhouse) || notification.notifiable.id %></p>
                <% if notification.notifiable.respond_to?(:status) %>
                  <p class="text-xs font-normal text-slate-500 mt-0.5">
                    Estatus: <%= bl_house_line_status_nombre(notification.notifiable.status) %>
                  </p>
                <% end %>
              </span>
            </div>
            <svg class="h-4 w-4 text-slate-300 group-hover/item:text-blue-500 group-hover/item:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          <% end %>
        <% elsif notification.action == "solicitó revalidación" || notification.action == "solicito_revalidacion" %>
          <%= link_to revalidation_approval_bl_house_line_path(notification.notifiable), data: { turbo_frame: "approval_modal", action: "click->notification#markAsRead" }, class: "group/item flex items-center justify-between" do %>
             <div class="flex items-center gap-3">
              <svg class="h-5 w-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="text-sm font-semibold text-slate-700 group-hover/item:text-blue-600 transition-colors">
                Validar Solicitud
                <p>Partida: <%= notification.notifiable.try(:blhouse) || notification.notifiable.id %></p>
                <% if notification.notifiable.respond_to?(:status) %>
                  <p class="text-xs font-normal text-slate-500 mt-0.5">
                    Estatus: <%= bl_house_line_status_nombre(notification.notifiable.status) %>
                  </p>
                <% end %>
              </span>
            </div>
            <svg class="h-4 w-4 text-slate-300 group-hover/item:text-blue-500 group-hover/item:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"/>
            </svg>
          <% end %>
        <% elsif notification.action == "Correcciones Solicitadas" || notification.action == "Documentación Aprobada" %>
            <% 
               # Fetch the observation from history that matches the notification time (approx) or is relevant
               # Since notifications are created immediately after history updates, usually the latest history
               # will contain the relevant observation.
               latest_history = notification.notifiable.bl_house_line_status_histories.order(created_at: :desc).first
               observation_text = latest_history&.observations
            %>
            <%= link_to (notification.action == 'Correcciones Solicitadas' ? customs_agents_dashboard_path(revalidation_blhouse: notification.notifiable.blhouse) : notification.notifiable), data: { action: "click->notification#markAsRead" }, class: "group/item block" do %>
                <div class="flex items-center justify-between mb-2">
                    <div class="flex items-center gap-3">
                        <svg class="h-5 w-5 <%= notification.action == 'Correcciones Solicitadas' ? 'text-red-500' : 'text-blue-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                             <% if notification.action == 'Correcciones Solicitadas' %>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                             <% else %>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                             <% end %>
                        </svg>
                        <span class="text-sm font-semibold text-slate-700 group-hover/item:text-blue-600 transition-colors">
                            Partida <%= notification.notifiable.try(:blhouse) || notification.notifiable.id %>
                        </span>
                    </div>
                     <svg class="h-4 w-4 text-slate-300 group-hover/item:text-blue-500 group-hover/item:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </div>
                <% if observation_text.present? %>
                    <div class="mt-2 text-xs text-slate-600 bg-slate-50 p-2.5 rounded-lg border border-slate-200/60 italic leading-relaxed">
                        "<%= observation_text %>"
                    </div>
                <% end %>
            <% end %>
        <% else %>
          <%= link_to notification.notifiable, class: "group/item flex items-center justify-between" do %>
            <div class="flex items-center gap-3">
              <svg class="h-5 w-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <span class="text-sm font-semibold text-slate-700 group-hover/item:text-blue-600 transition-colors">
                Partida <%= notification.notifiable.try(:blhouse) || notification.notifiable.id %>
              </span>
            </div>
            <svg class="h-4 w-4 text-slate-300 group-hover/item:text-blue-500 group-hover/item:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Actions -->
  <div class="mt-auto px-6 pb-6 pt-4 border-t border-slate-50">
    <div class="flex items-center justify-end gap-3">
      <% unless notification.read? %>
        <%= button_to mark_as_read_notification_path(notification), method: :patch, class: "inline-flex items-center gap-2 px-4 py-2 rounded-full bg-blue-600 text-white text-sm font-semibold shadow-md shadow-blue-200 hover:bg-blue-700 hover:shadow-lg transition-all active:scale-95", title: "Marcar como leído" do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span>Leído</span>
        <% end %>
      <% end %>

      <%= button_to notification_path(notification), method: :delete, class: "inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-semibold text-slate-500 hover:bg-red-50 hover:text-red-600 transition-colors active:scale-95", title: "Eliminar", form: { data: { turbo_confirm: "¿Eliminar esta notificación?" } } do %>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        <span>Borrar</span>
      <% end %>
    </div>
  </div>
</div>
