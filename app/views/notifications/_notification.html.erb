<div id="<%= dom_id(notification) %>" class="flex flex-col gap-3 rounded-2xl border border-slate-100 bg-white p-5 shadow-sm shadow-slate-200/60 hover:-translate-y-0.5 hover:shadow-md transition transform <%= 'ring-2 ring-blue-100 border-blue-200' unless notification.read? %>">
  <div class="flex items-start justify-between gap-3">
    <div>
      <p class="text-[11px] font-semibold uppercase tracking-wide text-blue-600">Notificación</p>
      <div class="flex items-center gap-2">
        <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl bg-blue-50 text-blue-700">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </span>
        <div>
          <%
            actor = notification.actor
            actor_name = if actor && actor.entity
                           actor.entity.name
                         elsif actor
                           actor.email
                         else
                           "Sistema"
                         end
          %>
          <h2 class="text-lg font-semibold text-slate-900 leading-tight"><%= actor_name %></h2>
          <p class="text-sm text-slate-500"><%= notification.action %></p>
        </div>
      </div>
    </div>
    <% unless notification.read? %>
      <div class="flex-shrink-0">
        <span class="inline-flex items-center gap-1 rounded-full bg-blue-50 px-3 py-1 text-xs font-semibold text-blue-700">
          <span class="h-2 w-2 rounded-full bg-blue-500"></span>
          Nuevo
        </span>
      </div>
    <% end %>
  </div>

  <% if notification.notifiable %>
    <div class="flex items-center justify-between">
      <div>
        <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Referencia</p>
        <%= link_to notification.notifiable, class: "inline-flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50" do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" d="M9 5l7 7-7 7"/>
          </svg>
          <span>Partida <%= notification.notifiable.try(:blhouse) || notification.notifiable.id %></span>
        <% end %>
      </div>
      <div class="flex gap-2">
        <p class="text-xs text-slate-500 flex items-center">
          <svg class="w-4 h-4 mr-1 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= time_ago_in_words(notification.created_at) %>
        </p>
      </div>
    </div>
  <% else %>
    <div class="flex items-center justify-end">
      <p class="text-xs text-slate-500 flex items-center">
        <svg class="w-4 h-4 mr-1 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <%= time_ago_in_words(notification.created_at) %>
      </p>
    </div>
  <% end %>

  <% unless notification.read? %>
    <div class="flex justify-end">
      <%= button_to mark_as_read_notification_path(notification), method: :patch, class: "inline-flex items-center gap-1 rounded-lg bg-blue-600 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-blue-700", title: "Marcar como leído" do %>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" d="M5 13l4 4L19 7"/>
        </svg>
        <span>Marcar como leído</span>
      <% end %>
    </div>
  <% end %>
</div>
