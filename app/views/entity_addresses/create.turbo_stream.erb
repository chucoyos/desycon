<%# Update the addresses container %>
<%= turbo_stream.replace "addresses_container" do %>
  <!-- Addresses -->
  <div id="addresses_container">
    <% if @entity.addresses.any? %>
      <div id="addresses_section" class="mt-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-4 sm:px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-teal-600">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                </svg>
                <h2 class="text-base sm:text-lg font-semibold text-gray-900">Direcciones</h2>
              </div>
              <div class="flex items-center gap-2">
                <button type="button" data-action="click->modal#open" data-modal-id="new-address-modal" class="p-1 text-green-600 hover:text-green-700 transition-colors" title="Agregar nueva dirección">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                  </svg>
                </button>
                <button type="button" data-action="click->modal#open" data-modal-id="address-modal" class="p-1 text-gray-400 hover:text-teal-600 transition-colors" title="Editar direcciones">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                </svg>
              </button>
            </div>
          </div>
        </div>
        <div class="px-4 sm:px-6 py-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% @entity.addresses.each do |address| %>
              <div class="p-4 bg-gray-50 rounded-lg border border-gray-200">
                <div class="flex items-start justify-between">
                  <div class="flex-1 space-y-2">
                    <% if address.tipo.present? %>
                      <p class="text-sm text-gray-900"><strong>Tipo:</strong> <%= Address::TIPOS[address.tipo] || address.tipo %></p>
                    <% end %>
                    <% if address.calle.present? %>
                      <p class="text-sm text-gray-900"><strong>Calle:</strong> <%= address.calle %> <%= address.numero_exterior %> <%= "Int. #{address.numero_interior}" if address.numero_interior.present? %></p>
                    <% end %>
                    <% if address.colonia.present? %>
                      <p class="text-sm text-gray-900"><strong>Colonia:</strong> <%= address.colonia %></p>
                    <% end %>
                    <% if address.municipio.present? %>
                      <p class="text-sm text-gray-900"><strong>Municipio:</strong> <%= address.municipio %></p>
                    <% end %>
                    <% if address.localidad.present? %>
                      <p class="text-sm text-gray-900"><strong>Localidad:</strong> <%= address.localidad %></p>
                    <% end %>
                    <% if address.estado.present? %>
                      <p class="text-sm text-gray-900"><strong>Estado:</strong> <%= address.estado %></p>
                    <% end %>
                    <% if address.codigo_postal.present? %>
                      <p class="text-sm text-gray-900"><strong>CP:</strong> <%= address.codigo_postal %></p>
                    <% end %>
                    <% if address.pais.present? %>
                      <p class="text-sm text-gray-900"><strong>País:</strong> <%= address.pais %></p>
                    <% end %>
                    <% if address.email.present? %>
                      <p class="text-sm text-gray-900"><strong>Email:</strong> <%= address.email %></p>
                    <% end %>
                  </div>
                  <div class="ml-2">
                    <%= button_to entity_address_path(@entity, address), method: :delete, class: "p-1 text-red-400 hover:text-red-600 transition-colors", title: "Eliminar dirección", data: { turbo_confirm: "Are you sure you want to delete this address?" } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
<% end %>

<%= turbo_stream.replace "flash_messages" do %>
  <%= render partial: "shared/flash_messages", locals: { flash: flash } %>
<% end %>

<%= turbo_stream.remove "new-address-modal" %>
