<% content_for :title, "Nuevo Buque" %>

<div class="w-full max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center gap-4">
      <div class="flex items-center justify-center w-14 h-14 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-2xl shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
      </div>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Nuevo Buque</h1>
        <p class="text-gray-500 mt-1">Registra un nuevo buque en el sistema</p>
      </div>
    </div>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden mb-6">
    <div class="px-6 py-4 bg-gradient-to-r from-purple-50 to-indigo-50 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Informaci√≥n del Buque</h2>
    </div>
    <div class="p-6">
      <%= render "form", vessel: @vessel %>
    </div>
  </div>

  <!-- Back Link -->
  <div class="flex items-center gap-2">
    <%= link_to vessels_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 font-medium transition-colors duration-150" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
      </svg>
      Volver a Buques
    <% end %>
  </div>
</div>
