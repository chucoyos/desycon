<% content_for :title, "Editar Buque" %>

<div class="w-full max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center gap-4">
      <div class="flex items-center justify-center w-14 h-14 bg-gradient-to-br from-amber-500 to-orange-600 rounded-2xl shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg>
      </div>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Editar Buque</h1>
        <p class="text-gray-500 mt-1">Actualiza la información del buque</p>
      </div>
    </div>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden mb-6">
    <div class="px-6 py-4 bg-gradient-to-r from-amber-50 to-orange-50 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Información del Buque</h2>
    </div>
    <div class="p-6">
      <%= render "form", vessel: @vessel %>
    </div>
  </div>

  <!-- Back Link -->
  <div class="flex items-center gap-2">
    <%= link_to @vessel, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 font-medium transition-colors duration-150" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
      </svg>
      Volver
    <% end %>
  </div>
</div>
