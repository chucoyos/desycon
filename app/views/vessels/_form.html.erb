<%= form_with(model: vessel, class: "space-y-6") do |form| %>
  <%= render "shared/error_messages", object: vessel %>

  <div>
    <%= form.label :name, class: "flex items-center gap-2 text-sm font-semibold text-gray-700 mb-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-purple-600">
        <path d="M3.375 3C2.339 3 1.5 3.84 1.5 4.875v.75c0 1.036.84 1.875 1.875 1.875h17.25c1.035 0 1.875-.84 1.875-1.875v-.75C22.5 3.839 21.66 3 20.625 3H3.375Z" />
        <path fill-rule="evenodd" d="m3.087 9 .54 9.176A3 3 0 0 0 6.62 21h10.757a3 3 0 0 0 2.995-2.824L20.913 9H3.087Zm6.163 3.75A.75.75 0 0 1 10 12h4a.75.75 0 0 1 0 1.5h-4a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
      </svg>
      Nombre del Buque
    <% end %>
    <%= form.text_field :name,
        placeholder: "Ej: MSC MAYA",
        class: [
          "block w-full px-4 py-3 rounded-lg border-2 transition-all duration-200 text-gray-900 placeholder-gray-400",
          vessel.errors[:name].none? ? "border-gray-300 focus:border-purple-500 focus:ring-4 focus:ring-purple-100" : "border-red-300 focus:border-red-500 focus:ring-4 focus:ring-red-100"
        ] %>
    <% if vessel.errors[:name].any? %>
      <p class="mt-2 text-sm text-red-600 flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
          <path fill-rule="evenodd" d="M18 10a8 8 0 1 1-16 0 8 8 0 0 1 16 0Zm-8-5a.75.75 0 0 1 .75.75v4.5a.75.75 0 0 1-1.5 0v-4.5A.75.75 0 0 1 10 5Zm0 10a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z" clip-rule="evenodd" />
        </svg>
        <%= vessel.errors[:name].first %>
      </p>
    <% end %>
  </div>

  <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-200">
    <%= link_to "Cancelar", vessel.persisted? ? vessel : vessels_path, class: "px-6 py-2.5 text-gray-700 font-medium rounded-lg hover:bg-gray-100 transition-colors duration-150" %>
    <%= form.submit vessel.persisted? ? "Actualizar Buque" : "Crear Buque", class: "inline-flex items-center gap-2 px-6 py-2.5 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-medium rounded-lg shadow-sm hover:from-purple-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200 cursor-pointer" %>
  </div>
<% end %>
