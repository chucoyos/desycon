<!-- Roles Edit Modal -->
<div id="roles-modal" data-modal-target="modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" data-action="click->modal#closeOnBackdrop">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Editar Roles</h3>
        <button type="button" data-action="click->modal#close" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <%= form_with(model: entity, url: entity_path(entity), method: :patch, class: "space-y-4", id: "roles_form") do |form| %>
        <%= hidden_field_tag "modal", "roles" %>
        <div class="space-y-3">
          <div class="flex items-center">
            <%= form.check_box :is_consolidator, class: "h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded" %>
            <%= form.label :is_consolidator, "Consolidador", class: "ml-2 block text-sm text-gray-900" %>
          </div>
          <div class="flex items-center">
            <%= form.check_box :is_customs_agent, class: "h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded" %>
            <%= form.label :is_customs_agent, "Agencia Aduanal", class: "ml-2 block text-sm text-gray-900" %>
          </div>
          <div class="flex items-center">
            <%= form.check_box :is_customs_broker, class: "h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded" %>
            <%= form.label :is_customs_broker, "Agente Aduanal", class: "ml-2 block text-sm text-gray-900" %>
          </div>
          <div class="flex items-center">
            <%= form.check_box :is_forwarder, class: "h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded" %>
            <%= form.label :is_forwarder, "Forwarder", class: "ml-2 block text-sm text-gray-900" %>
          </div>
          <div class="flex items-center">
            <%= form.check_box :is_client, class: "h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded" %>
            <%= form.label :is_client, "Cliente", class: "ml-2 block text-sm text-gray-900" %>
          </div>
        </div>
        <div class="flex justify-end gap-3">
          <button type="button" data-action="click->modal#close" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition-colors">Cerrar</button>
          <%= form.submit "Guardar", class: "px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition-colors", data: { disable_with: "Guardando..." } %>
        </div>
      <% end %>
    </div>
  </div>
</div>