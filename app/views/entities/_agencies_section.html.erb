<div id="agencies_section" class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
  <div class="px-4 sm:px-6 py-4 bg-gradient-to-r from-slate-50 to-slate-100 border-b border-gray-200">
    <div class="flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 21v-8.25a6 6 0 0 0-1.5-4.5V3.75a.75.75 0 0 1 1.5 0v2.25a6 6 0 0 0 1.5 4.5V21m0 0h-9m9 0h3m-3 0v-8.25a6 6 0 0 0 1.5-4.5V3.75a.75.75 0 0 0-1.5 0v2.25a6 6 0 0 0-1.5 4.5V21m0 0h-9m9 0h3" />
      </svg>
      <h2 class="text-base sm:text-lg font-semibold text-gray-900">Agencias Aduanales</h2>
    </div>
  </div>

  <div class="px-4 sm:px-6 py-4 space-y-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <p class="text-sm font-semibold text-gray-700">Agencias vinculadas</p>
        <div class="mt-2 flex flex-wrap gap-2">
          <% if entity.customs_agencies.any? %>
            <% entity.customs_agencies.order(:name).each do |agency| %>
              <span class="inline-flex items-center gap-2 rounded-full bg-blue-50 px-3 py-1 text-xs font-semibold text-blue-700">
                <span><%= agency.name %></span>
                <%= button_to entity_agency_broker_path(entity, agency.agency_broker_links_as_agency.find_by(broker_id: entity.id)),
                  method: :delete,
                  class: "ml-1 inline-flex h-5 w-5 items-center justify-center rounded-full text-blue-400 hover:text-blue-700",
                  title: "Desvincular agencia",
                  data: { turbo_confirm: "Â¿Deseas desvincular esta agencia?" } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                <% end %>
              </span>
            <% end %>
          <% else %>
            <span class="text-sm text-gray-500">No hay agencias vinculadas.</span>
          <% end %>
        </div>
      </div>

      <div>
        <p class="text-sm font-semibold text-gray-700">Vincular agencia</p>
        <%= form_with url: entity_agency_brokers_path(entity), method: :post, class: "mt-2 flex flex-col gap-3" do |form| %>
          <%= form.collection_select :agency_id,
              Entity.customs_agents.where.not(id: entity.customs_agencies.select(:id)).order(:name),
              :id,
              :name,
              { include_blank: "Selecciona una agencia" },
              class: "w-full rounded-xl border border-gray-200 bg-white px-3 py-2 text-sm text-gray-700 focus:border-blue-500 focus:ring-2 focus:ring-blue-200" %>
          <%= form.submit "Vincular agencia",
              class: "inline-flex items-center justify-center rounded-xl bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-700 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500" %>
        <% end %>
        <div class="mt-2 text-xs text-gray-500">
          <%= link_to "Crear nueva agencia", new_entity_path(role: "customs_agent"), class: "text-blue-600 hover:text-blue-800 font-semibold" %>
          y luego vincularla al Agente.
        </div>
      </div>
    </div>
  </div>
</div>
