<% content_for :title, @entity.name %>

<div id="entity_show" class="w-full px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
  <!-- Header -->
  <div class="mb-6 sm:mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4 mb-4 sm:mb-6">
      <div class="flex items-center gap-3 sm:gap-4">
        <div class="flex items-center justify-center w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-teal-500 to-cyan-600 rounded-2xl shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 sm:w-7 sm:h-7 text-white">
            <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
          </svg>
        </div>
        <div>
          <div class="flex items-center gap-2">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900"><%= @entity.name %></h1>
            <button type="button" data-action="click->modal#open" data-modal-id="name-modal" class="p-1 text-gray-400 hover:text-teal-600 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
              </svg>
            </button>
          </div>
          <div class="flex flex-wrap gap-1 mt-2">
            <% if @entity.is_consolidator %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">Consolidador</span>
            <% end %>
            <% if @entity.is_customs_agent %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">Agente Aduanal</span>
            <% end %>
            <% if @entity.is_forwarder %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Forwarder</span>
            <% end %>
            <% if @entity.is_client %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-800">Cliente</span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="flex items-center gap-2">
        <%= link_to edit_entity_path(@entity), class: "inline-flex items-center justify-center gap-2 px-3 sm:px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-600 text-white text-sm sm:text-base font-medium rounded-lg shadow-sm hover:from-amber-600 hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-all duration-200 w-full sm:w-auto" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
          <span class="hidden sm:inline">Editar</span>
        <% end %>
        <%= link_to entities_path, class: "inline-flex items-center justify-center gap-2 px-3 sm:px-4 py-2 bg-white text-gray-700 text-sm sm:text-base font-medium rounded-lg shadow-sm border border-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition-all duration-200 w-full sm:w-auto" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
          </svg>
          <span class="hidden sm:inline">Volver</span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Fiscal Profile -->
    <% if @entity.fiscal_profile.present? %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-4 sm:px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-teal-600">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
              </svg>
              <h2 class="text-base sm:text-lg font-semibold text-gray-900">Perfil Fiscal</h2>
            </div>
            <button type="button" data-action="click->modal#open" data-modal-id="fiscal-modal" class="p-1 text-gray-400 hover:text-teal-600 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
              </svg>
            </button>
          </div>
        </div>
        <div class="px-4 sm:px-6 py-4">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <dt class="text-xs sm:text-sm font-medium text-gray-500">RFC</dt>
              <dd class="mt-1 text-sm sm:text-base text-gray-900"><%= @entity.fiscal_profile.rfc %></dd>
            </div>
            <% if @entity.fiscal_profile.razon_social.present? %>
              <div>
                <dt class="text-xs sm:text-sm font-medium text-gray-500">Razón Social</dt>
                <dd class="mt-1 text-sm sm:text-base text-gray-900"><%= @entity.fiscal_profile.razon_social %></dd>
              </div>
            <% end %>
            <% if @entity.fiscal_profile.regimen.present? %>
              <div>
                <dt class="text-xs sm:text-sm font-medium text-gray-500">Régimen Fiscal</dt>
                <dd class="mt-1 text-sm sm:text-base text-gray-900"><%= @entity.fiscal_profile.regimen_nombre %></dd>
              </div>
            <% end %>
            <% if @entity.fiscal_profile.uso_cfdi.present? %>
              <div>
                <dt class="text-xs sm:text-sm font-medium text-gray-500">Uso CFDI</dt>
                <dd class="mt-1 text-sm sm:text-base text-gray-900"><%= @entity.fiscal_profile.uso_cfdi_nombre %></dd>
              </div>
            <% end %>
            <% if @entity.fiscal_profile.forma_pago.present? %>
              <div>
                <dt class="text-xs sm:text-sm font-medium text-gray-500">Forma de Pago</dt>
                <dd class="mt-1 text-sm sm:text-base text-gray-900"><%= @entity.fiscal_profile.forma_pago_nombre %></dd>
              </div>
            <% end %>
            <% if @entity.fiscal_profile.metodo_pago.present? %>
              <div>
                <dt class="text-xs sm:text-sm font-medium text-gray-500">Método de Pago</dt>
                <dd class="mt-1 text-sm sm:text-base text-gray-900"><%= @entity.fiscal_profile.metodo_pago_nombre %></dd>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Customs Agent Patents -->
    <% if @entity.is_customs_agent && @entity.customs_agent_patents.any? %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-4 sm:px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 0 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
              </svg>
              <h2 class="text-base sm:text-lg font-semibold text-gray-900">Patentes Aduanales</h2>
            </div>
            <div class="flex items-center gap-2">
              <button type="button" data-action="click->modal#open" data-modal-id="new-patent-modal" class="p-1 text-green-600 hover:text-green-700 transition-colors" title="Agregar nueva patente">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
              </button>
              <button type="button" data-action="click->modal#open" data-modal-id="patent-modal" class="p-1 text-gray-400 hover:text-teal-600 transition-colors" title="Editar patentes">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                </svg>
              </button>
            </div>
          </div>
        </div>
        <div class="px-4 sm:px-6 py-4">
          <div class="flex flex-wrap gap-2">
            <% @entity.customs_agent_patents.each do |patent| %>
              <span class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-medium bg-blue-50 text-blue-700 border border-blue-200">
                <%= patent.patent_number %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Addresses -->
  <% if @entity.addresses.any? %>
    <div class="mt-6">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-4 sm:px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-teal-600">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
              </svg>
              <h2 class="text-base sm:text-lg font-semibold text-gray-900">Direcciones</h2>
            </div>
            <div class="flex items-center gap-2">
              <button type="button" data-action="click->modal#open" data-modal-id="new-address-modal" class="p-1 text-green-600 hover:text-green-700 transition-colors" title="Agregar nueva dirección">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
              </button>
              <button type="button" data-action="click->modal#open" data-modal-id="address-modal" class="p-1 text-gray-400 hover:text-teal-600 transition-colors" title="Editar direcciones">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                </svg>
              </button>
            </div>
          </div>
        </div>
        <div class="px-4 sm:px-6 py-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% @entity.addresses.each do |address| %>
              <div class="p-4 bg-gray-50 rounded-lg border border-gray-200">
                <div class="space-y-2">
                  <% if address.tipo.present? %>
                    <p class="text-sm text-gray-900"><strong>Tipo:</strong> <%= Address::TIPOS[address.tipo] || address.tipo %></p>
                  <% end %>
                  <% if address.calle.present? %>
                    <p class="text-sm text-gray-900"><strong>Calle:</strong> <%= address.calle %> <%= address.numero_exterior %> <%= "Int. #{address.numero_interior}" if address.numero_interior.present? %></p>
                  <% end %>
                  <% if address.colonia.present? %>
                    <p class="text-sm text-gray-900"><strong>Colonia:</strong> <%= address.colonia %></p>
                  <% end %>
                  <% if address.municipio.present? %>
                    <p class="text-sm text-gray-900"><strong>Municipio:</strong> <%= address.municipio %></p>
                  <% end %>
                  <% if address.localidad.present? %>
                    <p class="text-sm text-gray-900"><strong>Localidad:</strong> <%= address.localidad %></p>
                  <% end %>
                  <% if address.estado.present? %>
                    <p class="text-sm text-gray-900"><strong>Estado:</strong> <%= address.estado %></p>
                  <% end %>
                  <% if address.codigo_postal.present? %>
                    <p class="text-sm text-gray-900"><strong>CP:</strong> <%= address.codigo_postal %></p>
                  <% end %>
                  <% if address.pais.present? %>
                    <p class="text-sm text-gray-900"><strong>País:</strong> <%= address.pais %></p>
                  <% end %>
                  <% if address.email.present? %>
                    <p class="text-sm text-gray-900"><strong>Email:</strong> <%= address.email %></p>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Modals -->
<!-- Name Edit Modal -->
<div id="name-modal" data-modal-target="modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" data-action="click->modal#closeOnBackdrop">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Editar Nombre</h3>
        <button type="button" data-action="click->modal#close" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <%= form_with(model: @entity, url: entity_path(@entity), method: :patch, class: "space-y-4", id: "name_form") do |form| %>
        <%= hidden_field_tag "modal", "name" %>
        <div>
          <%= form.label :name, "Nombre", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= form.text_field :name, class: "block w-full px-3 py-3 border-2 border-gray-200 focus:border-teal-500 focus:ring-teal-500 rounded-lg focus:ring-2 transition-all duration-200 text-gray-900", placeholder: "Nombre de la entidad" %>
        </div>
        <div class="flex justify-end gap-3">
          <button type="button" data-action="click->modal#close" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition-colors">Cancelar</button>
          <%= form.submit "Guardar", class: "px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Fiscal Profile Edit Modal -->
<div id="fiscal-modal" data-modal-target="modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" data-action="click->modal#closeOnBackdrop">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-medium text-gray-900">Editar Perfil Fiscal</h3>
        <button type="button" data-action="click->modal#close" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <%= form_with(model: @entity, url: entity_path(@entity), method: :patch, class: "space-y-4", id: "fiscal_form") do |form| %>
        <%= hidden_field_tag "modal", "fiscal" %>
        <% if @entity.fiscal_profile %>
          <%= form.fields_for :fiscal_profile do |fp| %>
            <div>
              <%= fp.label :rfc, "RFC", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= fp.text_field :rfc, class: "block w-full px-3 py-3 border-2 border-gray-200 focus:border-teal-500 focus:ring-teal-500 rounded-lg focus:ring-2 transition-all duration-200 text-gray-900", placeholder: "XAXX010101000", maxlength: 13 %>
            </div>
            <div>
              <%= fp.label :razon_social, "Razón Social", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= fp.text_field :razon_social, class: "block w-full px-3 py-3 border-2 border-gray-200 focus:border-teal-500 focus:ring-teal-500 rounded-lg focus:ring-2 transition-all duration-200 text-gray-900", placeholder: "Razón social completa" %>
            </div>
            <div>
              <%= fp.label :regimen, "Régimen Fiscal", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= fp.select :regimen, FiscalProfile::REGIMENES.map { |k, v| ["#{k} - #{v}", k] }, { include_blank: "Seleccionar régimen" }, class: "block w-full px-3 py-3 border-2 border-gray-200 focus:border-teal-500 focus:ring-teal-500 rounded-lg focus:ring-2 transition-all duration-200 text-gray-900" %>
            </div>
            <div>
              <%= fp.label :uso_cfdi, "Uso CFDI", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= fp.select :uso_cfdi, FiscalProfile::USOS_CFDI.map { |k, v| ["#{k} - #{v}", k] }, { include_blank: "Seleccionar uso CFDI" }, class: "block w-full px-3 py-3 border-2 border-gray-200 focus:border-teal-500 focus:ring-teal-500 rounded-lg focus:ring-2 transition-all duration-200 text-gray-900" %>
            </div>
            <div>
              <%= fp.label :forma_pago, "Forma de Pago", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= fp.select :forma_pago, FiscalProfile::FORMAS_PAGO.map { |k, v| ["#{k} - #{v}", k] }, { include_blank: "Seleccionar forma de pago" }, class: "block w-full px-3 py-3 border-2 border-gray-200 focus:border-teal-500 focus:ring-teal-500 rounded-lg focus:ring-2 transition-all duration-200 text-gray-900" %>
            </div>
            <div>
              <%= fp.label :metodo_pago, "Método de Pago", class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= fp.select :metodo_pago, FiscalProfile::METODOS_PAGO.map { |k, v| ["#{k} - #{v}", k] }, { include_blank: "Seleccionar método de pago" }, class: "block w-full px-3 py-3 border-2 border-gray-200 focus:border-teal-500 focus:ring-teal-500 rounded-lg focus:ring-2 transition-all duration-200 text-gray-900" %>
            </div>
          <% end %>
        <% else %>
          <p class="text-sm text-gray-500">No hay perfil fiscal. Se creará automáticamente al guardar.</p>
