    <!-- Customs Agent Patents -->
    <% if policy(entity).manage_patents? && entity.is_customs_agent %>
      <div id="patents_container">
        <div id="patents_section" class="mt-6 bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-4 sm:px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 0 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
                </svg>
                <h2 class="text-base sm:text-lg font-semibold text-gray-900">Patentes Aduanales</h2>
              </div>
              <div class="flex items-center gap-2">
                <button type="button" data-action="click->modal#open" data-modal-id="new-patent-modal" class="p-1 text-green-600 hover:text-green-700 transition-colors" title="Agregar nueva patente">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                  </svg>
                </button>
                <button type="button" data-action="click->modal#open" data-modal-id="patent-modal" class="p-1 text-gray-400 hover:text-teal-600 transition-colors" title="Editar patentes">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
          <% if entity.customs_agent_patents.any? %>
          <div class="px-4 sm:px-6 py-4">
            <div class="flex flex-wrap gap-2">
              <% entity.customs_agent_patents.each do |patent| %>
                <span id="<%= dom_id(patent) %>" class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-medium bg-blue-50 text-blue-700 border border-blue-200">
                  <%= patent.patent_number %>
                  <button type="button" data-action="click->modal#open" data-modal-id="patent-modal" data-patent-id="<%= patent.id %>" class="ml-1 p-1 text-gray-400 hover:text-teal-600 transition-colors" title="Editar patente">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                    </svg>
                  </button>
                  <%= button_to entity_customs_agent_patent_path(entity, patent), method: :delete, class: "ml-1 p-1 text-red-400 hover:text-red-600 transition-colors", title: "Eliminar patente", data: { turbo_confirm: "Are you sure you want to delete this patent?" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                    </svg>
                  <% end %>
                </span>
              <% end %>
            </div>
          </div>
          <% else %>
            <div class="px-4 sm:px-6 py-8 text-center">
              <p class="text-gray-500 text-sm">No hay patentes registradas</p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>