<%
  page_title = current_user.customs_broker? ? "Mis Clientes" : "Entidades"
  page_subtitle = current_user.customs_broker? ? "Gestión de mis clientes" : "Gestión de consolidadores, agencias aduanales, agentes aduanales, forwarders y clientes"
%>
<% content_for :title, page_title %>

<div class="w-full px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
  <!-- Header -->
  <div class="mb-6 sm:mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4 mb-4 sm:mb-6">
      <div class="flex items-center gap-3 sm:gap-4">
        <div class="flex items-center justify-center w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-br from-teal-500 to-cyan-600 rounded-2xl shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 sm:w-7 sm:h-7 text-white">
            <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900"><%= page_title %></h1>
          <p class="text-sm sm:text-base text-gray-500 mt-1"><%= page_subtitle %></p>
        </div>
      </div>
      <div class="flex items-center gap-2">
        <%= link_to new_entity_path, class: "inline-flex items-center justify-center gap-2 px-3 sm:px-4 py-2 bg-gradient-to-r from-teal-500 to-cyan-600 text-white text-sm sm:text-base font-medium rounded-lg shadow-sm hover:from-teal-600 hover:to-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition-all duration-200 w-full sm:w-auto" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          <span class="sm:hidden"><%= current_user.customs_broker? ? "Nuevo" : "Nueva" %></span>
          <span class="hidden sm:inline"><%= current_user.customs_broker? ? "Nuevo Cliente" : "Nueva Entidad" %></span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Filters - Material Design Inspired -->
  <div class="mb-8">
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <!-- Filter Header -->
      <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
        <div class="flex items-center gap-3">
          <div class="flex items-center justify-center w-8 h-8 bg-teal-100 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-teal-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Filtros de búsqueda</h3>
        </div>
      </div>

      <!-- Filter Form -->
      <div class="p-6">
        <%= form_with url: entities_path, method: :get, class: "space-y-6" do |f| %>
          <%= hidden_field_tag :per, @per_page %>

          <div class="<%= current_user.customs_broker? ? 'grid grid-cols-1 lg:grid-cols-2 gap-6' : 'grid grid-cols-1 lg:grid-cols-3 gap-6' %>">
            <!-- Name Filter -->
            <div class="space-y-2">
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Buscar por nombre
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                  </svg>
                </div>
                <%= f.text_field :name, value: params[:name],
                  placeholder: "Ingrese nombre de la entidad...",
                  class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-200 text-gray-900 placeholder-gray-500 shadow-sm" %>
              </div>
            </div>

            <!-- Role Filter - Only show for non-customs brokers -->
            <% unless current_user.customs_broker? %>
            <div class="space-y-2">
              <label for="role" class="block text-sm font-medium text-gray-700 mb-2">
                Filtrar por rol
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 0 0 3 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 0 0 5.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 0 0 9.568 3Z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6Z" />
                  </svg>
                </div>
                <%= f.select :role, options_for_select([
                  ["Todos los roles", ""],
                  ["Consolidador", "consolidator"],
                  ["Agencia Aduanal", "customs_agent"],
                  ["Agente Aduanal", "customs_broker"],
                  ["Forwarder", "forwarder"],
                  ["Cliente", "client"]
                ], params[:role]), {},
                class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition-all duration-200 text-gray-900 shadow-sm appearance-none" %>
                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                  </svg>
                </div>
              </div>
            </div>
            <% end %>

            <!-- Actions -->
            <div class="space-y-2">
              <label class="block text-sm font-medium text-gray-700 mb-2 opacity-0">
                Acciones
              </label>
              <div class="<%= current_user.customs_broker? ? 'flex flex-col sm:flex-row gap-3' : 'flex flex-col sm:flex-row gap-3' %>">
                <%= f.submit "Buscar",
                  class: "flex-1 inline-flex items-center justify-center px-6 py-3 bg-teal-600 text-white text-sm font-semibold rounded-xl hover:bg-teal-700 focus:outline-none focus:ring-4 focus:ring-teal-500/25 active:bg-teal-800 transform active:scale-95 transition-all duration-150 shadow-lg hover:shadow-xl" %>
                <%= link_to entities_path,
                  class: "flex-1 inline-flex items-center justify-center px-6 py-3 bg-white text-gray-700 text-sm font-semibold rounded-xl border-2 border-gray-300 hover:border-gray-400 hover:bg-gray-50 focus:outline-none focus:ring-4 focus:ring-gray-500/25 active:bg-gray-100 transform active:scale-95 transition-all duration-150 shadow-sm hover:shadow-md" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
                  </svg>
                  Limpiar
                <% end %>
              </div>
            </div>
          </div>

          <!-- Active Filters Display -->
          <% if params[:name].present? || params[:role].present? %>
            <div class="pt-4 border-t border-gray-200">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-2 text-sm text-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Filtros activos:</span>
                  <% if params[:name].present? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-teal-100 text-teal-800">
                      Nombre: <%= params[:name] %>
                    </span>
                  <% end %>
                  <% if params[:role].present? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      Rol: <%= {
                        "consolidator" => "Consolidador",
                        "customs_agent" => "Agencia Aduanal",
                        "customs_broker" => "Agente Aduanal",
                        "forwarder" => "Forwarder",
                        "client" => "Cliente"
                      }[params[:role]] %>
                    </span>
                  <% end %>
                </div>
                <%= link_to entities_path(per: @per_page),
                  class: "text-sm text-teal-600 hover:text-teal-800 font-medium inline-flex items-center gap-1" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                  Quitar filtros
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Pagination -->
  <div class="mb-6">
    <%= render 'shared/tailwind_pagination', paginated: @entities %>
  </div>

  <!-- Desktop Table -->
  <div class="hidden md:block bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Nombre</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Roles</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">RFC</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Direcciones</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @entities.each do |entity| %>
            <tr class="hover:bg-gray-50 transition-colors duration-150">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= entity.name %></div>
              </td>
              <td class="px-6 py-4">
                <div class="flex flex-wrap gap-1">
                  <% if entity.is_consolidator %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">Consolidador</span>
                  <% end %>
                  <% if entity.is_customs_agent %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">Agencia Aduanal</span>
                  <% end %>
                  <% if entity.is_customs_broker %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 text-indigo-800">Agente Aduanal</span>
                  <% end %>
                  <% if entity.is_forwarder %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Forwarder</span>
                  <% end %>
                  <% if entity.is_client %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-800">Cliente</span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500"><%= entity.fiscal_profile&.rfc || "N/A" %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500">
                  <% if entity.addresses.any? %>
                    <% address = entity.fiscal_address || entity.addresses.first %>
                    <% if address.codigo_postal.present? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                        CP: <%= address.codigo_postal %>
                      </span>
                    <% else %>
                      <span class="text-gray-400 italic">Sin CP</span>
                    <% end %>
                  <% else %>
                    <span class="text-gray-400 italic">Sin dirección</span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="relative inline-block text-left" data-controller="dropdown">
                  <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none" data-action="click->dropdown#toggle" title="Opciones">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                    </svg>
                  </button>
                  <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-56 rounded-xl shadow-xl bg-white border border-gray-100 z-50 origin-top-right ring-1 ring-black ring-opacity-5 focus:outline-none">
                    <div class="py-2" role="menu">
                      <%= link_to entity, class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        Ver detalles
                      <% end %>

                      <% if policy(entity).update? %>
                        <%= link_to edit_entity_path(entity), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                          </svg>
                          Editar
                        <% end %>
                      <% end %>

                      <% if policy(entity).destroy? %>
                        <div class="border-t border-gray-100 my-1"></div>
                        <%= button_to entity, method: :delete, class: "group flex w-full items-center gap-3 px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 hover:text-red-900 transition-colors", role: "menuitem", data: { turbo_confirm: "¿Estás seguro de eliminar esta entidad?" } do %>
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                          </svg>
                          Eliminar
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Mobile Cards -->
  <div class="md:hidden space-y-4">
    <% @entities.each do |entity| %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="p-4">
          <div class="flex items-start justify-between mb-3">
            <div class="flex-1 min-w-0">
              <h3 class="text-base font-semibold text-gray-900 truncate"><%= entity.name %></h3>
              <% if entity.fiscal_profile&.rfc.present? %>
                <p class="text-sm text-gray-500 mt-1"><%= entity.fiscal_profile.rfc %></p>
              <% end %>
            </div>
          </div>

          <div class="flex flex-wrap gap-1 mb-3">
            <% if entity.is_consolidator %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">Consolidador</span>
            <% end %>
            <% if entity.is_customs_agent %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">Agencia Aduanal</span>
            <% end %>
            <% if entity.is_customs_broker %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 text-indigo-800">Agente Aduanal</span>
            <% end %>
            <% if entity.is_forwarder %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Forwarder</span>
            <% end %>
            <% if entity.is_client %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-800">Cliente</span>
            <% end %>
          </div>

          <% if entity.addresses.any? %>
            <% address = entity.fiscal_address || entity.addresses.first %>
            <div class="mb-3">
              <p class="text-xs font-medium text-gray-500 mb-1">Dirección:</p>
              <p class="text-sm text-gray-700">
                <% if address.codigo_postal.present? %>
                  CP: <%= address.codigo_postal %>
                <% else %>
                  <span class="italic text-gray-400">Sin CP</span>
                <% end %>
              </p>
            </div>
          <% end %>

          <div class="flex justify-end pt-3 border-t border-gray-100">
            <div class="relative inline-block text-left" data-controller="dropdown">
              <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none" data-action="click->dropdown#toggle" title="Opciones">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                </svg>
              </button>
              <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-56 rounded-xl shadow-xl bg-white border border-gray-100 z-50 origin-top-right ring-1 ring-black ring-opacity-5 focus:outline-none">
                <div class="py-2" role="menu">
                  <%= link_to entity, class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    Ver detalles
                  <% end %>

                  <% if policy(entity).update? %>
                    <%= link_to edit_entity_path(entity), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                      Editar
                    <% end %>
                  <% end %>

                  <% if policy(entity).destroy? %>
                    <div class="border-t border-gray-100 my-1"></div>
                    <%= button_to entity, method: :delete, class: "group flex w-full items-center gap-3 px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 hover:text-red-900 transition-colors", role: "menuitem", data: { turbo_confirm: "¿Estás seguro de eliminar esta entidad?" } do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                      Eliminar
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
