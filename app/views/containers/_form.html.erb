<script>
  const initMappedSelect = (selectId, mappingDataAttr, promptText) => {
    const select = document.getElementById(selectId);
    const destinationSelect = document.getElementById('container_destination_port_id');
    const tipoSelect = document.getElementById('container_tipo_maniobra');

    if (!select || select.dataset.initialized === 'true') return;
    select.dataset.initialized = 'true';

    const mapping = JSON.parse(select.dataset[mappingDataAttr] || '{}');
    const union = Array.from(new Set(Object.values(mapping).flat()));

    const normalize = (text) =>
      (text || '')
        .normalize('NFD')
        .replace(/[\u0300-\u036f]/g, '')
        .toLowerCase()
        .trim();

    const findKey = (name) => {
      const normalized = normalize(name);
      return Object.keys(mapping).find((key) => normalized.includes(key));
    };

    const buildOptions = (portName, tipo) => {
      if (tipo !== 'importacion') return union;

      const key = findKey(portName);
      return key ? mapping[key] : union;
    };

    const renderOptions = () => {
      const tipo = tipoSelect?.value || 'importacion';
      const portText = destinationSelect?.selectedOptions?.[0]?.text || destinationSelect?.value || '';
      const currentValue = select.value;

      const options = buildOptions(portText, tipo);

      select.innerHTML = '';

      const prompt = document.createElement('option');
      prompt.value = '';
      prompt.textContent = promptText;
      select.appendChild(prompt);

      options.forEach((optionValue) => {
        const opt = document.createElement('option');
        opt.value = optionValue;
        opt.textContent = optionValue;
        select.appendChild(opt);
      });

      if (currentValue && !options.includes(currentValue)) {
        const currentOpt = document.createElement('option');
        currentOpt.value = currentValue;
        currentOpt.textContent = `${currentValue} (actual)`;
        select.appendChild(currentOpt);
      }

      select.value = currentValue || '';
    };

    destinationSelect?.addEventListener('change', renderOptions);
    tipoSelect?.addEventListener('change', renderOptions);

    renderOptions();
  };

  const initRecintoAndAlmacenOptions = () => {
    initMappedSelect('container_recinto', 'recintoMapping', 'Seleccione un recinto');
    initMappedSelect('container_almacen', 'almacenMapping', 'Seleccione un almacén');
  };

  document.addEventListener('turbo:load', initRecintoAndAlmacenOptions);
  document.addEventListener('DOMContentLoaded', initRecintoAndAlmacenOptions);
</script>

<script>
  const initContainerServices = () => {
    const addServiceBtn = document.getElementById('add-service');
    const servicesContainer = document.getElementById('services-container');
    const serviceTemplate = document.getElementById('service-template');

    if (!servicesContainer || servicesContainer.dataset.initialized === 'true') return;
    servicesContainer.dataset.initialized = 'true';

    if (addServiceBtn && serviceTemplate) {
      addServiceBtn.addEventListener('click', () => {
        const newService = serviceTemplate.innerHTML.replace(/NEW_RECORD/g, Date.now());
        servicesContainer.insertAdjacentHTML('afterbegin', newService);
        const newCard = servicesContainer.firstElementChild;
        if (newCard) {
          newCard.classList.add('service-card-appear');
          newCard.addEventListener('animationend', () => newCard.classList.remove('service-card-appear'), { once: true });
        }
      });
    }

    // Delegación de eventos para botones de eliminar
    servicesContainer.addEventListener('click', (e) => {
      if (e.target.closest('.remove-service')) {
        e.preventDefault();
        const serviceCard = e.target.closest('.service-card');
        const isPersisted = serviceCard?.dataset.servicePersisted === 'true';
        if (isPersisted) {
          const confirmed = window.confirm('¿Eliminar este servicio? Los cambios se guardarán al actualizar el contenedor.');
          if (!confirmed) return;
        }
        const destroyInput = serviceCard.querySelector('input[name*="_destroy"]');

        if (destroyInput) {
          destroyInput.value = '1';
          serviceCard.style.display = 'none';
        } else {
          serviceCard.remove();
        }
      }
    });
  };

  document.addEventListener('turbo:load', initContainerServices);
  document.addEventListener('DOMContentLoaded', initContainerServices);
</script>
