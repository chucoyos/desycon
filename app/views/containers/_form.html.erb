<%= form_with(model: container, class: "space-y-6") do |form| %>
  
  <% if container.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4 shadow-sm">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-semibold text-red-800">
            <%= pluralize(container.errors.count, "error") %> impidieron guardar este contenedor:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% container.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Información General -->
  <div class="bg-white shadow-md rounded-xl p-5 sm:p-6 border border-gray-100">
    <div class="flex items-center gap-3 mb-5">
      <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-blue-600 shadow-sm">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <h2 class="text-xl font-bold text-gray-900">Información General</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-5">
      <div>
        <%= form.label :number, "Número *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.text_field :number, autofocus: true, required: true, maxlength: 11, placeholder: "Ej: WHSU5349856", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{container.errors[:number].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}" %>
        <% if container.errors[:number].any? %>
          <p class="mt-1 text-sm text-red-600"><%= container.errors[:number].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :status, "Status *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.select :status,
            Container.statuses.keys.map { |s| [status_nombre(s), s] },
            { prompt: "Seleccione estatus", selected: (container.status.presence || 'activo') },
            class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{container.errors[:status].any? ? 'border-red-300' : ''}",
            required: true %>
        <% if container.errors[:status].any? %>
          <p class="mt-1 text-sm text-red-600"><%= container.errors[:status].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :tipo_maniobra, "Tipo de Maniobra *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.select :tipo_maniobra,
            Container.tipo_maniobras.keys.map { |t| [tipo_maniobra_nombre(t), t] },
            { prompt: "Seleccione tipo de maniobra", selected: (container.tipo_maniobra.presence || 'importacion') },
            class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{container.errors[:tipo_maniobra].any? ? 'border-red-300' : ''}",
            required: true %>
        <% if container.errors[:tipo_maniobra].any? %>
          <p class="mt-1 text-sm text-red-600"><%= container.errors[:tipo_maniobra].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :type_size, "Tipo-tamaño *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.text_field :type_size,
              maxlength: 4,
              placeholder: "Ej: 40HC, 20DV",
              class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{container.errors[:type_size].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}",
              required: true %>
        <% if container.errors[:type_size].any? %>
          <p class="mt-1 text-sm text-red-600"><%= container.errors[:type_size].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :consolidator_entity_id, "Consolidador *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.collection_select :consolidator_entity_id, @consolidators, :id, :name, { prompt: "Seleccione un consolidador" }, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{container.errors[:consolidator_entity].any? ? 'border-red-300' : ''}", required: true %>
        <% if container.errors[:consolidator_entity].any? %>
          <p class="mt-1 text-sm text-red-600"><%= container.errors[:consolidator_entity].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :shipping_line_id, "Línea Naviera *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.collection_select :shipping_line_id, @shipping_lines, :id, :name, { prompt: "Seleccione una línea naviera" }, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{container.errors[:shipping_line].any? ? 'border-red-300' : ''}", required: true %>
        <% if container.errors[:shipping_line].any? %>
          <p class="mt-1 text-sm text-red-600"><%= container.errors[:shipping_line].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :vessel_id, "Buque *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.collection_select :vessel_id, @vessels, :id, :name, { prompt: "Seleccione un buque" }, { class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200", required: true } %>
      </div>
    </div>
  </div>

  <!-- Detalles del Envío -->
  <div class="bg-white shadow-md rounded-xl p-5 sm:p-6 border border-gray-100">
    <div class="flex items-center gap-3 mb-5">
      <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-green-600 shadow-sm">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"/>
        </svg>
      </div>
      <h2 class="text-xl font-bold text-gray-900">Detalles del Envío</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-5">
      <div>
        <%= form.label :bl_master, "BL Master *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.text_field :bl_master, maxlength: 20, placeholder: "Ej: BL-0001", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 font-mono" %>
      </div>

      <div>
        <%= form.label :voyage_id, "Viaje *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <% voyage_options = @voyages.map do |voyage|
             [
               "#{voyage.viaje} — #{voyage.destination_port&.display_name || 'Sin destino'}",
               voyage.id,
               { data: { destination_port: voyage.destination_port&.display_name } }
             ]
           end %>
        <%= form.select :voyage_id,
              options_for_select(voyage_options, container.voyage_id),
              { prompt: "Seleccione un viaje" },
              class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200",
              required: true,
              data: {
                voyages_url: voyages_path(format: :json),
                vessel_field: "container_vessel_id"
              } %>
      </div>

      <div>
        <%= form.label :origin_port_id, "Puerto de origen *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.collection_select :origin_port_id, @ports, :id, :display_name, { prompt: "Seleccione origen" }, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200", required: true %>
      </div>

      <div>
        <%= form.label :recinto, "Recinto *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.select :recinto,
              recinto_options_for_select(container),
              { prompt: "Seleccione un recinto" },
              class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200",
              required: true,
              data: {
                recinto_mapping: Container::RECINTO_OPTIONS_BY_DESTINATION.to_json,
                voyage_field: "container_voyage_id",
                tipo_maniobra_field: "container_tipo_maniobra"
              } %>
      </div>

      <div>
        <%= form.label :fecha_transferencia, "Fecha de Transferencia", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.datetime_field :fecha_transferencia, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
      </div>

      <div>
        <%= form.label :almacen, "Almacén", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.select :almacen,
              almacen_options_for_select(container),
              { prompt: "Seleccione un almacén" },
              class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200",
              data: {
                almacen_mapping: Container::ALMACEN_OPTIONS_BY_DESTINATION.to_json,
                voyage_field: "container_voyage_id",
                tipo_maniobra_field: "container_tipo_maniobra"
              } %>
      </div>

      <div>
        <%= form.label :archivo_nr, "Referencia *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.text_field :archivo_nr, maxlength: 20, placeholder: "Ej: NR-0001", required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 font-mono" %>
      </div>

      <div>
        <%= form.label :sello, "Sello *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.text_field :sello, maxlength: 20, placeholder: "Ej: SEAL12345", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 font-mono", required: true %>
      </div>

      <div>
        <%= form.label :ejecutivo, "Ejecutivo *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.text_field :ejecutivo, maxlength: 30, placeholder: "Ej: Juan Pérez", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 font-mono", required: true %>
      </div>

      <div>
        <%= form.label :fecha_descarga, "Fecha de Descarga", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.date_field :fecha_descarga, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
      </div>

      <div>
        <%= form.label :fecha_desconsolidacion, "Fecha de Desconsolidación", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.date_field :fecha_desconsolidacion, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
      </div>

      <div>
        <%= form.label :fecha_revalidacion_bl_master, "Fecha de Revalidación BL Master", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.date_field :fecha_revalidacion_bl_master, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
      </div>
    </div>
  </div>

  <!-- Documentos -->
  <div class="bg-white shadow-md rounded-xl p-5 sm:p-6 border border-gray-100">
    <div class="flex items-center gap-3 mb-5">
      <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-orange-600 shadow-sm">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
        </svg>
      </div>
      <h2 class="text-xl font-bold text-gray-900">Documentos</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-5">
      <div>
        <%= form.label :bl_master_documento, "BL Master (PDF)", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <div class="relative">
          <%= form.file_field :bl_master_documento, accept: "application/pdf", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
        </div>
        <% if container.persisted? && container.bl_master_documento.attached? %>
          <p class="mt-2 text-sm text-gray-600 flex items-center gap-2">
            <svg class="w-4 h-4 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="truncate" title="<%= container.bl_master_documento.filename %>">
              Archivo actual: <%= container.bl_master_documento.filename %>
            </span>
          </p>
        <% end %>
      </div>

      <div>
        <%= form.label :tarja_documento, "Tarja (PDF)", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <div class="relative">
          <%= form.file_field :tarja_documento, accept: "application/pdf", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100" %>
        </div>
        <% if container.persisted? && container.tarja_documento.attached? %>
          <p class="mt-2 text-sm text-gray-600 flex items-center gap-2">
            <svg class="w-4 h-4 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="truncate" title="<%= container.tarja_documento.filename %>">
              Archivo actual: <%= container.tarja_documento.filename %>
            </span>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Servicios (Nested Form) -->
  <div class="bg-white shadow-md rounded-xl p-5 sm:p-6 border border-gray-100">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-0 mb-5">
      <div class="flex items-center gap-3">
        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-purple-600 shadow-sm">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
        </div>
        <h2 class="text-xl font-bold text-gray-900">Servicios</h2>
      </div>
      <button type="button" id="add-service" class="inline-flex items-center justify-center gap-2 px-4 py-2 rounded-lg text-sm font-medium text-white bg-purple-600 hover:bg-purple-700 shadow-sm hover:shadow-md transition-all duration-200 w-full sm:w-auto">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Agregar Servicio
      </button>
    </div>

    <div id="services-container" class="space-y-4">
      <%= form.fields_for :container_services do |service_form| %>
        <%= render 'service_fields', f: service_form %>
      <% end %>
    </div>

    <div id="service-template" class="hidden">
      <%= form.fields_for :container_services, ContainerService.new(billed_to_entity_id: container.consolidator_entity_id || container.consolidator_id), child_index: 'NEW_RECORD' do |service_form| %>
        <%= render 'service_fields', f: service_form %>
      <% end %>
    </div>
  </div>

  <!-- Botones de acción flotantes -->
  <div class="sticky bottom-4 sm:bottom-6 mt-8 flex flex-wrap justify-end gap-3 px-4 sm:px-5 py-3 sm:py-4 bg-transparent w-full z-20">
    <%= link_to "Cancelar", container.persisted? ? container : containers_path, class: "cursor-pointer inline-flex items-center justify-center gap-2 px-5 py-2.5 rounded-full border border-slate-200 bg-white text-slate-700 text-sm font-semibold hover:bg-slate-50 transition" %>
    <%= form.submit(container.persisted? ? "Actualizar Contenedor" : "Crear Contenedor", class: "cursor-pointer inline-flex items-center justify-center gap-2 px-5 py-2.5 rounded-full bg-gradient-to-r from-blue-600 to-blue-700 text-white text-sm font-semibold shadow-md shadow-indigo-100/60 hover:from-blue-700 hover:to-blue-800 transition") %>
  </div>
<% end %>

<script>
  const normalize = (text) =>
    (text || '')
      .normalize('NFD')
      .replace(/[\u0300-\u036f]/g, '')
      .toLowerCase()
      .trim();

  const getDestinationPortName = (voyageSelect) => voyageSelect?.selectedOptions?.[0]?.dataset.destinationPort || '';

  const buildMappedSelect = (selectId, mappingDataAttr, promptText) => {
    const select = document.getElementById(selectId);
    const voyageSelect = document.getElementById('container_voyage_id');
    const tipoSelect = document.getElementById('container_tipo_maniobra');

    if (!select || select.dataset.initialized === 'true') return () => {};
    select.dataset.initialized = 'true';

    const mapping = JSON.parse(select.dataset[mappingDataAttr] || '{}');
    const union = Array.from(new Set(Object.values(mapping).flat()));

    const findKey = (name) => {
      const normalized = normalize(name);
      return Object.keys(mapping).find((key) => normalized.includes(key));
    };

    const renderOptions = () => {
      const tipo = tipoSelect?.value || 'importacion';
      const destinationName = getDestinationPortName(voyageSelect);
      const currentValue = select.value;

      const options = tipo === 'importacion'
        ? (findKey(destinationName) ? mapping[findKey(destinationName)] : union)
        : union;

      select.innerHTML = '';

      const prompt = document.createElement('option');
      prompt.value = '';
      prompt.textContent = promptText;
      select.appendChild(prompt);

      options.forEach((optionValue) => {
        const opt = document.createElement('option');
        opt.value = optionValue;
        opt.textContent = optionValue;
        select.appendChild(opt);
      });

      if (currentValue && !options.includes(currentValue)) {
        const currentOpt = document.createElement('option');
        currentOpt.value = currentValue;
        currentOpt.textContent = `${currentValue} (actual)`;
        select.appendChild(currentOpt);
      }

      select.value = currentValue || '';
    };

    voyageSelect?.addEventListener('change', renderOptions);
    tipoSelect?.addEventListener('change', renderOptions);

    renderOptions();

    return renderOptions;
  };

  const initVoyageLoading = () => {
    const voyageSelect = document.getElementById('container_voyage_id');
    if (!voyageSelect || voyageSelect.dataset.initialized === 'true') return;

    const vesselSelectId = voyageSelect.dataset.vesselField;
    const vesselSelect = vesselSelectId ? document.getElementById(vesselSelectId) : null;
    const voyagesUrl = voyageSelect.dataset.voyagesUrl;

    voyageSelect.dataset.initialized = 'true';

    const setVoyageOptions = (voyages) => {
      const currentValue = voyageSelect.value;
      voyageSelect.innerHTML = '';

      const prompt = document.createElement('option');
      prompt.value = '';
      prompt.textContent = 'Seleccione un viaje';
      voyageSelect.appendChild(prompt);

      voyages.forEach((voyage) => {
        const opt = document.createElement('option');
        opt.value = voyage.id;
        const destinationName = voyage.destination_port_display || voyage.destination_port_name || voyage.destination_port || 'Sin destino';
        opt.textContent = `${voyage.viaje} —> ${destinationName}`;
        opt.dataset.destinationPort = destinationName;
        voyageSelect.appendChild(opt);
      });

      if (!voyages.some((voyage) => String(voyage.id) === currentValue)) {
        voyageSelect.value = '';
      } else {
        voyageSelect.value = currentValue;
      }

      voyageSelect.dispatchEvent(new Event('change'));
    };

    const fetchVoyages = async (vesselId) => {
      if (!voyagesUrl || !vesselId) {
        setVoyageOptions([]);
        return;
      }

      try {
        const response = await fetch(`${voyagesUrl}?vessel_id=${vesselId}`);
        if (!response.ok) throw new Error('Error al cargar viajes');
        const data = await response.json();
        setVoyageOptions(data || []);
      } catch (error) {
        console.error(error);
        setVoyageOptions([]);
      }
    };

    vesselSelect?.addEventListener('change', (event) => {
      fetchVoyages(event.target.value);
    });
  };

  const initRecintoAndAlmacenOptions = () => {
    const renderRecinto = buildMappedSelect('container_recinto', 'recintoMapping', 'Seleccione un recinto');
    const renderAlmacen = buildMappedSelect('container_almacen', 'almacenMapping', 'Seleccione un almacén');
  };

  const initContainerForm = () => {
