<%= form_with(model: container, class: "space-y-6") do |form| %>
  
  <% if container.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4 shadow-sm">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-semibold text-red-800">
            <%= pluralize(container.errors.count, "error") %> impidieron guardar este contenedor:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% container.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Información General -->
  <div class="bg-white shadow-md rounded-xl p-5 sm:p-6 border border-gray-100">
    <div class="flex items-center gap-3 mb-5">
      <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-blue-600 shadow-sm">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <h2 class="text-xl font-bold text-gray-900">Información General</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-5">
      <div>
        <%= form.label :number, "Número *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.text_field :number, autofocus: true, required: true, placeholder: "CONT001", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{container.errors[:number].any? ? 'border-red-300 focus:ring-red-500 focus:border-red-500' : ''}" %>
        <% if container.errors[:number].any? %>
          <p class="mt-1 text-sm text-red-600"><%= container.errors[:number].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :status, "Status *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.select :status,
            Container.statuses.keys.map { |s| [status_nombre(s), s] },
            { prompt: "Seleccione estatus", selected: (container.status.presence || 'activo') },
            class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{container.errors[:status].any? ? 'border-red-300' : ''}",
            required: true %>
        <% if container.errors[:status].any? %>
          <p class="mt-1 text-sm text-red-600"><%= container.errors[:status].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :tipo_maniobra, "Tipo de Maniobra *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.select :tipo_maniobra,
            Container.tipo_maniobras.keys.map { |t| [tipo_maniobra_nombre(t), t] },
            { prompt: "Seleccione tipo de maniobra", selected: (container.tipo_maniobra.presence || 'importacion') },
            class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{container.errors[:tipo_maniobra].any? ? 'border-red-300' : ''}",
            required: true %>
        <% if container.errors[:tipo_maniobra].any? %>
          <p class="mt-1 text-sm text-red-600"><%= container.errors[:tipo_maniobra].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :container_type, "Tipo de Contenedor *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.select :container_type,
            Container.container_types.keys.map { |t| [container_type_nombre(t), t] },
          { prompt: "Seleccione tipo de contenedor" },
            class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{container.errors[:container_type].any? ? 'border-red-300' : ''}",
            required: true %>
        <% if container.errors[:container_type].any? %>
          <p class="mt-1 text-sm text-red-600"><%= container.errors[:container_type].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :size_ft, "Tamaño *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.select :size_ft,
            Container.size_fts.map { |key, value| [size_ft_label(value), key] },
          { prompt: "Seleccione tamaño" },
            class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 #{container.errors[:size_ft].any? ? 'border-red-300' : ''}",
            required: true %>
