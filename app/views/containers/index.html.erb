<% content_for :title, "Contenedores" %>

<div class="w-full px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <div class="flex items-start gap-4">
        <div class="flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
        </div>
        <div>
          <h1 class="font-bold text-3xl text-gray-900">Contenedores</h1>
          <p class="text-sm text-gray-500 mt-1">Gestión y seguimiento de contenedores de importación y exportación</p>
        </div>
      </div>
      <%= link_to new_container_path, class: "inline-flex items-center justify-center px-5 py-2.5 rounded-lg bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white shadow-md hover:shadow-lg transition-all duration-200 text-sm font-semibold" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Nuevo Contenedor
      <% end %>
    </div>
  </div>

  <!-- Filtros -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-5 mb-6">
    <div class="flex items-center gap-2 mb-4">
      <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
      </svg>
      <h2 class="text-sm font-semibold text-gray-700 uppercase tracking-wider">Filtros de Búsqueda</h2>
    </div>
    <%= form_with url: containers_path, method: :get, class: "w-full" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div>
        <label class="block text-xs font-medium text-gray-600 mb-1">Buscar</label>
        <%= f.text_field :search, value: params[:search], placeholder: "Número de contenedor...", class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all" %>
      </div>
      
      <div>
        <label class="block text-xs font-medium text-gray-600 mb-1">Status</label>
        <%= f.select :status, options_for_select([['Todos los status', '']] + Container.statuses.keys.map { |s| [status_nombre(s), s] }, params[:status]), {}, class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all" %>
      </div>
      
      <div>
        <label class="block text-xs font-medium text-gray-600 mb-1">Tipo de Maniobra</label>
        <%= f.select :tipo_maniobra, options_for_select([['Todos los tipos', '']] + Container.tipo_maniobras.keys.map { |t| [tipo_maniobra_nombre(t), t] }, params[:tipo_maniobra]), {}, class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all" %>
      </div>

      <div class="md:col-span-2">
        <label class="block text-xs font-medium text-gray-600 mb-1">Rango de fechas</label>
        <div class="grid grid-cols-2 gap-2">
          <%= f.date_field :start_date, value: @selected_start_date, class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all" %>
          <%= f.date_field :end_date, value: @selected_end_date, class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all" %>
        </div>
      </div>
      
      <div class="flex gap-2 items-end">
        <%= f.submit "Filtrar", class: "flex-1 px-4 py-2.5 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm font-semibold transition-all shadow-sm hover:shadow-md cursor-pointer" %>
        <%= link_to "Limpiar", containers_path, class: "px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition-colors" %>
      </div>
      </div>

      <% active_filters_present = params[:search].present? ||
        params[:status].present? ||
        params[:tipo_maniobra].present? ||
        params[:consolidator_id].present? ||
        params[:shipping_line_id].present? ||
        @selected_start_date.present? ||
        @selected_end_date.present? %>

      <% if active_filters_present %>
        <div class="pt-4 mt-4 border-t border-gray-200">
          <div class="flex items-center justify-between gap-3 flex-wrap">
            <div class="flex items-center gap-2 text-sm text-gray-600 flex-wrap">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium">Filtros activos:</span>

              <% if params[:search].present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                  Búsqueda: <%= params[:search] %>
                </span>
              <% end %>

              <% if params[:status].present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                  Estatus: <%= status_nombre(params[:status]) %>
                </span>
              <% end %>

              <% if params[:tipo_maniobra].present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-teal-100 text-teal-800">
                  Maniobra: <%= tipo_maniobra_nombre(params[:tipo_maniobra]) %>
                </span>
              <% end %>

              <% if @selected_start_date.present? || @selected_end_date.present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  Fecha: <%= [@selected_start_date, @selected_end_date].compact.join(" - ") %>
                </span>
              <% end %>
            </div>

            <%= link_to containers_path,
              class: "text-sm text-blue-600 hover:text-blue-800 font-medium inline-flex items-center gap-1" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
              Quitar filtros
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="mb-6">
    <%= render 'shared/tailwind_pagination', paginated: @containers %>
  </div>

  <!-- Vista de tabla para desktop -->
  <div class="hidden lg:block bg-white shadow-sm rounded-xl overflow-visible border border-gray-100">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gradient-to-r from-gray-50 to-white">
        <tr>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Número</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Status</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Maniobra</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Consolidador</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Línea Naviera</th>
          <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        <% if @containers.any? %>
          <% @containers.each do |container| %>
            <tr class="hover:bg-gray-50 transition-colors duration-150">
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="text-sm font-mono font-semibold text-gray-900"><%= container.number %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium border <%= status_badge_class(container.status) %>">
                  <%= status_icon(container.status) %>
                  <%= status_nombre(container.status) %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium border <%= tipo_maniobra_badge_class(container.tipo_maniobra) %>">
                  <%= tipo_maniobra_icon(container.tipo_maniobra) %>
                  <%= tipo_maniobra_nombre(container.tipo_maniobra) %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                <%= container.consolidator_entity&.name || '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                <%= container.shipping_line&.iso_code || "Sin línea" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="relative inline-block text-left">
                  <button type="button" class="cursor-pointer inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-50 text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500" id="dropdownMenuButton-<%= container.id %>" aria-expanded="false" aria-haspopup="true" onclick="document.getElementById('dropdown-menu-<%= container.id %>').classList.toggle('hidden')">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <circle cx="6" cy="12" r="1.5" />
                      <circle cx="12" cy="12" r="1.5" />
                      <circle cx="18" cy="12" r="1.5" />
                    </svg>
                  </button>
                  <div id="dropdown-menu-<%= container.id %>" class="hidden absolute right-0 z-10 mt-2 w-44 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
                    <div class="py-1">
                      <% lifecycle_action = container_lifecycle_action(container) %>
                      <%= link_to container, class: "flex items-center gap-2 px-4 py-2 text-sm text-blue-700 hover:bg-blue-50 transition-colors duration-150", title: "Ver" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                        Ver
                      <% end %>
                      <%= link_to edit_container_path(container), class: "flex items-center gap-2 px-4 py-2 text-sm text-amber-700 hover:bg-amber-50 transition-colors duration-150", title: "Editar" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                        </svg>
                        Editar
                      <% end %>
                      <% if lifecycle_action.present? %>
                        <%= link_to lifecycle_action[:path], data: { turbo_frame: "container_lifecycle_modal" }, class: "flex items-center gap-2 px-4 py-2 text-sm text-indigo-700 hover:bg-indigo-50 transition-colors duration-150", title: lifecycle_action[:label] do %>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                          </svg>
                          <%= lifecycle_action[:label] %>
                        <% end %>
                      <% end %>
                      <%= button_to container, method: :delete, class: "flex items-center gap-2 px-4 py-2 text-sm text-red-700 hover:bg-red-50 transition-colors duration-150 w-full text-left", title: "Eliminar", data: { turbo_confirm: "¿Estás seguro de eliminar este contenedor?" } do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                        Eliminar
                      <% end %>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 py-12 text-center">
              <div class="flex flex-col items-center">
                <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                </svg>
                <p class="text-gray-500 text-lg font-medium">No hay contenedores registrados</p>
                <p class="text-gray-400 text-sm mt-1">Comienza creando tu primer contenedor</p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Vista de tarjetas para móvil/tablet -->
  <div class="lg:hidden space-y-4">
    <% if @containers.any? %>
      <% @containers.each do |container| %>
        <div class="bg-white shadow-sm rounded-xl p-4 border border-gray-100 hover:shadow-md transition-shadow duration-200">
          <div class="flex justify-between items-start mb-3">
            <div class="flex-1">
              <h3 class="text-lg font-mono font-bold text-gray-900"><%= container.number %></h3>
              <div class="flex flex-wrap gap-2 mt-2">
                <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium border <%= status_badge_class(container.status) %>">
                  <%= status_icon(container.status) %>
                  <%= status_nombre(container.status) %>
                </span>
                <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium border <%= tipo_maniobra_badge_class(container.tipo_maniobra) %>">
                  <%= tipo_maniobra_icon(container.tipo_maniobra) %>
                  <%= tipo_maniobra_nombre(container.tipo_maniobra) %>
                </span>
              </div>
            </div>
          </div>
          
          <div class="space-y-2 text-sm mb-3">
            <div class="flex items-center text-gray-600">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              <span class="font-medium"><%= container.consolidator_entity&.name || '-' %></span>
            </div>
            <div class="flex items-center text-gray-600">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
              <span><%= container.shipping_line&.iso_code || "Sin línea" %></span>
            </div>
          </div>
          
          <div class="flex justify-end gap-2 pt-3 border-t border-gray-100">
            <div class="relative inline-block text-left" data-controller="dropdown">
              <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none" data-action="click->dropdown#toggle" title="Opciones">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                </svg>
              </button>
              <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-56 rounded-xl shadow-xl bg-white border border-gray-100 z-50 origin-top-right ring-1 ring-black ring-opacity-5 focus:outline-none">
                <div class="py-2" role="menu">
                  <% lifecycle_action = container_lifecycle_action(container) %>
                  <%= link_to container, class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    Ver
                  <% end %>
                  <%= link_to edit_container_path(container), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Editar
                  <% end %>
                  <% if lifecycle_action.present? %>
                    <%= link_to lifecycle_action[:path], data: { turbo_frame: "container_lifecycle_modal" }, class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                      </svg>
                      <%= lifecycle_action[:label] %>
                    <% end %>
                  <% end %>
                  <%= button_to container, method: :delete, class: "group flex w-full items-center gap-3 px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 hover:text-red-900 transition-colors", role: "menuitem", data: { turbo_confirm: "¿Estás seguro?" } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                    Eliminar
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white shadow-sm rounded-xl p-12 text-center border border-gray-100">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        <p class="text-gray-500 text-lg font-medium">No hay contenedores registrados</p>
        <p class="text-gray-400 text-sm mt-1">Comienza creando tu primer contenedor</p>
      </div>
    <% end %>
  </div>

  <!-- Pagination inferior -->
  <div class="mt-6">
    <%= render 'shared/tailwind_pagination', paginated: @containers %>
  </div>
</div>

<turbo-frame id="container_lifecycle_modal"></turbo-frame>
