<% content_for :title, "Bienvenido a DESYCON" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 px-4 sm:px-6 lg:px-8 py-12">
  <div class="max-w-6xl w-full">
    <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-100">
      <div class="grid grid-cols-1 lg:grid-cols-2">
        <!-- Hero Section - Lado Izquierdo -->
        <div class="bg-gradient-to-br from-blue-600 via-blue-700 to-indigo-800 p-8 sm:p-12 lg:p-16 flex flex-col justify-center relative overflow-hidden">
          <!-- Decorative elements -->
          <div class="absolute top-0 right-0 w-64 h-64 bg-blue-500 rounded-full opacity-20 -mr-32 -mt-32"></div>
          <div class="absolute bottom-0 left-0 w-48 h-48 bg-indigo-500 rounded-full opacity-20 -ml-24 -mb-24"></div>
          
          <div class="text-white relative z-10">
            <div class="mb-8">
              <div class="inline-flex items-center gap-3 mb-6">
                <div class="w-16 h-16 rounded-2xl bg-white/10 backdrop-blur-sm flex items-center justify-center shadow-lg">
                  <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                  </svg>
                </div>
                <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold leading-tight">
                  DESYCON
                </h1>
              </div>
              <div class="h-1.5 w-24 bg-gradient-to-r from-yellow-400 to-amber-500 rounded-full shadow-lg"></div>
            </div>
            
            <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold mb-4 leading-tight">
              Sistema de Gestión de Carga LCL
            </h2>
            
            <p class="text-lg sm:text-xl text-blue-100 mb-10 leading-relaxed max-w-md">
              Plataforma integral para la administración de revalidaciones y asignación electrónica de mercancía.
            </p>
            
            <div class="space-y-5">
              <div class="flex items-start gap-4 group">
                <div class="w-10 h-10 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center flex-shrink-0 group-hover:bg-white/20 transition-all duration-200">
                  <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-white font-semibold mb-1">Gestión Eficiente</h3>
                  <p class="text-blue-100 text-sm">Control completo de contenedores y partidas</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4 group">
                <div class="w-10 h-10 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center flex-shrink-0 group-hover:bg-white/20 transition-all duration-200">
                  <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-white font-semibold mb-1">Proceso Digital</h3>
                  <p class="text-blue-100 text-sm">Revalidación completamente digitalizada</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4 group">
                <div class="w-10 h-10 rounded-xl bg-white/10 backdrop-blur-sm flex items-center justify-center flex-shrink-0 group-hover:bg-white/20 transition-all duration-200">
                  <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-white font-semibold mb-1">Portal Aduanal</h3>
                  <p class="text-blue-100 text-sm">Acceso para agentes aduanales certificados</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Formulario de Login - Lado Derecho -->
        <div class="p-8 sm:p-12 lg:p-16 flex flex-col justify-center bg-gradient-to-br from-white to-gray-50">
          <div class="w-full max-w-md mx-auto">
            <div class="mb-10">
              <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-gradient-to-br from-blue-600 to-blue-700 shadow-lg mb-4">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              </div>
              <h3 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">Iniciar Sesión</h3>
              <p class="text-gray-600 text-lg">Accede a tu cuenta para continuar</p>
            </div>

            <%= form_for(User.new, url: user_session_path, html: { class: "space-y-6" }) do |f| %>
              <div>
                <%= f.label :email, "Correo Electrónico", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <div class="relative group">
                  <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400 group-focus-within:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                    </svg>
                  </div>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                      class: "block w-full pl-12 pr-4 py-3.5 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-gray-900 placeholder-gray-400 hover:border-gray-300",
                      placeholder: "correo@ejemplo.com" %>
                </div>
              </div>

              <div>
                <%= f.label :password, "Contraseña", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <div class="relative group">
                  <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400 group-focus-within:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                  </div>
                  <%= f.password_field :password, autocomplete: "current-password",
                      class: "block w-full pl-12 pr-4 py-3.5 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-gray-900 placeholder-gray-400 hover:border-gray-300",
                      placeholder: "••••••••" %>
                </div>
              </div>

              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-2 focus:ring-blue-500 border-gray-300 rounded transition-all" %>
                <%= f.label :remember_me, "Recordarme", class: "ml-3 block text-sm font-medium text-gray-700" %>
              </div>

              <div>
                <%= f.submit "Iniciar Sesión", class: "w-full flex justify-center items-center gap-2 py-3.5 px-4 border border-transparent rounded-xl shadow-lg text-base font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 cursor-pointer transform hover:scale-[1.02]" %>
              </div>
            <% end %>

            <div class="mt-8">
              <div class="relative">
                <div class="absolute inset-0 flex items-center">
                  <div class="w-full border-t-2 border-gray-200"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                  <span class="px-4 bg-gradient-to-r from-white via-gray-50 to-white text-gray-500 font-medium">¿Necesitas ayuda?</span>
                </div>
              </div>

              <div class="mt-6 text-center">
                <%= link_to new_user_password_path, class: "inline-flex items-center gap-2 text-sm font-semibold text-blue-600 hover:text-blue-700 transition-colors group" do %>
                  <svg class="w-4 h-4 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                  </svg>
                  ¿Olvidaste tu contraseña?
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Footer -->
    <div class="mt-10 text-center">
      <p class="text-sm text-gray-600 font-medium">
        © <%= Time.current.year %> DESYCON. Todos los derechos reservados.
      </p>
      <p class="text-xs text-gray-500 mt-2">Sistema de Gestión de Carga LCL v1.0</p>
    </div>
  </div>
</div>
