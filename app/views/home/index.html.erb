<% content_for :title, "Bienvenido a DESYCON" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl w-full">
    <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
      <div class="grid grid-cols-1 lg:grid-cols-2">
        <!-- Hero Section - Lado Izquierdo -->
        <div class="bg-gradient-to-br from-blue-600 to-indigo-700 p-8 sm:p-12 lg:p-16 flex flex-col justify-center">
          <div class="text-white">
            <div class="mb-8">
              <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-4 leading-tight">
                DESYCON
              </h1>
              <div class="h-1 w-20 bg-yellow-400 rounded-full mb-6"></div>
            </div>
            
            <h2 class="text-2xl sm:text-3xl font-semibold mb-6">
              Sistema de Gestión de Carga LCL
            </h2>
            
            <p class="text-lg sm:text-xl text-blue-100 mb-8 leading-relaxed">
              Plataforma integral para la administración de revalidaciones y asignación electrónica de mercancía.
            </p>
            
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-yellow-400 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-blue-50">Gestión eficiente de contenedores y partidas</span>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-yellow-400 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-blue-50">Proceso de revalidación digitalizado</span>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-yellow-400 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-blue-50">Portal para agentes aduanales</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Formulario de Login - Lado Derecho -->
        <div class="p-8 sm:p-12 lg:p-16 flex flex-col justify-center">
          <div class="w-full max-w-md mx-auto">
            <div class="mb-8">
              <h3 class="text-3xl font-bold text-gray-900 mb-2">Iniciar Sesión</h3>
              <p class="text-gray-600">Accede a tu cuenta para continuar</p>
            </div>

            <%= form_for(User.new, url: user_session_path, html: { class: "space-y-6" }) do |f| %>
              <div>
                <%= f.label :email, "Correo Electrónico", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                    </svg>
                  </div>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                      class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200",
                      placeholder: "correo@ejemplo.com" %>
                </div>
              </div>

              <div>
                <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                  </div>
                  <%= f.password_field :password, autocomplete: "current-password",
                      class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200",
                      placeholder: "••••••••" %>
                </div>
              </div>

              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                <%= f.label :remember_me, "Recordarme", class: "ml-2 block text-sm text-gray-700" %>
              </div>

              <div>
                <%= f.submit "Iniciar Sesión", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200 cursor-pointer" %>
              </div>
            <% end %>

            <div class="mt-6">
              <div class="relative">
                <div class="absolute inset-0 flex items-center">
                  <div class="w-full border-t border-gray-300"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                  <span class="px-2 bg-white text-gray-500">¿Necesitas ayuda?</span>
                </div>
              </div>

              <div class="mt-6 text-center">
                <%= link_to "¿Olvidaste tu contraseña?", new_user_password_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Footer -->
    <div class="mt-8 text-center text-gray-600">
      <p class="text-sm">
        © <%= Time.current.year %> DESYCON. Todos los derechos reservados.
      </p>
    </div>
  </div>
</div>
