<% content_for :title, @consolidator.name %>

<!-- Material Design: Container con max-width y padding responsivo -->
<div class="w-full max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">
  
  <!-- Material Design: Navegación con elevación sutil -->
  <div class="mb-4 sm:mb-6">
    <%= link_to consolidators_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium text-blue-700 hover:bg-blue-50 transition-all duration-200 ease-in-out group" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 transition-transform group-hover:-translate-x-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
      </svg>
      <span>Volver a consolidadores</span>
    <% end %>
  </div>

  <!-- Material Design: Card principal con elevación 2 (shadow-md) -->
  <div class="bg-white shadow-md rounded-2xl overflow-hidden transition-shadow duration-300 hover:shadow-lg">
    
    <!-- Material Design: Header con superficie elevada y acciones -->
    <div class="px-4 sm:px-6 lg:px-8 py-5 sm:py-6 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 tracking-tight"><%= @consolidator.name %></h1>
          <p class="mt-1 text-sm text-gray-500">Información detallada del consolidador</p>
        </div>
        <div class="flex items-center gap-2">
          <%= link_to edit_consolidator_path(@consolidator), class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 shadow-sm hover:shadow-md transition-all duration-200 ease-in-out" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg>
            <span class="hidden sm:inline">Editar</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Material Design: Contenido con espaciado generoso -->
    <div class="px-4 sm:px-6 lg:px-8 py-6 sm:py-8 space-y-8 sm:space-y-10">
      
      <% if @consolidator.fiscal_profile.present? %>
        <!-- Material Design: Sección con superficie elevada sutilmente -->
        <section class="bg-gradient-to-br from-blue-50/50 to-transparent rounded-xl p-5 sm:p-6 border border-blue-100/50">
          <div class="flex items-center gap-3 mb-5">
            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-blue-600 shadow-sm">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
              </svg>
            </div>
            <h2 class="text-xl sm:text-2xl font-bold text-gray-900">Datos Fiscales</h2>
          </div>
          
          <!-- Material Design: Grid responsivo con gaps consistentes -->
          <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-5">
            <div class="bg-white/60 rounded-lg p-4 hover:bg-white/80 transition-colors duration-200">
              <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Razón Social</dt>
              <dd class="text-base font-medium text-gray-900"><%= @consolidator.fiscal_profile.razon_social %></dd>
            </div>
            <div class="bg-white/60 rounded-lg p-4 hover:bg-white/80 transition-colors duration-200">
              <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">RFC</dt>
              <dd class="text-base font-medium text-gray-900 font-mono"><%= @consolidator.fiscal_profile.rfc %></dd>
            </div>
            <div class="bg-white/60 rounded-lg p-4 hover:bg-white/80 transition-colors duration-200">
              <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Régimen Fiscal</dt>
              <dd class="text-base font-medium text-gray-900"><%= @consolidator.fiscal_profile.regimen_nombre %></dd>
            </div>
            <% if @consolidator.fiscal_profile.uso_cfdi.present? %>
              <div class="bg-white/60 rounded-lg p-4 hover:bg-white/80 transition-colors duration-200">
                <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Uso CFDI</dt>
                <dd class="text-base font-medium text-gray-900"><%= @consolidator.fiscal_profile.uso_cfdi_nombre %></dd>
              </div>
            <% end %>
          </dl>
        </section>
      <% end %>

      <% if @consolidator.addresses.any? %>
        <!-- Material Design: Sección de direcciones -->
        <section>
          <div class="flex items-center gap-3 mb-5">
            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-green-600 shadow-sm">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
              </svg>
            </div>
            <h2 class="text-xl sm:text-2xl font-bold text-gray-900">Direcciones</h2>
          </div>
          
          <!-- Material Design: Grid de cards con elevación -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-5">
            <% @consolidator.addresses.each do |address| %>
              <!-- Material Design: Card de dirección con elevación 1 -->
              <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-all duration-200 flex flex-col">
                
                <!-- Material Design: Header del card con badge -->
                <div class="px-5 py-4 bg-gradient-to-r from-gray-50 to-white border-b border-gray-100">
                  <div class="flex items-center justify-between">
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-semibold <%= address.tipo == 'fiscal' ? 'bg-blue-100 text-blue-800' : address.tipo == 'envio' ? 'bg-green-100 text-green-800' : address.tipo == 'almacen' ? 'bg-purple-100 text-purple-800' : 'bg-orange-100 text-orange-800' %> shadow-sm">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3.5 h-3.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498 4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 0 0-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0Z" />
                      </svg>
                      <%= address.tipo_nombre %>
                    </span>
                  </div>
                </div>
                
                <!-- Material Design: Contenido del card con diseño mejorado -->
                <div class="px-5 py-5 flex flex-col flex-1">
                  <div class="flex-1">
                    <!-- Dirección principal con icono -->
                    <% if address.calle.present? %>
                      <div class="flex items-start gap-3 mb-4">
                        <div class="flex-shrink-0 mt-0.5">
                          <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-blue-50">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 text-blue-600">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                            </svg>
                          </div>
                        </div>
                        <div class="flex-1 min-w-0">
                          <p class="text-sm font-semibold text-gray-900 mb-1">
                            <%= address.calle %> <%= address.numero_exterior %><%= ", Int. #{address.numero_interior}" if address.numero_interior.present? %>
                          </p>
                          <% if address.colonia.present? %>
                            <p class="text-sm text-gray-600"><%= address.colonia %></p>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                    
                    <!-- Grid de datos de ubicación -->
                    <div class="grid grid-cols-2 gap-3 mb-4">
                      <div class="bg-gradient-to-br from-gray-50 to-white rounded-lg p-3 border border-gray-100">
                        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1.5 flex items-center gap-1">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                          </svg>
                          C.P.
                        </dt>
                        <dd class="text-base font-bold text-gray-900 font-mono"><%= address.codigo_postal %></dd>
                      </div>
                      
                      <div class="bg-gradient-to-br from-gray-50 to-white rounded-lg p-3 border border-gray-100">
                        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1.5">Municipio</dt>
                        <dd class="text-sm font-semibold text-gray-900 truncate"><%= address.municipio.present? ? address.municipio : '-' %></dd>
                      </div>
                    </div>
                    
                    <!-- Estado y País -->
                    <div class="grid grid-cols-2 gap-3 mb-4">
                      <div class="bg-gradient-to-br from-gray-50 to-white rounded-lg p-3 border border-gray-100">
                        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1.5">Estado</dt>
                        <dd class="text-sm font-semibold text-gray-900"><%= address.estado %></dd>
                      </div>
                      
                      <div class="bg-gradient-to-br from-gray-50 to-white rounded-lg p-3 border border-gray-100">
                        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1.5 flex items-center gap-1">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
                          </svg>
                          País
                        </dt>
                        <dd class="text-sm font-semibold text-gray-900 font-mono"><%= address.pais %></dd>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Email siempre al final -->
                  <div class="bg-gradient-to-r from-blue-50 to-blue-50/50 rounded-lg p-3 border border-blue-100">
                    <dt class="text-xs font-semibold text-blue-700 uppercase tracking-wider mb-1.5 flex items-center gap-1">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3.5 h-3.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                      </svg>
                      Correo de Contacto
                    </dt>
                    <dd class="text-sm font-medium text-blue-700 hover:text-blue-800 transition-colors">
                      <a href="mailto:<%= address.email %>" class="flex items-center gap-1.5 group">
                        <span class="truncate"><%= address.email %></span>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3.5 h-3.5 opacity-0 group-hover:opacity-100 transition-opacity">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                        </svg>
                      </a>
                    </dd>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </section>
      <% end %>
      
      <% if @consolidator.fiscal_profile.blank? && @consolidator.addresses.empty? %>
        <!-- Material Design: Estado vacío -->
        <div class="text-center py-12">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-gray-400">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-1">Sin información adicional</h3>
          <p class="text-sm text-gray-500 mb-6">Agrega datos fiscales o direcciones para completar el perfil</p>
          <%= link_to "Editar Consolidador", edit_consolidator_path(@consolidator), class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 shadow-sm hover:shadow-md transition-all duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
