<%= form_with(model: consolidator, class: "space-y-8") do |form| %>
  <% if consolidator.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(consolidator.errors.count, "error") %> impidieron guardar este consolidador:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% consolidator.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Información General -->
  <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Información General</h2>
    <div>
      <%= form.label :name, "Nombre del Consolidador", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :name, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors #{'border-red-300' if consolidator.errors[:name].any?}", placeholder: "Nombre" %>
      <% if consolidator.errors[:name].any? %>
        <p class="mt-2 text-sm text-red-600"><%= consolidator.errors[:name].first %></p>
      <% end %>
    </div>
  </div>

  <!-- Datos Fiscales -->
  <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Datos Fiscales</h2>
    <%= form.fields_for :fiscal_profile do |fp| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= fp.label :razon_social, "Razón Social", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= fp.text_field :razon_social, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors", placeholder: "Nombre o razón social" %>
        </div>

        <div>
          <%= fp.label :rfc, "RFC", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= fp.text_field :rfc, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors", placeholder: "Ingresa el RFC", maxlength: 13 %>
          <p class="mt-1.5 text-xs text-gray-500">12 caracteres (persona moral) o 13 caracteres (persona física)</p>
        </div>

        <div>
          <%= fp.label :regimen, "Régimen Fiscal", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= fp.select :regimen, 
                options_for_select(FiscalProfile::REGIMENES.map { |k, v| ["#{k} - #{v}", k] }, fp.object.regimen),
                { prompt: "Seleccione un régimen" },
                class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors" %>
        </div>

        <div>
          <%= fp.label :uso_cfdi, "Uso CFDI", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= fp.select :uso_cfdi,
                options_for_select(FiscalProfile::USOS_CFDI.map { |k, v| ["#{k} - #{v}", k] }, fp.object.uso_cfdi),
                { prompt: "Seleccione un uso CFDI" },
                class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors" %>
        </div>

        <div>
          <%= fp.label :forma_pago, "Forma de Pago", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= fp.select :forma_pago,
                options_for_select(FiscalProfile::FORMAS_PAGO.map { |k, v| ["#{k} - #{v}", k] }, fp.object.forma_pago),
                { prompt: "Seleccione forma de pago" },
                class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors" %>
        </div>

        <div>
          <%= fp.label :metodo_pago, "Método de Pago", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= fp.select :metodo_pago,
                options_for_select(FiscalProfile::METODOS_PAGO.map { |k, v| ["#{k} - #{v}", k] }, fp.object.metodo_pago),
                { prompt: "Seleccione método de pago" },
                class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Direcciones -->
  <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-lg font-semibold text-gray-900">Direcciones</h2>
      <button type="button" id="add-address-btn" class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        Agregar Dirección
      </button>
    </div>

    <div id="addresses-container" class="space-y-4">
      <%= form.fields_for :addresses do |address_form| %>
        <%= render 'address_card', f: address_form, form: form %>
      <% end %>
    </div>

    <p class="mt-3 text-xs text-gray-500">* Campos obligatorios para direcciones</p>
  </div>

  <!-- Botones de acción -->
  <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200 mb-6">
    <%= link_to "Cancelar", consolidator.persisted? ? consolidator : consolidators_path, class: "px-6 py-2.5 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" %>
    <%= form.submit class: "px-6 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
  </div>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const addButton = document.getElementById('add-address-btn');
  const container = document.getElementById('addresses-container');
  let addressCounter = Date.now();
  
  // Función para colapsar todos los formularios
  function collapseAllForms() {
    document.querySelectorAll('.address-item').forEach(item => {
      item.querySelector('.address-summary').classList.remove('hidden');
      item.querySelector('.address-form').classList.add('hidden');
    });
  }
  
  // Función para expandir un formulario
  function expandForm(addressItem) {
    collapseAllForms();
    addressItem.querySelector('.address-summary').classList.add('hidden');
    addressItem.querySelector('.address-form').classList.remove('hidden');
  }
  
  // Botón "Editar" - expandir formulario
  container.addEventListener('click', function(e) {
    const editBtn = e.target.closest('.edit-address-btn');
    if (editBtn) {
      e.preventDefault();
      const addressItem = editBtn.closest('.address-item');
      expandForm(addressItem);
    }
    
    // Botón "Guardar Dirección" - colapsar y actualizar vista
    const saveBtn = e.target.closest('.save-address-btn');
    if (saveBtn) {
      e.preventDefault();
      const addressItem = saveBtn.closest('.address-item');
      updateAddressSummary(addressItem);
      collapseAllForms();
    }
    
    // Botón "Cancelar" - colapsar formulario sin guardar
    const cancelBtn = e.target.closest('.cancel-address-btn');
    if (cancelBtn) {
      e.preventDefault();
      const addressItem = cancelBtn.closest('.address-item');
      const idField = addressItem.querySelector('input[name*="[id]"]');
      
      // Si es una dirección nueva sin ID, eliminarla
      if (!idField || !idField.value) {
        addressItem.style.opacity = '0';
        addressItem.style.transition = 'opacity 0.3s';
        setTimeout(() => addressItem.remove(), 300);
      } else {
        // Si es existente, solo colapsar
        collapseAllForms();
      }
    }
    
    // Botón "Eliminar"
    const removeBtn = e.target.closest('.remove-address-btn');
    if (removeBtn) {
      e.preventDefault();
      const addressItem = removeBtn.closest('.address-item');
      const destroyField = addressItem.querySelector('.destroy-field');
      const idField = addressItem.querySelector('input[name*="[id]"]');
      
      if (idField && idField.value) {
        // Dirección persistida - marcar para destrucción
        if (confirm('¿Está seguro de eliminar esta dirección?')) {
          destroyField.value = '1';
          addressItem.style.opacity = '0';
          addressItem.style.transition = 'opacity 0.3s';
          setTimeout(() => addressItem.style.display = 'none', 300);
        }
      } else {
        // Dirección nueva - eliminar del DOM
        addressItem.style.opacity = '0';
        addressItem.style.transition = 'opacity 0.3s';
        setTimeout(() => addressItem.remove(), 300);
      }
    }
  });
  
  // Función para actualizar el resumen de la dirección
  function updateAddressSummary(addressItem) {
    const summary = addressItem.querySelector('.address-summary');
    const form = addressItem.querySelector('.address-form');
    
    // Obtener valores de los campos
    const tipo = form.querySelector('select[name*="[tipo]"]')?.value || '';
    const calle = form.querySelector('input[name*="[calle]"]')?.value || '';
    const numExt = form.querySelector('input[name*="[numero_exterior]"]')?.value || '';
    const numInt = form.querySelector('input[name*="[numero_interior]"]')?.value || '';
    const colonia = form.querySelector('input[name*="[colonia]"]')?.value || '';
    const cp = form.querySelector('input[name*="[codigo_postal]"]')?.value || '';
    const municipio = form.querySelector('input[name*="[municipio]"]')?.value || '';
    const estado = form.querySelector('input[name*="[estado]"]')?.value || '';
    const email = form.querySelector('input[name*="[email]"]')?.value || '';
    
    // Mapeo de tipos
    const tiposMap = {
      'fiscal': 'Fiscal',
      'envio': 'Envío',
      'almacen': 'Almacén'
    };
    
    // Actualizar el HTML del resumen
    const tipoLabel = tipo ? tiposMap[tipo] || tipo : 'Nueva Dirección';
    const tipoBadgeClass = tipo ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800';
    
    let summaryHTML = `
      <div class="flex justify-between items-start">
        <div class="flex-1">
          <div class="flex items-center gap-2 mb-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${tipoBadgeClass}">
              ${tipoLabel}
            </span>
          </div>`;
    
    if (calle || cp || estado) {
      summaryHTML += `
          <p class="text-sm text-gray-900">${calle} ${numExt}${numInt ? ', ' + numInt : ''}</p>
          <p class="text-sm text-gray-600">${colonia ? colonia + ', ' : ''}${cp}</p>
          <p class="text-sm text-gray-600">${municipio ? municipio + ', ' : ''}${estado}</p>`;
      if (email) {
        summaryHTML += `<p class="text-sm text-gray-500 mt-1">${email}</p>`;
      }
    } else {
      summaryHTML += `<p class="text-sm text-gray-500 italic">Formulario de dirección</p>`;
    }
    
    summaryHTML += `
        </div>
        <div class="flex items-center gap-2">
          <button type="button" class="edit-address-btn inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg>
            Editar
          </button>
          <button type="button" class="remove-address-btn inline-flex items-center px-3 py-1.5 border border-red-300 rounded-md text-sm font-medium text-red-700 bg-white hover:bg-red-50 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
            Eliminar
          </button>
        </div>
      </div>`;
    
    summary.innerHTML = summaryHTML;
  }
  
  // Botón "Agregar Dirección"
  if (addButton) {
    addButton.addEventListener('click', function(e) {
      e.preventDefault();
      
      const timestamp = addressCounter++;
      const newAddress = createNewAddressCard(timestamp);
      container.appendChild(newAddress);
      
      // Expandir automáticamente el nuevo formulario
      setTimeout(() => {
        expandForm(newAddress);
        newAddress.style.opacity = '0';
        newAddress.style.transition = 'opacity 0.3s';
        setTimeout(() => newAddress.style.opacity = '1', 10);
      }, 10);
    });
  }
  
  function createNewAddressCard(timestamp) {
    const div = document.createElement('div');
    div.className = 'address-item';
    div.setAttribute('data-address-id', timestamp);
    
    div.innerHTML = `
      <input type="hidden" name="consolidator[addresses_attributes][${timestamp}][_destroy]" class="destroy-field" value="">
      
      <!-- Vista colapsada -->
      <div class="address-summary hidden bg-gray-50 border border-gray-200 rounded-lg p-4">
        <div class="flex justify-between items-start">
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-2">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                Nueva Dirección
              </span>
            </div>
            <p class="text-sm text-gray-500 italic">Formulario de dirección</p>
          </div>
          <div class="flex items-center gap-2">
            <button type="button" class="edit-address-btn inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
              </svg>
              Editar
            </button>
            <button type="button" class="remove-address-btn inline-flex items-center px-3 py-1.5 border border-red-300 rounded-md text-sm font-medium text-red-700 bg-white hover:bg-red-50 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
              </svg>
              Eliminar
            </button>
          </div>
        </div>
      </div>

      <!-- Vista expandida -->
      <div class="address-form border border-gray-300 rounded-lg p-5 bg-gray-50">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-sm font-semibold text-gray-900">Nueva Dirección</h3>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Tipo de Dirección</label>
            <select name="consolidator[addresses_attributes][${timestamp}][tipo]" class="block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors">
              <option value="">Seleccione tipo</option>
              <option value="fiscal">Fiscal</option>
              <option value="envio">Envío</option>
              <option value="almacen">Almacén</option>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">País</label>
            <input type="text" name="consolidator[addresses_attributes][${timestamp}][pais]" value="MX" maxlength="2" placeholder="MX" class="block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors uppercase">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Código Postal *</label>
            <input type="text" name="consolidator[addresses_attributes][${timestamp}][codigo_postal]" placeholder="Código Postal" class="block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Estado *</label>
            <input type="text" name="consolidator[addresses_attributes][${timestamp}][estado]" placeholder="Estado" class="block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Municipio</label>
            <input type="text" name="consolidator[addresses_attributes][${timestamp}][municipio]" placeholder="Municipio" class="block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Colonia</label>
            <input type="text" name="consolidator[addresses_attributes][${timestamp}][colonia]" placeholder="Colonia" class="block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors">
          </div>
          
          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-2">Calle</label>
            <input type="text" name="consolidator[addresses_attributes][${timestamp}][calle]" placeholder="Calle o avenida" class="block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">No. Exterior</label>
            <input type="text" name="consolidator[addresses_attributes][${timestamp}][numero_exterior]" placeholder="Número exterior" class="block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">No. Interior</label>
            <input type="text" name="consolidator[addresses_attributes][${timestamp}][numero_interior]" placeholder="Número interior" class="block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors">
          </div>
          
          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-2">Correo Electrónico *</label>
            <input type="email" name="consolidator[addresses_attributes][${timestamp}][email]" placeholder="contacto@mail.com" class="block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors">
          </div>
        </div>
        
        <!-- Botones del formulario de dirección -->
        <div class="flex items-center justify-end gap-3 mt-6 pt-4 border-t border-gray-200">
          <button type="button" class="cancel-address-btn px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
            Cancelar
          </button>
          <button type="button" class="save-address-btn px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition-colors">
            Guardar Dirección
          </button>
        </div>
      </div>
    `;
    
    return div;
  }
});
</script>
