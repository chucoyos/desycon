<% content_for :title, "Editar Consolidador" %>

<!-- Material Design: Container con padding responsivo -->
<div class="w-full max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">
  
  <!-- Material Design: Navegación con hover mejorado -->
  <div class="mb-4 sm:mb-6">
    <%= link_to @consolidator, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium text-blue-700 hover:bg-blue-50 transition-all duration-200 ease-in-out group" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 transition-transform group-hover:-translate-x-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
      </svg>
      <span>Volver a detalles</span>
    <% end %>
  </div>

  <!-- Material Design: Header con icono de edición y nombre del consolidador -->
  <div class="mb-6 sm:mb-8">
    <div class="flex items-start gap-4">
      <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-gradient-to-br from-orange-500 to-orange-600 shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg>
      </div>
      <div class="flex-1">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 tracking-tight">Editar Consolidador</h1>
        <p class="mt-1 text-base sm:text-lg font-medium text-gray-700"><%= @consolidator.name %></p>
        <p class="mt-1 text-sm text-gray-600">Actualice la información necesaria. Los cambios se guardarán al presionar el botón de guardar.</p>
      </div>
    </div>
  </div>

  <%= render "form", consolidator: @consolidator %>
</div>
