<div class="address-item" data-address-id="<%= f.object.object_id %>">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy, class: "destroy-field" %>
  
  <!-- Vista colapsada (resumen) -->
  <div class="address-summary bg-gray-50 border border-gray-200 rounded-lg p-4">
    <div class="flex justify-between items-start">
      <div class="flex-1">
        <div class="flex items-center gap-2 mb-2">
          <% if f.object.tipo.present? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <%= Address::TIPOS[f.object.tipo] || f.object.tipo %>
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              Nueva Dirección
            </span>
          <% end %>
        </div>
        <% if f.object.persisted? && f.object.calle.present? %>
          <p class="text-sm text-gray-900"><%= f.object.calle %> <%= f.object.numero_exterior %><%= ", #{f.object.numero_interior}" if f.object.numero_interior.present? %></p>
          <p class="text-sm text-gray-600"><%= f.object.colonia %>, <%= f.object.codigo_postal %></p>
          <p class="text-sm text-gray-600"><%= f.object.municipio %>, <%= f.object.estado %></p>
          <p class="text-sm text-gray-500 mt-1"><%= f.object.email %></p>
        <% else %>
          <p class="text-sm text-gray-500 italic">Formulario de dirección</p>
        <% end %>
      </div>
      <div class="flex items-center gap-2">
        <button type="button" class="edit-address-btn inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
          Editar
        </button>
        <button type="button" class="remove-address-btn inline-flex items-center px-3 py-1.5 border border-red-300 rounded-md text-sm font-medium text-red-700 bg-white hover:bg-red-50 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
          </svg>
          Eliminar
        </button>
      </div>
    </div>
  </div>

  <!-- Vista expandida (formulario) -->
  <div class="address-form hidden border border-gray-300 rounded-lg p-5 bg-gray-50">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-sm font-semibold text-gray-900">
        <% if f.object.persisted? %>
          Editar Dirección
        <% else %>
          Nueva Dirección
        <% end %>
      </h3>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
      <div>
        <%= f.label :tipo, "Tipo de Dirección", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :tipo,
              options_for_select(Address::TIPOS.map { |k, v| [v, k] }, f.object.tipo),
              { prompt: "Seleccione tipo" },
              class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors" %>
      </div>

      <div>
        <%= f.label :pais, "País", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :pais, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors uppercase", placeholder: "MX", maxlength: 2, value: f.object.pais || 'MX' %>
      </div>

      <div>
        <%= f.label :codigo_postal, "Código Postal *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :codigo_postal, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors", placeholder: "Código Postal" %>
      </div>

      <div>
        <%= f.label :estado, "Estado *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :estado, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors", placeholder: "Estado" %>
      </div>

      <div>
        <%= f.label :municipio, "Municipio", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :municipio, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors", placeholder: "Municipio" %>
      </div>

      <div>
        <%= f.label :colonia, "Colonia", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :colonia, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors", placeholder: "Colonia" %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :calle, "Calle", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :calle, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors", placeholder: "Calle o avenida" %>
      </div>

      <div>
        <%= f.label :numero_exterior, "No. Exterior", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :numero_exterior, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors", placeholder: "Número exterior" %>
      </div>

      <div>
        <%= f.label :numero_interior, "No. Interior", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :numero_interior, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors", placeholder: "Número interior" %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :email, "Correo Electrónico *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, class: "block w-full px-4 py-2.5 rounded-lg border border-gray-200 bg-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-colors", placeholder: "contacto@mail.com" %>
      </div>
    </div>
    
    <!-- Botones del formulario de dirección -->
    <div class="flex items-center justify-end gap-3 mt-6 pt-4 border-t border-gray-200">
      <button type="button" class="cancel-address-btn px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
        Cancelar
      </button>
      <button type="button" class="save-address-btn px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition-colors">
        Guardar Dirección
      </button>
    </div>
  </div>
</div>
