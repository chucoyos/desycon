<div class="min-h-screen bg-gray-100 w-full">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Dashboard Agente Aduanal</h1>
      <p class="mt-2 text-sm text-gray-600">
        Bienvenido <%= current_user.entity.name %> - Gesti√≥n de asignaciones de carga
      </p>
    </div>

    <!-- Flash Messages -->
    <% if flash[:alert] %>
      <div class="mb-8 bg-red-50 border-l-4 border-red-400 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-red-700"><%= flash[:alert] %></p>
          </div>
        </div>
      </div>
    <% end %>

      <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <span class="text-white text-sm font-medium">üì¶</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Asignaciones</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @bl_house_lines.count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-md flex items-center justify-center">
                <span class="text-white text-sm font-medium">‚è≥</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Pendientes</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @bl_house_lines.where.not(status: [:finalizado, :revalidado]).count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <span class="text-white text-sm font-medium">‚úÖ</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Completados</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @bl_house_lines.where(status: [:finalizado, :revalidado]).count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-red-500 rounded-md flex items-center justify-center">
                <span class="text-white text-sm font-medium">‚ö†Ô∏è</span>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Con Problemas</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @bl_house_lines.where(status: [:instrucciones_pendientes, :pendiente_pagos_locales]).count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Search Form -->
    <div class="bg-white shadow rounded-lg p-6 mb-8">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Solicitar Revalidaci√≥n</h2>
      <%= form_with url: customs_agents_dashboard_path, method: :get, class: "flex gap-4" do |form| %>
        <div class="flex-1">
          <%= form.label :blhouse, "BL House", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :blhouse, placeholder: "Ingresa el n√∫mero de BL House", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
        <div class="flex items-end">
          <%= form.submit "Buscar y Revalidar", class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>

    <!-- BL House Lines Pipeline View -->
    <div class="space-y-6">
      <% if @bl_house_lines.any? %>
        <% @bl_house_lines.each do |bl_house_line| %>
          <div class="bg-white shadow overflow-hidden sm:rounded-md">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
              <div class="flex justify-between items-center">
                <div>
                  <h3 class="text-lg leading-6 font-medium text-gray-900">
                    BL: <%= bl_house_line.blhouse %>
                    <% if bl_house_line.customs_agent.nil? %>
                      <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        Sin Asignar
                      </span>
                    <% end %>
                  </h3>
                  <p class="mt-1 text-sm text-gray-500">
                    Cliente: <%= bl_house_line.client&.name || 'N/A' %> |
                    Contenedor: <%= bl_house_line.container&.number || 'N/A' %> |
                    Cantidad: <%= bl_house_line.cantidad %>
                  </p>
                </div>
                <div class="flex space-x-2">
                  <%= link_to 'Ver Detalles', bl_house_line_path(bl_house_line), class: 'bg-indigo-600 text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-indigo-700' %>
                  <%= link_to 'Editar', edit_bl_house_line_path(bl_house_line), class: 'bg-gray-600 text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700' %>
                </div>
              </div>
            </div>

            <div class="p-6 space-y-6">
              <details class="mb-4 bg-gray-50 p-4 rounded">
                <summary class="cursor-pointer font-medium text-gray-800">L√≠nea de tiempo</summary>
                <div class="mt-3">
                  <%= render 'status_pipeline', bl_house_line: bl_house_line %>
                </div>
              </details>

              <details class="mb-4 bg-gray-50 p-4 rounded">
                <summary class="cursor-pointer font-medium text-gray-800">Documentos</summary>
                <div class="mt-3">
                  <%= render 'documents_info', bl_house_line: bl_house_line %>
                </div>
              </details>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
          <div class="text-center py-12">
            <div class="text-gray-500">
              <p>No tienes asignaciones de carga actualmente.</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
