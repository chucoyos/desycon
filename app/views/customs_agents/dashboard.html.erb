      <div class="flex items-center gap-2 mb-4">
        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <h2 class="text-sm font-semibold text-gray-700 uppercase tracking-wider">B√∫squeda y filtros</h2>
      </div>
      <%= form_with url: customs_agents_dashboard_path, method: :get, class: "w-full" do |form| %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
          <div class="min-w-0">
            <%= form.label :filter_blhouse, "BL House", class: "sr-only" %>
            <%= form.text_field :filter_blhouse, value: params[:filter_blhouse], placeholder: "BL House...", class: "block w-full h-12 px-4 border border-gray-200 rounded-md bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm transition-shadow truncate" %>
          </div>

          <div class="min-w-0">
            <%= form.label :filter_container_number, "Contenedor", class: "sr-only" %>
            <%= form.text_field :filter_container_number, value: params[:filter_container_number], placeholder: "N√∫mero de contenedor...", class: "block w-full h-12 px-4 border border-gray-200 rounded-md bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm transition-shadow truncate" %>
          </div>

          <div class="relative w-full sm:w-auto">
            <%= form.label :status, "Estatus", class: "sr-only" %>
            <% status_options = [
              ["Todos los estatus", ""],
              ["Activo", "activo"],
              ["Documentos rechazados", "documentos_rechazados"],
              ["Documentos OK", "documentos_ok"],
              ["Revalidado", "revalidado"]
            ] %>
            <%= form.select :status, options_for_select(status_options, params[:status]), {}, class: "block w-full sm:w-64 px-3 py-3.5 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition duration-150 ease-in-out text-sm" %>
          </div>
        </div>

        <div class="flex gap-2 mt-3">
          <%= form.submit "Buscar", class: "px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg text-sm font-semibold transition-all shadow-sm hover:shadow-md cursor-pointer" %>
          <%= link_to "Limpiar", customs_agents_dashboard_path, class: "px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition-colors" %>
        </div>
      <% end %>
    </div>

    <!-- Pagination top -->
    <div class="my-6">
      <%= render 'shared/tailwind_pagination', paginated: @bl_house_lines %>
    </div>

