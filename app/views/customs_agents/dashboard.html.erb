      <%= form_with url: customs_agents_revalidation_path, method: :get, data: { turbo_frame: "revalidation_modal" }, class: "flex gap-4" do |form| %>
        <div class="flex-1">
          <%= form.label :revalidation_blhouse, "BL House", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :revalidation_blhouse, value: params[:revalidation_blhouse].presence || params[:blhouse], placeholder: "Ingresa el n√∫mero de BL House", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
