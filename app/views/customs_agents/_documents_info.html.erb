<!-- Documentos -->
<div class="bg-white shadow-sm rounded-xl p-5 border border-gray-100">
  <div class="flex items-center gap-3 mb-5">
    <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-orange-600 shadow-sm">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
      </svg>
    </div>
    <h2 class="text-lg font-bold text-gray-900">Documentos</h2>
  </div>
  
  <div class="grid grid-cols-4 gap-3">
    <!-- BL Endosado -->
    <div class="flex flex-col items-center justify-center p-3 rounded-lg <%= bl_house_line.bl_endosado_documento.attached? ? 'bg-green-50 border border-green-200' : 'bg-gray-50 border border-gray-200' %>">
      <svg class="w-8 h-8 <%= bl_house_line.bl_endosado_documento.attached? ? 'text-green-600' : 'text-gray-400' %> mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <p class="text-sm font-semibold text-gray-900 text-center mb-1">BL Endosado</p>
      <p class="text-xs text-gray-500 text-center" title="<%= bl_house_line.bl_endosado_documento.filename if bl_house_line.bl_endosado_documento.attached? %>">
        <% if bl_house_line.bl_endosado_documento.attached? %>
          ✓ Cargado
        <% else %>
          ✗ No cargado
        <% end %>
      </p>
      <% if bl_house_line.bl_endosado_documento.attached? %>
        <div class="mt-2">
          <%= link_to rails_blob_path(bl_house_line.bl_endosado_documento, disposition: "inline"), target: "_blank", class: "p-1 text-green-600 hover:bg-green-100 rounded transition-colors", title: "Ver documento" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Liberación -->
    <div class="flex flex-col items-center justify-center p-3 rounded-lg <%= bl_house_line.liberacion_documento.attached? ? 'bg-green-50 border border-green-200' : 'bg-gray-50 border border-gray-200' %>">
      <svg class="w-8 h-8 <%= bl_house_line.liberacion_documento.attached? ? 'text-green-600' : 'text-gray-400' %> mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <p class="text-sm font-semibold text-gray-900 text-center mb-1">Liberación</p>
      <p class="text-xs text-gray-500 text-center" title="<%= bl_house_line.liberacion_documento.filename if bl_house_line.liberacion_documento.attached? %>">
        <% if bl_house_line.liberacion_documento.attached? %>
          ✓ Cargado
        <% else %>
          ✗ No cargado
        <% end %>
      </p>
      <% if bl_house_line.liberacion_documento.attached? %>
        <div class="mt-2">
          <%= link_to rails_blob_path(bl_house_line.liberacion_documento, disposition: "inline"), target: "_blank", class: "p-1 text-green-600 hover:bg-green-100 rounded transition-colors", title: "Ver documento" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Encomienda -->
    <div class="flex flex-col items-center justify-center p-3 rounded-lg <%= bl_house_line.encomienda_documento.attached? ? 'bg-green-50 border border-green-200' : 'bg-gray-50 border border-gray-200' %>">
      <svg class="w-8 h-8 <%= bl_house_line.encomienda_documento.attached? ? 'text-green-600' : 'text-gray-400' %> mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
      </svg>
      <p class="text-sm font-semibold text-gray-900 text-center mb-1">Encomienda</p>
      <p class="text-xs text-gray-500 text-center" title="<%= bl_house_line.encomienda_documento.filename if bl_house_line.encomienda_documento.attached? %>">
        <% if bl_house_line.encomienda_documento.attached? %>
          ✓ Cargado
        <% else %>
          ✗ No cargado
        <% end %>
      </p>
      <% if bl_house_line.encomienda_documento.attached? %>
        <div class="mt-2">
          <%= link_to rails_blob_path(bl_house_line.encomienda_documento, disposition: "inline"), target: "_blank", class: "p-1 text-green-600 hover:bg-green-100 rounded transition-colors", title: "Ver documento" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

        <!-- BL Revalidado -->
    <div class="flex flex-col items-center justify-center p-3 rounded-lg <%= bl_house_line.bl_revalidado_documento.attached? ? 'bg-green-50 border border-green-200' : 'bg-gray-50 border border-gray-200' %>">
      <svg class="w-8 h-8 <%= bl_house_line.bl_revalidado_documento.attached? ? 'text-green-600' : 'text-gray-400' %> mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <p class="text-sm font-semibold text-gray-900 text-center mb-1">BL Revalidado</p>
      <p class="text-xs text-gray-500 text-center" title="<%= bl_house_line.bl_revalidado_documento.filename if bl_house_line.bl_revalidado_documento.attached? %>">
        <% if bl_house_line.bl_revalidado_documento.attached? %>
          ✓ Cargado
        <% else %>
          ✗ No cargado
        <% end %>
      </p>
      <% if bl_house_line.bl_revalidado_documento.attached? %>
        <div class="mt-2">
          <%= link_to rails_blob_path(bl_house_line.bl_revalidado_documento, disposition: "inline"), target: "_blank", class: "p-1 text-green-600 hover:bg-green-100 rounded transition-colors", title: "Ver documento" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Estado de completitud -->
  <div class="mt-4">
    <% if bl_house_line.documentos_completos? %>
      <div class="p-3 bg-green-50 border border-green-200 rounded-lg">
        <div class="flex items-center justify-center gap-2 text-green-800">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-sm font-medium">Documentos completos</p>
        </div>
      </div>
    <% else %>
      <div class="p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
        <div class="flex items-center justify-center gap-2 text-yellow-800">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 4v2m8.5-6a8.5 8.5 0 11-17 0 8.5 8.5 0 0117 0z"/>
          </svg>
          <p class="text-sm font-medium">Documentos incompletos</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
