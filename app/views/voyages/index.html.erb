<% content_for :title, "Viajes" %>

<div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-start gap-3">
      <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-indigo-600 shadow-lg text-white">
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 20h18M3 14h18M5 9l7-5 7 5M5 9v5m14-5v5" />
        </svg>
      </div>
      <div>
        <p class="text-xs font-semibold uppercase tracking-widest text-blue-600">Operaciones</p>
        <h1 class="text-3xl font-bold text-gray-900">Viajes</h1>
        <p class="text-sm text-gray-600">Administre los viajes y su información clave para asociar contenedores.</p>
      </div>
    </div>
    <% if policy(Voyage).create? %>
      <%= link_to new_voyage_path, class: "inline-flex items-center gap-2 px-5 py-3 rounded-full text-sm font-semibold text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 shadow-md hover:shadow-lg transition-all duration-200" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m6-6H6" />
        </svg>
        Nuevo viaje
      <% end %>
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-5">
    <div class="flex items-center gap-2 mb-4">
      <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <h2 class="text-sm font-semibold text-gray-700 uppercase tracking-wider">Filtros de búsqueda</h2>
    </div>
    <%= form_with url: voyages_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-4" do %>
      <div>
        <label class="block text-xs font-semibold text-gray-600 mb-2">Buscar viaje</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-3 flex items-center text-blue-500">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <%= text_field_tag :search, params[:search], placeholder: "Código de viaje...", class: "w-full pl-10 pr-3 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition" %>
        </div>
      </div>

      <div>
        <label class="block text-xs font-semibold text-gray-600 mb-2">Buque</label>
        <%= select_tag :vessel_id, options_from_collection_for_select(@vessels, :id, :name, params[:vessel_id]), include_blank: "Todos", class: "w-full px-3 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition bg-white" %>
      </div>

      <div>
        <label class="block text-xs font-semibold text-gray-600 mb-2">Tipo</label>
        <%= select_tag :voyage_type, options_for_select([['Todos', '']] + Voyage.voyage_types.keys.map { |t| [t.titleize, t] }, params[:voyage_type]), class: "w-full px-3 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition bg-white" %>
      </div>

      <div>
        <label class="block text-xs font-semibold text-gray-600 mb-2">Destino</label>
        <%= select_tag :destination_port_id, options_from_collection_for_select(@ports, :id, :display_name, params[:destination_port_id]), include_blank: "Todos", class: "w-full px-3 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition bg-white" %>
      </div>

      <div class="md:col-span-2 lg:col-span-3 xl:col-span-5 flex flex-wrap items-center gap-2">
        <%= submit_tag "Filtrar", class: "px-4 py-2.5 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm font-semibold transition-all shadow-sm hover:shadow-md cursor-pointer" %>
        <%= link_to "Limpiar", voyages_path, class: "px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition-colors" %>
      </div>
    <% end %>
  </div>

  <div class="flex items-center justify-between flex-wrap gap-4">
    <div class="text-sm text-gray-600">
      <% if @voyages.respond_to?(:current_page) && @voyages.total_count.present? %>
        <% from = @voyages.offset_value + 1 %>
        <% to = [@voyages.offset_value + @voyages.limit_value, @voyages.total_count].min %>
        <% total = @voyages.total_count %>
        Mostrando <span class="font-semibold text-gray-800"><%= from %></span> a <span class="font-semibold text-gray-800"><%= to %></span> de <span class="font-semibold text-gray-800"><%= total %></span> viajes
      <% end %>
    </div>
    <%= render 'shared/tailwind_pagination', paginated: @voyages %>
  </div>

  <% if @voyages.any? %>
    <div class="bg-white shadow-sm rounded-xl border border-gray-100 overflow-visible">
      <div class="overflow-x-auto lg:overflow-visible">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50/80">
            <tr>
              <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Viaje</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Buque</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Destino</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">ETA</th>
              <th scope="col" class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">ATA</th>
              <th scope="col" class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-100">
            <% @voyages.each do |voyage| %>
              <tr class="hover:bg-indigo-50/40 transition-colors duration-150">
                <td class="px-4 py-3">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-blue-50 text-blue-700 flex items-center justify-center shadow-inner">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6l7 4-7 4-7-4 7-4z" />
                      </svg>
                    </div>
                    <div>
                      <div class="flex items-center gap-2">
                        <span class="text-sm font-semibold text-gray-900 font-mono"><%= voyage.viaje %></span>
                        <% if voyage.voyage_type.present? %>
                          <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-semibold bg-indigo-50 text-indigo-700 border border-indigo-100">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            <%= voyage.voyage_type.titleize %>
                          </span>
                        <% end %>
                      </div>
                      <p class="text-xs text-gray-500">ID interno para asociación</p>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-3 text-sm text-gray-800">
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18M5 10l7-6 7 6" />
                    </svg>
                    <%= voyage.vessel&.name || "Sin buque" %>
                  </div>
                </td>
                <td class="px-4 py-3 text-sm text-gray-800">
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z" />
                    </svg>
                    <%= voyage.destination_port&.display_name || "Sin destino" %>
                  </div>
                </td>
                <td class="px-4 py-3 text-sm text-gray-800">
                  <div class="inline-flex items-center gap-2 px-2.5 py-1 rounded-full border border-blue-100 bg-blue-50 text-blue-700">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span><%= voyage.eta ? l(voyage.eta, format: :long) : "-" %></span>
                  </div>
                </td>
                <td class="px-4 py-3 text-sm text-gray-800">
                  <div class="inline-flex items-center gap-2 px-2.5 py-1 rounded-full border border-slate-200 bg-slate-50 text-slate-700">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span><%= voyage.ata ? l(voyage.ata, format: :long) : "-" %></span>
                  </div>
                </td>
                <td class="px-4 py-3 text-sm text-right text-gray-700 whitespace-nowrap">
                  <div class="relative inline-block text-left" data-controller="dropdown">
                    <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-full transition-colors focus:outline-none" data-action="click->dropdown#toggle" title="Opciones">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                      </svg>
                    </button>
                    <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-56 rounded-xl shadow-xl bg-white border border-gray-100 z-50 origin-top-right ring-1 ring-black ring-opacity-5 focus:outline-none">
                      <div class="py-2" role="menu">
                        <%= link_to voyage_path(voyage), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                          </svg>
                          Ver detalles
                        <% end %>

                        <%= link_to edit_voyage_path(voyage), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                          </svg>
                          Editar
                        <% end %>

                        <div class="border-t border-gray-100 my-1"></div>
                        <%= button_to voyage_path(voyage), method: :delete, data: { turbo_confirm: "¿Eliminar este viaje? Se debe mover primero los contenedores asociados." }, class: "group flex w-full items-center gap-3 px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 hover:text-red-900 transition-colors", role: "menuitem" do %>
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                          </svg>
                          Eliminar
                        <% end %>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="text-center bg-white border border-dashed border-gray-200 rounded-xl p-10 shadow-sm">
      <div class="flex flex-col items-center gap-2">
        <div class="w-12 h-12 rounded-full bg-blue-50 text-blue-700 flex items-center justify-center">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-base font-semibold text-gray-900">No hay viajes registrados</h3>
        <p class="text-sm text-gray-600 mb-2">Cree el primer viaje para poder asociarlo a contenedores.</p>
        <% if policy(Voyage).create? %>
          <%= link_to "Crear viaje", new_voyage_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-semibold text-blue-700 bg-blue-50 hover:bg-blue-100 border border-blue-200 transition-all duration-200" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="mt-6 flex justify-end">
    <%= render 'shared/tailwind_pagination', paginated: @voyages %>
  </div>
</div>
