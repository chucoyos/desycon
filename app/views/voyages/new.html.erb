<% content_for :title, "Nuevo viaje" %>

<div class="w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="mb-6 flex items-center gap-3">
    <%= link_to voyages_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium text-blue-700 hover:bg-blue-50 transition-all duration-200 group" do %>
      <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"/>
      </svg>
      <span>Volver a viajes</span>
    <% end %>
    <h1 class="text-2xl font-bold text-gray-900">Nuevo viaje</h1>
  </div>

  <%= render "form", voyage: @voyage %>
</div>
