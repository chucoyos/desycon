<% content_for :title, "Viaje #{@voyage.viaje}" %>

<div class="w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="mb-4 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <%= link_to voyages_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium text-blue-700 hover:bg-blue-50 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"/>
        </svg>
        <span>Volver a viajes</span>
      <% end %>
      <h1 class="text-2xl font-bold text-gray-900">Viaje <%= @voyage.viaje %></h1>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to edit_voyage_path(@voyage), class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 shadow-sm hover:shadow-md transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>
      <%= button_to "Eliminar", voyage_path(@voyage), method: :delete, data: { confirm: "¿Eliminar este viaje? Se debe mover primero los contenedores asociados." }, class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-lg text-sm font-medium text-white bg-red-600 hover:bg-red-700 shadow-sm hover:shadow-md transition-all duration-200" %>
    </div>
  </div>

  <div class="bg-white shadow-sm rounded-xl p-5 sm:p-6 border border-gray-100">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-5">
      <div class="bg-gray-50/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Código de viaje</dt>
        <dd class="text-base font-medium text-gray-900 font-mono"><%= @voyage.viaje %></dd>
      </div>
      <div class="bg-gray-50/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Tipo</dt>
        <dd class="text-base font-medium text-gray-900"><%= @voyage.voyage_type&.titleize %></dd>
      </div>
      <div class="bg-gray-50/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Buque</dt>
        <dd class="text-base font-medium text-gray-900"><%= @voyage.vessel&.name || "-" %></dd>
      </div>
      <div class="bg-gray-50/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Puerto de origen</dt>
        <dd class="text-base font-medium text-gray-900"><%= @voyage.origin_port&.display_name || "-" %></dd>
      </div>
      <div class="bg-gray-50/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Puerto de destino</dt>
        <dd class="text-base font-medium text-gray-900"><%= @voyage.destination_port&.display_name || "-" %></dd>
      </div>
      <div class="bg-gray-50/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">ETA</dt>
        <dd class="text-base font-medium text-gray-900"><%= @voyage.eta ? l(@voyage.eta, format: :long) : "-" %></dd>
      </div>
      <div class="bg-gray-50/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">ATA</dt>
        <dd class="text-base font-medium text-gray-900"><%= @voyage.ata ? l(@voyage.ata, format: :long) : "-" %></dd>
      </div>
      <div class="bg-gray-50/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Inicio de operación</dt>
        <dd class="text-base font-medium text-gray-900"><%= @voyage.inicio_operacion ? l(@voyage.inicio_operacion, format: :long) : "-" %></dd>
      </div>
      <div class="bg-gray-50/50 rounded-lg p-4">
        <dt class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Fin de operación</dt>
        <dd class="text-base font-medium text-gray-900"><%= @voyage.fin_operacion ? l(@voyage.fin_operacion, format: :long) : "-" %></dd>
      </div>
    </div>
  </div>
</div>
