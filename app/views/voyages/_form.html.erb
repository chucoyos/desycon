<%= form_with(model: voyage, class: "space-y-6") do |form| %>
  <% if voyage.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4 shadow-sm">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-semibold text-red-800">
            <%= pluralize(voyage.errors.count, "error") %> impidieron guardar este viaje:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% voyage.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-xl p-5 sm:p-6 border border-gray-100">
    <div class="flex items-center gap-3 mb-5">
      <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-blue-600 shadow-sm">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <h2 class="text-xl font-bold text-gray-900">Datos del Viaje</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-5">
      <div>
        <%= form.label :viaje, "Código de viaje *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.text_field :viaje, required: true, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 font-mono" %>
      </div>

      <div>
        <%= form.label :voyage_type, "Tipo *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.select :voyage_type,
              Voyage.voyage_types.keys.map { |t| [t.titleize, t] },
              { prompt: "Seleccione tipo" },
              class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200",
              required: true %>
      </div>

      <div>
        <%= form.label :vessel_id, "Buque *", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.collection_select :vessel_id, @vessels, :id, :name, { prompt: "Seleccione un buque" }, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200", required: true %>
      </div>

      <div>
        <%= form.label :origin_port_id, "Puerto de origen", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.collection_select :origin_port_id, @ports, :id, :display_name, { prompt: "Seleccione puerto" }, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
      </div>

      <div>
        <%= form.label :destination_port_id, "Puerto de destino", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.collection_select :destination_port_id, @ports, :id, :display_name, { prompt: "Seleccione puerto" }, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
      </div>

      <div>
        <%= form.label :eta, "ETA", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.date_field :eta, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
      </div>

      <div>
        <%= form.label :ata, "ATA", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.date_field :ata, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
      </div>

      <div>
        <%= form.label :inicio_operacion, "Inicio de operación", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.date_field :inicio_operacion, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
      </div>

      <div>
        <%= form.label :fin_operacion, "Fin de operación", class: "block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider" %>
        <%= form.date_field :fin_operacion, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
      </div>
    </div>
  </div>

  <div class="flex justify-end gap-3">
    <%= link_to "Cancelar", voyage.persisted? ? voyage_path(voyage) : voyages_path, class: "inline-flex items-center justify-center gap-2 px-5 py-2.5 rounded-full border border-slate-200 bg-white text-slate-700 text-sm font-semibold hover:bg-slate-50 transition" %>
    <%= form.submit(voyage.persisted? ? "Actualizar viaje" : "Crear viaje", class: "inline-flex items-center justify-center gap-2 px-5 py-2.5 rounded-full bg-gradient-to-r from-blue-600 to-blue-700 text-white text-sm font-semibold shadow-md shadow-indigo-100/60 hover:from-blue-700 hover:to-blue-800 transition cursor-pointer") %>
  </div>
<% end %>
