<%= form_with(model: voyage, class: "space-y-6") do |form| %>
  <% if voyage.errors.any? %>
    <div class="bg-red-50 border border-red-100 rounded-2xl p-4 shadow-sm">
      <div class="flex gap-3">
        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-red-100 text-red-600">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <h3 class="text-sm font-semibold text-red-800">
            <%= pluralize(voyage.errors.count, "error") %> impidieron guardar este viaje:
          </h3>
          <ul class="mt-2 text-sm text-red-700 space-y-1 list-disc list-inside">
            <% voyage.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow-sm rounded-2xl p-5 sm:p-6 border border-gray-100">
    <div class="flex items-center gap-3 mb-6">
      <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-blue-500 to-indigo-600 text-white flex items-center justify-center shadow-lg">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18M5 10l7-6 7 6" />
        </svg>
      </div>
      <div>
        <p class="text-xs font-semibold uppercase tracking-widest text-blue-600">Datos del viaje</p>
        <h2 class="text-xl font-bold text-gray-900">Complete la informaci贸n para crear o actualizar el viaje.</h2>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-5">
      <div class="space-y-2">
        <label class="text-xs font-semibold text-gray-600 uppercase tracking-wider">C贸digo de viaje *</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-3 flex items-center text-blue-500">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18M5 10l7-6 7 6" />
            </svg>
          </div>
          <%= form.text_field :viaje, required: true, class: "w-full pl-11 pr-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 font-mono" %>
        </div>
      </div>

      <div class="space-y-2">
        <label class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Tipo *</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-3 flex items-center text-indigo-500">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <%= form.select :voyage_type,
                Voyage.voyage_types.keys.map { |t| [t.titleize, t] },
                { prompt: "Seleccione tipo" },
                class: "w-full pl-11 pr-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-white",
                required: true %>
        </div>
      </div>

      <div class="space-y-2">
        <label class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Buque *</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-3 flex items-center text-blue-500">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 20h18M3 14h18M5 9l7-5 7 5M5 9v5m14-5v5" />
            </svg>
          </div>
          <%= form.collection_select :vessel_id, @vessels, :id, :name, { prompt: "Seleccione un buque" }, class: "w-full pl-11 pr-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-white", required: true %>
        </div>
      </div>

      <div class="space-y-2">
        <label class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Puerto de destino</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-3 flex items-center text-amber-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z" />
            </svg>
          </div>
          <%= form.collection_select :destination_port_id, @ports, :id, :display_name, { prompt: "Seleccione destino" }, class: "w-full pl-11 pr-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-white" %>
        </div>
      </div>

      <div class="space-y-2">
        <label class="text-xs font-semibold text-gray-600 uppercase tracking-wider">ETA</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-3 flex items-center text-blue-500">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <%= form.datetime_field :eta, class: "w-full pl-11 pr-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
        </div>
      </div>

      <div class="space-y-2">
        <label class="text-xs font-semibold text-gray-600 uppercase tracking-wider">ATA</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-3 flex items-center text-slate-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <%= form.datetime_field :ata, class: "w-full pl-11 pr-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
        </div>
      </div>

      <div class="space-y-2">
        <label class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Inicio de operaci贸n</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-3 flex items-center text-emerald-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m-8 4h10a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <%= form.datetime_field :inicio_operacion, class: "w-full pl-11 pr-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
        </div>
      </div>

      <div class="space-y-2">
        <label class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Fin de operaci贸n</label>
        <div class="relative">
          <div class="absolute inset-y-0 left-3 flex items-center text-rose-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m-8 4h10a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <%= form.datetime_field :fin_operacion, class: "w-full pl-11 pr-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-wrap justify-end gap-3">
    <%= link_to "Cancelar", voyage.persisted? ? voyage_path(voyage) : voyages_path, class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-full border border-slate-200 bg-white text-slate-700 text-sm font-semibold hover:bg-slate-50 transition" %>
    <%= form.submit(voyage.persisted? ? "Actualizar viaje" : "Crear viaje", class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white text-sm font-semibold shadow-md shadow-indigo-100/60 hover:from-blue-700 hover:to-indigo-700 transition cursor-pointer") %>
  </div>
<% end %>
