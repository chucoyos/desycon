<% content_for :title, "Puerto" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl mb-6"><%= @port.display_name %></h1>

  <div class="bg-white shadow-sm rounded-lg p-6 space-y-4">
    <div>
      <dt class="text-sm font-medium text-gray-500">Código</dt>
      <dd class="mt-1 text-lg text-gray-900"><%= @port.code %></dd>
    </div>
    
    <div>
      <dt class="text-sm font-medium text-gray-500">Nombre</dt>
      <dd class="mt-1 text-lg text-gray-900"><%= @port.name %></dd>
    </div>
    
    <div>
      <dt class="text-sm font-medium text-gray-500">País</dt>
      <dd class="mt-1 text-lg text-gray-900"><%= @port.country_name %></dd>
    </div>
  </div>

  <div class="mt-6 space-x-2">
    <%= link_to "Editar", edit_port_path(@port), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium" %>
    <%= link_to "Volver", ports_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Eliminar", @port, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "¿Estás seguro?" } %>
  </div>
</div>
