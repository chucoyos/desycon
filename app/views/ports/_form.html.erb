<%= form_with(model: port, class: "space-y-6") do |form| %>
  <%= render "shared/error_messages", object: port %>

  <!-- Name Field -->
  <div>
    <%= form.label :name, "Nombre", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 0 0 3 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 0 0 5.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 0 0 9.568 3Z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6Z" />
        </svg>
      </div>
      <%= form.text_field :name,
          class: "block w-full pl-10 pr-3 py-2.5 border #{port.errors[:name].any? ? 'border-red-300 text-red-900 placeholder-red-300 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:ring-emerald-500 focus:border-emerald-500'} rounded-lg shadow-sm transition duration-150 ease-in-out sm:text-sm",
          placeholder: "Ej: Puerto de Valparaíso",
          autofocus: true %>
    </div>
    <% if port.errors[:name].any? %>
      <p class="mt-2 text-sm text-red-600">
        <%= port.errors[:name].first %>
      </p>
    <% end %>
  </div>

  <!-- Code Field -->
  <div>
    <%= form.label :code, "Código", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498 4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 0 0-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0Z" />
        </svg>
      </div>
      <%= form.text_field :code,
          class: "block w-full pl-10 pr-3 py-2.5 border #{port.errors[:code].any? ? 'border-red-300 text-red-900 placeholder-red-300 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:ring-emerald-500 focus:border-emerald-500'} rounded-lg shadow-sm font-mono transition duration-150 ease-in-out sm:text-sm",
          placeholder: "Ej: CLVAP" %>
    </div>
    <% if port.errors[:code].any? %>
      <p class="mt-2 text-sm text-red-600">
        <%= port.errors[:code].first %>
      </p>
    <% end %>
  </div>

  <!-- Country Code Field -->
  <div>
    <%= form.label :country_code, "País", class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
        </svg>
      </div>
      <%= form.select :country_code,
          countries_for_select,
          { include_blank: "Selecciona un país" },
          class: "block w-full pl-10 pr-3 py-2.5 border #{port.errors[:country_code].any? ? 'border-red-300 text-red-900 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:ring-emerald-500 focus:border-emerald-500'} rounded-lg shadow-sm transition duration-150 ease-in-out sm:text-sm" %>
    </div>
    <% if port.errors[:country_code].any? %>
      <p class="mt-2 text-sm text-red-600">
        <%= port.errors[:country_code].first %>
      </p>
    <% end %>
  </div>

  <!-- Submit Button -->
  <div class="flex items-center justify-end gap-4 pt-4">
    <%= link_to ports_path, class: "inline-flex items-center gap-2 px-6 py-2.5 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-all duration-200" do %>
      Cancelar
    <% end %>
    <%= form.submit class: "inline-flex items-center gap-2 px-6 py-2.5 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-gradient-to-r from-emerald-600 to-green-600 hover:from-emerald-700 hover:to-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-all duration-200" %>
  </div>
<% end %>
