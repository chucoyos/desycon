<% content_for :title, "Nuevo Puerto" %>

<div class="w-full max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to ports_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors duration-200" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
      </svg>
      <span class="font-medium">Volver a Puertos</span>
    <% end %>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden">
    <!-- Header -->
    <div class="bg-gradient-to-br from-emerald-500 to-green-600 px-8 py-6">
      <div class="flex items-center gap-4">
        <div class="flex items-center justify-center w-14 h-14 bg-white/20 backdrop-blur-sm rounded-2xl">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-white">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-white">Nuevo Puerto</h1>
          <p class="text-emerald-100 mt-1">Crea un nuevo puerto en el sistema</p>
        </div>
      </div>
    </div>

    <!-- Form -->
    <div class="px-8 py-6">
      <%= render "form", port: @port %>
    </div>
  </div>
</div>
