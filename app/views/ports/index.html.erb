<% content_for :title, "Puertos" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Puertos</h1>
    <%= link_to "Nuevo puerto", new_port_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="bg-white shadow-sm rounded-lg overflow-hidden mt-8">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Código</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">País</th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @ports.any? %>
          <% @ports.each do |port| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= port.code %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= port.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= port.country_name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                <%= link_to "Ver", port, class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to "Editar", edit_port_path(port), class: "text-gray-600 hover:text-gray-900" %>
                <%= button_to "Eliminar", port, method: :delete, class: "text-red-600 hover:text-red-900 inline", data: { turbo_confirm: "¿Estás seguro?" } %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="4" class="px-6 py-10 text-center text-gray-500">No hay puertos registrados.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
