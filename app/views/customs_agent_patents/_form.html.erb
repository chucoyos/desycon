<% patent ||= CustomsAgentPatent.new %>

<%= form_with model: [ entity, patent ], class: "patent-form p-3 bg-gray-50 border border-gray-200 rounded-lg mb-2", data: { turbo: true }, format: :turbo_stream do |f| %>
  <%= hidden_field_tag :context, "edit" %>
  <div class="flex items-center gap-2">
    <%= f.text_field :patent_number,
        class: "flex-1 px-3 py-2 border-2 border-gray-200 focus:border-blue-500 focus:ring-blue-500 rounded-lg focus:ring-2 transition-all duration-200 text-gray-900",
        placeholder: "NÃºmero de patente" %>
    <% if patent.errors[:patent_number].any? %>
      <span class="text-sm text-red-600"> <%= patent.errors[:patent_number].first %> </span>
    <% end %>
    <%= f.submit "Guardar",
        class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-150 font-medium" %>
    <%= button_tag type: "button",
        onclick: "document.getElementById('new_patent').innerHTML = ''; document.getElementById('add-patent-btn').style.display = 'inline-flex';",
        class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors duration-150 font-medium" do %>
      Cancelar
    <% end %>
  </div>
<% end %>
