<turbo-frame id="dispatch_modal">
  <div class="fixed inset-0 z-50 overflow-y-auto" aria-labelledby="dispatch-modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-slate-900/40 backdrop-blur-sm" onclick="document.getElementById('dispatch_modal').innerHTML=''" aria-hidden="true"></div>

    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative w-full max-w-lg overflow-hidden rounded-2xl bg-white shadow-xl ring-1 ring-black/5">
        <div class="flex items-center justify-between border-b border-slate-100 px-6 py-4">
          <div>
            <h3 id="dispatch-modal-title" class="text-lg font-semibold text-slate-900">Fecha y hora de despacho</h3>
            <p class="mt-1 text-xs text-slate-500">
              BL House: <span class="font-semibold text-slate-700"><%= bl_house_line.blhouse %></span>
              Â· Contenedor: <span class="font-semibold text-slate-700"><%= bl_house_line.container&.number || "Sin contenedor" %></span>
            </p>
          </div>
          <button type="button" class="rounded-full p-2 text-slate-400 hover:bg-slate-100 hover:text-slate-600" onclick="document.getElementById('dispatch_modal').innerHTML=''">
            <span class="sr-only">Cerrar</span>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="px-6 py-5">
          <%= form_with model: bl_house_line, url: update_dispatch_date_bl_house_line_path(bl_house_line), method: :patch, data: { turbo_frame: "dispatch_modal" }, class: "space-y-4" do |f| %>
            <% if bl_house_line.errors.any? %>
              <div class="rounded-lg border border-red-100 bg-red-50 p-3 text-sm text-red-700">
                <ul class="list-disc pl-5">
                  <% bl_house_line.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div>
              <%= f.label :fecha_despacho, "Fecha y Hora de Despacho", class: "block text-sm font-semibold text-slate-700 mb-2 uppercase tracking-wider" %>
              <%= f.datetime_field :fecha_despacho, required: true, class: "w-full rounded-lg border border-slate-300 px-3 py-2.5 text-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div class="flex items-center justify-end gap-2 pt-2">
              <button type="button" class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50" onclick="document.getElementById('dispatch_modal').innerHTML=''">Cancelar</button>
              <%= f.submit "Guardar", class: "rounded-lg bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-700" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
