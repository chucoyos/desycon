
<% content_for :title, "Partidas" %>

<div class="w-full px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <div class="flex items-start gap-4">
        <div class="flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
        </div>
        <div>
          <h1 class="font-bold text-3xl text-gray-900">Partidas</h1>
          <p class="text-sm text-gray-500 mt-1">Gestión de partidas BL House</p>
        </div>
      </div>
      <%# Temporarily hidden until container number/BL master input flow is defined and data availability (existing container & bl_master) is ensured %>
      <%# if policy(::BlHouseLine).create? %>
      <%#   link_to new_bl_house_line_path, class: "inline-flex items-center justify-center px-5 py-2.5 rounded-lg bg-gradient-to-r from-indigo-600 to-indigo-700 hover:from-indigo-700 hover:to-indigo-800 text-white shadow-md hover:shadow-lg transition-all duration-200 text-sm font-semibold" do %>
      <%#     content_tag(:svg, nil, class: "w-5 h-5 mr-2", fill: "none", stroke: "currentColor", viewBox: "0 0 24 24") do %>
      <%#       content_tag(:path, nil, stroke_linecap: "round", stroke_linejoin: "round", stroke_width: "2", d: "M12 4v16m8-8H4") %>
      <%#     end %>
      <%#     concat "Nueva Partida" %>
      <%#   end %>
      <%# end %>
    </div>
  </div>

  <!-- Search Form -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-5 mb-6">
    <div class="flex items-center gap-2 mb-4">
      <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <h2 class="text-sm font-semibold text-gray-700 uppercase tracking-wider">Búsqueda</h2>
    </div>
    <%= form_with url: bl_house_lines_path, method: :get, class: "w-full" do |f| %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-3">
        <div class="min-w-0">
          <%= f.label :blhouse, "BL House", class: "sr-only" %>
          <%= f.text_field :blhouse, value: params[:blhouse], placeholder: "BL House...", class: "block w-full h-12 px-4 border border-gray-200 rounded-md bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm transition-shadow truncate" %>
        </div>

        <div class="min-w-0">
          <%= f.label :container_number, "Contenedor", class: "sr-only" %>
          <%= f.text_field :container_number, value: params[:container_number], placeholder: "Número de contenedor...", class: "block w-full h-12 px-4 border border-gray-200 rounded-md bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm transition-shadow truncate" %>
        </div>

        <div class="relative w-full sm:w-auto">
          <%= f.label :client_id, "Cliente", class: "sr-only" %>
          <%= f.select :client_id, options_from_collection_for_select(@clients || Entity.clients.order(:name), :id, :name, params[:client_id]), { include_blank: "Todos los clientes" }, class: "block w-full px-3 py-3.5 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition duration-150 ease-in-out text-sm" %>
        </div>

        <div class="relative w-full sm:w-auto">
          <%= f.label :customs_agent_id, "Agente Aduanal", class: "sr-only" %>
          <%= f.select :customs_agent_id, options_from_collection_for_select(@customs_agents || Entity.customs_agents.order(:name), :id, :display_name, params[:customs_agent_id]), { include_blank: "Todos los agentes" }, class: "block w-full px-3 py-3.5 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition duration-150 ease-in-out text-sm" %>
        </div>

        <div class="relative w-full sm:w-auto">
          <%= f.label :status, "Estatus", class: "sr-only" %>
          <%= f.select :status, options_for_select(@status_filter_options.map { |status| [status.titleize, status] }, params[:status]), { include_blank: "Todos los estatus" }, class: "block w-full px-3 py-3.5 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition duration-150 ease-in-out text-sm" %>
        </div>
      </div>

      <div class="flex flex-wrap items-center gap-2 mt-4">
        <%= f.submit "Buscar", class: "px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg text-sm font-semibold transition-all shadow-sm hover:shadow-md cursor-pointer" %>
        <%= link_to "Limpiar", bl_house_lines_path, class: "px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Pagination top -->
  <div class="mb-6">
    <%= render 'shared/tailwind_pagination', paginated: @bl_house_lines %>
  </div>

  <!-- Desktop table view -->
  <div class="hidden lg:block bg-white shadow-sm rounded-xl overflow-hidden border border-gray-100">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gradient-to-r from-gray-50 to-white">
        <tr>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">BL House</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Partida</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Contenido</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Cantidad</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Peso</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Volumen</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Estado</th>
          <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <% if @bl_house_lines.any? %>
        <% @bl_house_lines.each do |bl_house_line| %>
          <tbody class="bg-white divide-y divide-gray-100" data-controller="expandable-row">
            <tr class="hover:bg-gray-50 transition-colors duration-150 cursor-pointer" data-action="click->expandable-row#toggle">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center shadow-sm flex-shrink-0">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                  </div>
                  <div class="flex items-center gap-2">
                    <span class="text-sm font-semibold text-gray-900"><%= bl_house_line.blhouse %></span>
                    <svg data-expandable-row-target="chevron" class="w-4 h-4 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 9l6 6 6-6" />
                    </svg>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= bl_house_line.partida %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 max-w-xs truncate"><%= bl_house_line.contiene %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= bl_house_line.cantidad %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= number_with_precision(bl_house_line.peso, precision: 2) if bl_house_line.peso %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= number_with_precision(bl_house_line.volumen, precision: 2) if bl_house_line.volumen %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= bl_house_line_status_badge_class(bl_house_line.status) %>">
                  <%= bl_house_line_status_icon(bl_house_line.status) %>
                  <%= bl_house_line_status_nombre(bl_house_line.status) %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end items-center gap-2">
                  <%= link_to bl_house_line, class: "p-2 text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors", title: "Ver detalles", data: { action: "click->expandable-row#stop" } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  <% end %>
                  <% unless current_user&.customs_broker? %>
                    <%= link_to edit_bl_house_line_path(bl_house_line), class: "p-2 text-gray-600 hover:bg-gray-50 rounded-lg transition-colors", title: "Editar", data: { action: "click->expandable-row#stop" } do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    <% end %>
                  <% end %>
                  <% if bl_house_line.revalidado? %>
                    <%= link_to documents_bl_house_line_path(bl_house_line), class: "p-2 text-green-600 hover:bg-green-50 rounded-lg transition-colors", title: "Descargar Documentos", data: { turbo_frame: "revalidation_modal", action: "click->expandable-row#stop" } do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V18a2 2 0 01-2 2z"/>
                      </svg>
                    <% end %>
                  <% end %>
                  <% if policy(bl_house_line).destroy? %>
                    <%= button_to bl_house_line, method: :delete, class: "p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors inline-flex", title: "Eliminar", data: { turbo_confirm: "¿Estás seguro de eliminar esta partida?", action: "click->expandable-row#stop" } do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
            <tr class="hidden bg-gray-50" data-expandable-row-target="content">
              <td colspan="8" class="bg-blue-50">
                <div class="px-4 py-8 sm:px-12 lg:px-12 lg:px-4 lg:mr-6">
                  <div class="rounded-2xl border border-gray-200 bg-white shadow-sm overflow-hidden">
                    <div class="p-6 sm:p-8 space-y-8">
                      <div class="space-y-4">
                        <div class="flex items-center justify-center gap-2">
                           <div class="h-px w-8 bg-gray-300"></div>
                           <div class="text-xs font-bold uppercase tracking-widest text-gray-500 text-center">Documentos</div>
                           <div class="h-px w-8 bg-gray-300"></div>
                        </div>
                        <div class="flex justify-center w-full overflow-x-auto">
                          <%= render partial: "customs_agents/documents_info", locals: { bl_house_line: bl_house_line } %>
                        </div>
                      </div>
                      
                      <div class="space-y-4">
                         <div class="flex items-center justify-center gap-2">
                           <div class="h-px w-8 bg-gray-300"></div>
                           <div class="text-xs font-bold uppercase tracking-widest text-gray-500 text-center">Estatus</div>
                           <div class="h-px w-8 bg-gray-300"></div>
                        </div>
                        <div class="w-full overflow-x-auto">
                          <%= render partial: "customs_agents/status_pipeline", locals: { bl_house_line: bl_house_line } %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          </tbody>
        <% end %>
      <% else %>
        <tbody class="bg-white divide-y divide-gray-100">
          <tr>
            <td colspan="8" class="px-6 py-12 text-center">
              <div class="flex flex-col items-center">
                <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
                <p class="text-gray-500 text-lg font-medium">No hay partidas registradas</p>
                <p class="text-gray-400 text-sm mt-1">Comienza creando tu primera partida</p>
              </div>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>

  <!-- Mobile cards -->
  <div class="lg:hidden space-y-4">
    <% if @bl_house_lines.any? %>
      <% @bl_house_lines.each do |bl_house_line| %>
        <div class="bg-white shadow-sm rounded-xl p-4 border border-gray-100 hover:shadow-md transition-shadow duration-200">
          <div class="flex items-start gap-3 mb-3">
            <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center shadow-sm flex-shrink-0">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-bold text-gray-900"><%= bl_house_line.blhouse %></h3>
              <div class="flex items-center gap-2 mt-1">
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                  Partida <%= bl_house_line.partida %>
                </span>
              </div>
              <p class="text-sm text-gray-600 flex items-center gap-1 mt-2">Cliente: <%= bl_house_line.client&.name || 'N/A' %></p>
            </div>
          </div>

          <div class="flex justify-end gap-2 pt-3 border-t border-gray-100">
            <%= link_to bl_house_line, class: "p-2 text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors", title: "Ver" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            <% end %>
            <% unless current_user&.customs_broker? %>
              <%= link_to edit_bl_house_line_path(bl_house_line), class: "p-2 text-gray-600 hover:bg-gray-50 rounded-lg transition-colors", title: "Editar" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              <% end %>
            <% end %>
            <% if bl_house_line.revalidado? %>
              <%= link_to documents_bl_house_line_path(bl_house_line), class: "p-2 text-green-600 hover:bg-green-50 rounded-lg transition-colors", title: "Descargar Documentos", data: { turbo_frame: "revalidation_modal" } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V18a2 2 0 01-2 2z"/>
                </svg>
              <% end %>
            <% end %>
            <% if policy(bl_house_line).destroy? %>
              <%= button_to bl_house_line, method: :delete, class: "p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors inline-flex", title: "Eliminar", data: { turbo_confirm: "¿Estás seguro?" } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white shadow-sm rounded-xl p-12 text-center border border-gray-100">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        <p class="text-gray-500 text-lg font-medium">No hay partidas registradas</p>
        <p class="text-gray-400 text-sm mt-1">Comienza creando tu primera partida</p>
      </div>
    <% end %>
  </div>

  <!-- Pagination bottom -->
  <div class="mt-6">
    <%= render 'shared/tailwind_pagination', paginated: @bl_house_lines %>
  </div>
</div>

<turbo-frame id="approval_modal"></turbo-frame>
<turbo-frame id="revalidation_modal"></turbo-frame>
