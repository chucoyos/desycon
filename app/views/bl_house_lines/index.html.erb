
<% content_for :title, "Partidas" %>

<div class="w-full px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <div class="flex items-start gap-4">
        <div class="flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
        </div>
        <div>
          <h1 class="font-bold text-3xl text-gray-900">Partidas</h1>
          <p class="text-sm text-gray-500 mt-1">Gestión de partidas BL House</p>
        </div>
      </div>
      <%# Temporarily hidden until container number/BL master input flow is defined and data availability (existing container & bl_master) is ensured %>
      <%# if policy(::BlHouseLine).create? %>
      <%#   link_to new_bl_house_line_path, class: "inline-flex items-center justify-center px-5 py-2.5 rounded-lg bg-gradient-to-r from-indigo-600 to-indigo-700 hover:from-indigo-700 hover:to-indigo-800 text-white shadow-md hover:shadow-lg transition-all duration-200 text-sm font-semibold" do %>
      <%#     content_tag(:svg, nil, class: "w-5 h-5 mr-2", fill: "none", stroke: "currentColor", viewBox: "0 0 24 24") do %>
      <%#       content_tag(:path, nil, stroke_linecap: "round", stroke_linejoin: "round", stroke_width: "2", d: "M12 4v16m8-8H4") %>
      <%#     end %>
      <%#     concat "Nueva Partida" %>
      <%#   end %>
      <%# end %>
    </div>
  </div>

  <!-- Search Form -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-5 mb-6">
    <div class="flex items-center gap-2 mb-4">
      <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <h2 class="text-sm font-semibold text-gray-700 uppercase tracking-wider">Búsqueda</h2>
    </div>
    <%= form_with url: bl_house_lines_path, method: :get, class: "w-full" do |f| %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3">
        <div class="min-w-0">
          <%= f.label :blhouse, "BL House", class: "sr-only" %>
          <%= f.text_field :blhouse, value: params[:blhouse], placeholder: "BL House...", class: "block w-full h-12 px-4 border border-gray-200 rounded-md bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm transition-shadow truncate" %>
        </div>

        <div class="min-w-0">
          <%= f.label :container_number, "Contenedor", class: "sr-only" %>
          <%= f.text_field :container_number, value: params[:container_number], placeholder: "Número de contenedor...", class: "block w-full h-12 px-4 border border-gray-200 rounded-md bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm transition-shadow truncate" %>
        </div>

        <div class="relative w-full sm:w-auto">
          <%= f.label :client_id, "Cliente", class: "sr-only" %>
          <%= f.select :client_id, options_from_collection_for_select(@clients || Entity.clients.order(:name), :id, :name, params[:client_id]), { include_blank: "Todos los clientes" }, class: "block w-full px-3 py-3.5 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition duration-150 ease-in-out text-sm" %>
        </div>

        <div class="relative w-full sm:w-auto">
          <%= f.label :customs_agent_id, "Agencia Aduanal", class: "sr-only" %>
          <%= f.select :customs_agent_id, options_from_collection_for_select(@customs_agents || Entity.customs_agents.order(:name), :id, :display_name, params[:customs_agent_id]), { include_blank: "Todas las agencias" }, class: "block w-full px-3 py-3.5 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition duration-150 ease-in-out text-sm" %>
        </div>

        <div class="relative w-full sm:w-auto">
          <%= f.label :status, "Estatus", class: "sr-only" %>
          <%= f.select :status, options_for_select(@status_filter_options.map { |status| [status.titleize, status] }, @selected_status_filter), { include_blank: "Todos los estatus" }, class: "block w-full px-3 py-3.5 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition duration-150 ease-in-out text-sm" %>
        </div>

        <div class="relative w-full sm:w-auto xl:col-span-2">
          <%= f.label :start_date, "Rango de fechas", class: "sr-only" %>
          <div class="grid grid-cols-2 gap-2">
            <%= f.date_field :start_date, value: @selected_start_date, class: "block w-full px-3 py-3.5 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition duration-150 ease-in-out text-sm" %>
            <%= f.date_field :end_date, value: @selected_end_date, class: "block w-full px-3 py-3.5 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition duration-150 ease-in-out text-sm" %>
          </div>
        </div>

        <% unless current_user&.customs_broker? %>
          <div class="relative w-full sm:w-auto">
            <%= f.label :hidden, "Visibilidad", class: "sr-only" %>
            <%= f.select :hidden,
              options_for_select([
                ["Todas las partidas", nil],
                ["Solo visibles", "visible"],
                ["Solo ocultas", "hidden"]
              ], params[:hidden]),
              {},
              class: "block w-full px-3 py-3.5 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition duration-150 ease-in-out text-sm"
            %>
          </div>
        <% end %>
      </div>

      <div class="flex flex-wrap items-center gap-2 mt-4">
        <%= f.submit "Buscar", class: "px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg text-sm font-semibold transition-all shadow-sm hover:shadow-md cursor-pointer" %>
        <%= link_to "Limpiar", bl_house_lines_path, class: "px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition-colors" %>
      </div>

      <% active_filters_present = params[:blhouse].present? ||
        params[:container_number].present? ||
        params[:client_id].present? ||
        params[:customs_agent_id].present? ||
        @selected_start_date.present? ||
        @selected_end_date.present? ||
        @selected_status_filter.present? ||
        params[:hidden].present? %>

      <% if active_filters_present %>
        <div class="pt-4 mt-4 border-t border-gray-200">
          <div class="flex items-center justify-between gap-3 flex-wrap">
            <div class="flex items-center gap-2 text-sm text-gray-600 flex-wrap">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-medium">Filtros activos:</span>

              <% if params[:blhouse].present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                  BL House: <%= params[:blhouse] %>
                </span>
              <% end %>

              <% if params[:container_number].present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-sky-100 text-sky-800">
                  Contenedor: <%= params[:container_number] %>
                </span>
              <% end %>

              <% if params[:client_id].present? %>
                <% client_name = @clients.find { |c| c.id == params[:client_id].to_i }&.name || "ID #{params[:client_id]}" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-teal-100 text-teal-800">
                  Cliente: <%= client_name %>
                </span>
              <% end %>

              <% if params[:customs_agent_id].present? %>
                <% agent_name = @customs_agents.find { |a| a.id == params[:customs_agent_id].to_i }&.display_name || "ID #{params[:customs_agent_id]}" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  Agencia: <%= agent_name %>
                </span>
              <% end %>

              <% if @selected_status_filter.present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                  Estatus: <%= bl_house_line_status_nombre(@selected_status_filter) %>
                </span>
              <% end %>

              <% if @selected_start_date.present? || @selected_end_date.present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  Fecha: <%= [@selected_start_date, @selected_end_date].compact.join(" - ") %>
                </span>
              <% end %>

              <% if params[:hidden].present? %>
                <% hidden_label = { "visible" => "Solo visibles", "hidden" => "Solo ocultas" }[params[:hidden]] || params[:hidden] %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                  Visibilidad: <%= hidden_label %>
                </span>
              <% end %>
            </div>

            <%= link_to bl_house_lines_path,
              class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium inline-flex items-center gap-1" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
              Quitar filtros
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Pagination top -->
  <div class="mb-6">
    <%= render 'shared/tailwind_pagination', paginated: @bl_house_lines %>
  </div>

  <!-- Desktop table view -->
  <div class="hidden lg:block bg-white shadow-sm rounded-xl border border-gray-100">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gradient-to-r from-gray-50 to-white">
        <tr>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">BL House</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Partida</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Contenido</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Cantidad</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Peso</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Volumen</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Estado</th>
          <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <% if @bl_house_lines.any? %>
        <% @bl_house_lines.each do |bl_house_line| %>
          <%= render partial: "bl_house_lines/row", locals: { bl_house_line: bl_house_line } %>
        <% end %>
      <% else %>
        <tbody class="bg-white divide-y divide-gray-100">
          <tr>
            <td colspan="8" class="px-6 py-12 text-center">
              <div class="flex flex-col items-center">
                <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
                <p class="text-gray-500 text-lg font-medium">No hay partidas registradas</p>
                <p class="text-gray-400 text-sm mt-1">Comienza creando tu primera partida</p>
              </div>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>

  <!-- Mobile cards -->
  <div class="lg:hidden space-y-4">
    <% if @bl_house_lines.any? %>
      <% @bl_house_lines.each do |bl_house_line| %>
        <%= render partial: "bl_house_lines/mobile_card", locals: { bl_house_line: bl_house_line } %>
      <% end %>
    <% else %>
      <div class="bg-white shadow-sm rounded-xl p-12 text-center border border-gray-100">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        <p class="text-gray-500 text-lg font-medium">No hay partidas registradas</p>
        <p class="text-gray-400 text-sm mt-1">Comienza creando tu primera partida</p>
      </div>
    <% end %>
  </div>

  <!-- Pagination bottom -->
  <div class="mt-6">
    <%= render 'shared/tailwind_pagination', paginated: @bl_house_lines %>
  </div>
</div>

<turbo-frame id="approval_modal"></turbo-frame>
<turbo-frame id="revalidation_modal"></turbo-frame>
<turbo-frame id="dispatch_modal"></turbo-frame>
