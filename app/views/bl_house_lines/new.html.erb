<% content_for :title, "Nueva Partida" %>

<div class="w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">

  <div class="mb-4 sm:mb-6">
    <% if params[:container_id].present? %>
      <%= link_to container_path(params[:container_id], anchor: 'partidas'), class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium text-blue-700 hover:bg-blue-50 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"/>
        </svg>
        <span>Volver al contenedor</span>
      <% end %>
    <% else %>
      <%= link_to bl_house_lines_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium text-blue-700 hover:bg-blue-50 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"/>
        </svg>
        <span>Volver a partidas</span>
      <% end %>
    <% end %>
  </div>

  <div class="mb-6 sm:mb-8">
    <div class="flex items-start gap-4">
      <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-gradient-to-br from-green-600 to-green-700 shadow-lg">
        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
      </div>
      <div class="flex-1">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Nueva Partida</h1>
        <p class="mt-2 text-sm sm:text-base text-gray-600">Complete la informaci√≥n de la partida. Los campos marcados con <span class="text-red-500 font-medium">*</span> son obligatorios.</p>
        <% if params[:container_id].present? %>
          <div class="mt-3 inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
            Creando partida para contenedor
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= render "form", bl_house_line: @bl_house_line %>
</div>