<% content_for :title, "Partida ##{@bl_house_line.partida}" %>

<div class="w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">

  <!-- Breadcrumb Navigation -->
  <div class="mb-4 sm:mb-6">
    <% if @bl_house_line.container.present? %>
      <%= link_to container_path(@bl_house_line.container, anchor: 'partidas'), class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium text-blue-700 hover:bg-blue-50 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"/>
        </svg>
        <span>Volver al contenedor</span>
      <% end %>
    <% else %>
      <%= link_to bl_house_lines_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium text-blue-700 hover:bg-blue-50 transition-all duration-200 group" do %>
        <svg class="w-5 h-5 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"/>
        </svg>
        <span>Volver a partidas</span>
      <% end %>
    <% end %>
  </div>

  <!-- Header -->
  <div class="bg-white shadow-md rounded-2xl overflow-hidden mb-6">
    <div class="px-4 sm:px-6 lg:px-8 py-5 sm:py-6 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-2">
            <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-gradient-to-br from-green-600 to-green-700 shadow-lg">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
            <div>
              <h1 class="text-2xl sm:text-3xl font-mono font-bold text-gray-900">Partida #<%= @bl_house_line.partida %></h1>
              <p class="text-sm text-gray-500">BL House: <%= @bl_house_line.blhouse %></p>
            </div>
          </div>
          <div class="flex flex-wrap gap-2 mt-3">
            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium border <%= status_badge_class(@bl_house_line.status) %> shadow-sm">
              <%= @bl_house_line.status.humanize %>
            </span>
            <% if @bl_house_line.container.present? %>
              <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium border border-blue-200 bg-blue-50 text-blue-700 shadow-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
                <%= @bl_house_line.container.number %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <%= link_to edit_bl_house_line_path(@bl_house_line), class: "inline-flex items-center gap-2 px-4 py-2.5 rounded-lg text-sm font-medium text-white bg-green-600 hover:bg-green-700 shadow-sm hover:shadow-md transition-all duration-200" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            <span class="hidden sm:inline">Editar</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Grid de contenido -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    
    <!-- Columna principal (2/3) -->
    <div class="lg:col-span-2 space-y-6">
      
  <!-- Información Básica -->
  <div class="bg-white shadow-md rounded-xl p-5 sm:p-6 border border-gray-100 mb-6">
    <div class="flex items-center gap-3 mb-5">
      <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-green-600 shadow-sm">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
      </div>
      <h2 class="text-xl font-bold text-gray-900">Información Básica</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-5">
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider">BL House</label>
          <p class="text-gray-900 font-mono bg-gray-50 px-3 py-2 rounded-lg"><%= @bl_house_line.blhouse %></p>
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider">Número de Partida</label>
          <p class="text-gray-900 font-semibold text-lg"><%= @bl_house_line.partida %></p>
        </div>
      </div>

      <div class="space-y-4">
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider">Contenido</label>
          <p class="text-gray-900"><%= @bl_house_line.contiene.presence || "No especificado" %></p>
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider">Marcas y Números</label>
          <p class="text-gray-900"><%= @bl_house_line.marcas.presence || "No especificado" %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Detalles de Cantidad y Estado -->
  <div class="bg-white shadow-md rounded-xl p-5 sm:p-6 border border-gray-100 mb-6">
    <div class="flex items-center gap-3 mb-5">
      <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-blue-600 shadow-sm">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
        </svg>
      </div>
      <h2 class="text-xl font-bold text-gray-900">Detalles de Cantidad y Estado</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-5">
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider">Cantidad</label>
        <p class="text-gray-900 font-semibold text-lg"><%= @bl_house_line.cantidad %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider">Estado</label>
        <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full <%= status_badge_class(@bl_house_line.status) %>">
          <%= @bl_house_line.status.humanize %>
        </span>
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider">Peso Bruto (kg)</label>
        <p class="text-gray-900"><%= number_with_precision(@bl_house_line.peso, precision: 2) if @bl_house_line.peso %></p>
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider">Volumen (m³)</label>
        <p class="text-gray-900"><%= number_with_precision(@bl_house_line.volumen, precision: 2) if @bl_house_line.volumen %></p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-5 mt-4">
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider">Empaque</label>
        <p class="text-gray-900"><%= @bl_house_line.packaging&.nombre || "No especificado" %></p>
      </div>
    </div>
  </div>

  <!-- Información de Agente Aduanal y Cliente -->
  <div class="bg-white shadow-md rounded-xl p-5 sm:p-6 border border-gray-100 mb-6">
    <div class="flex items-center gap-3 mb-5">
      <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-purple-600 shadow-sm">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
      <h2 class="text-xl font-bold text-gray-900">Información de Agente Aduanal y Cliente</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-5">
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider">Agente Aduanal</label>
        <% if @bl_house_line.customs_agent.present? %>
          <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
            <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-purple-100">
              <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <div>
              <p class="text-gray-900 font-medium"><%= @bl_house_line.customs_agent.name %></p>
              <p class="text-sm text-gray-500">Agente Aduanal</p>
            </div>
          </div>
        <% else %>
          <p class="text-gray-500 italic">No asignado</p>
        <% end %>
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wider">Cliente</label>
        <% if @bl_house_line.client.present? %>
          <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
            <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-blue-100">
              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <div>
              <p class="text-gray-900 font-medium"><%= @bl_house_line.client.name %></p>
              <p class="text-sm text-gray-500">Cliente</p>
            </div>
          </div>
        <% else %>
          <p class="text-gray-500 italic">No asignado</p>
        <% end %>
      </div>
    </div>
  </div>
    </div>
    
    <!-- Columna lateral (1/3) -->
    <div class="space-y-6">
      
  <!-- Documentos -->

  <!-- Documentos -->
  <div class="bg-white shadow-sm rounded-xl p-5 border border-gray-100 mb-6">
    <div class="flex items-center gap-3 mb-5">
      <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-orange-600 shadow-sm">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
        </svg>
      </div>
      <h2 class="text-lg font-bold text-gray-900">Documentos</h2>
    </div>
    
    <div class="space-y-3">
      <!-- BL Endosado -->
      <div class="flex items-center justify-between p-3 rounded-lg <%= @bl_house_line.bl_endosado_documento.attached? ? 'bg-green-50 border border-green-200' : 'bg-gray-50 border border-gray-200' %>">
        <div class="flex items-center gap-3">
          <svg class="w-8 h-8 <%= @bl_house_line.bl_endosado_documento.attached? ? 'text-green-600' : 'text-gray-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-gray-900">BL Endosado</p>
            <p class="text-xs text-gray-500" title="<%= @bl_house_line.bl_endosado_documento.filename if @bl_house_line.bl_endosado_documento.attached? %>">
              <% if @bl_house_line.bl_endosado_documento.attached? %>
                <%= truncate_filename(@bl_house_line.bl_endosado_documento.filename, max_length: 25) %>
              <% else %>
                No adjunto
              <% end %>
            </p>
          </div>
        </div>
        <% if @bl_house_line.bl_endosado_documento.attached? %>
          <%= link_to rails_blob_path(@bl_house_line.bl_endosado_documento, disposition: "inline"), target: "_blank", class: "p-2 text-green-600 hover:bg-green-100 rounded-lg transition-colors", title: "Ver documento" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          <% end %>
        <% end %>
      </div>

      <!-- Liberación -->
      <div class="flex items-center justify-between p-3 rounded-lg <%= @bl_house_line.liberacion_documento.attached? ? 'bg-green-50 border border-green-200' : 'bg-gray-50 border border-gray-200' %>">
        <div class="flex items-center gap-3">
          <svg class="w-8 h-8 <%= @bl_house_line.liberacion_documento.attached? ? 'text-green-600' : 'text-gray-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-gray-900">Liberación</p>
            <p class="text-xs text-gray-500" title="<%= @bl_house_line.liberacion_documento.filename if @bl_house_line.liberacion_documento.attached? %>">
              <% if @bl_house_line.liberacion_documento.attached? %>
                <%= truncate_filename(@bl_house_line.liberacion_documento.filename, max_length: 25) %>
              <% else %>
                No adjunto
              <% end %>
            </p>
          </div>
        </div>
        <% if @bl_house_line.liberacion_documento.attached? %>
          <%= link_to rails_blob_path(@bl_house_line.liberacion_documento, disposition: "inline"), target: "_blank", class: "p-2 text-green-600 hover:bg-green-100 rounded-lg transition-colors", title: "Ver documento" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          <% end %>
        <% end %>
      </div>

      <!-- BL Revalidado -->
      <div class="flex items-center justify-between p-3 rounded-lg <%= @bl_house_line.bl_revalidado_documento.attached? ? 'bg-green-50 border border-green-200' : 'bg-gray-50 border border-gray-200' %>">
        <div class="flex items-center gap-3">
          <svg class="w-8 h-8 <%= @bl_house_line.bl_revalidado_documento.attached? ? 'text-green-600' : 'text-gray-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-gray-900">BL Revalidado</p>
            <p class="text-xs text-gray-500" title="<%= @bl_house_line.bl_revalidado_documento.filename if @bl_house_line.bl_revalidado_documento.attached? %>">
              <% if @bl_house_line.bl_revalidado_documento.attached? %>
                <%= truncate_filename(@bl_house_line.bl_revalidado_documento.filename, max_length: 25) %>
              <% else %>
                No adjunto
              <% end %>
            </p>
          </div>
        </div>
        <% if @bl_house_line.bl_revalidado_documento.attached? %>
          <%= link_to rails_blob_path(@bl_house_line.bl_revalidado_documento, disposition: "inline"), target: "_blank", class: "p-2 text-green-600 hover:bg-green-100 rounded-lg transition-colors", title: "Ver documento" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          <% end %>
        <% end %>
      </div>

      <% if @bl_house_line.documentos_completos? %>
        <div class="mt-4 p-3 bg-green-50 border border-green-200 rounded-lg">
          <div class="flex items-center gap-2 text-green-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-sm font-medium">Documentos completos</p>
          </div>
        </div>
      <% else %>
        <div class="mt-4 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
          <div class="flex items-center gap-2 text-yellow-800">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <p class="text-sm font-medium">Documentos incompletos</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

      <!-- Historial de Status -->
      <section class="bg-white shadow-sm rounded-xl p-5 border border-gray-100">
        <div class="flex items-center gap-3 mb-5">
          <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-indigo-600 shadow-sm">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h2 class="text-lg font-bold text-gray-900">Historial</h2>
        </div>
        
        <% if @bl_house_line.bl_house_line_status_histories.any? %>
          <div class="space-y-3">
            <% @bl_house_line.bl_house_line_status_histories.order(fecha_actualizacion: :desc).limit(5).each do |history| %>
              <div class="flex gap-3 pb-3 border-b border-gray-100 last:border-0">
                <div class="flex-shrink-0 w-8 h-8 rounded-full <%= status_badge_class(history.status).split.first %> flex items-center justify-center">
                  <%= status_icon(history.status) %>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-semibold text-gray-900"><%= status_nombre(history.status) %></p>
                  <p class="text-xs text-gray-500 mt-0.5"><%= l(history.fecha_actualizacion, format: :short) %></p>
                  <% if history.observaciones.present? %>
                    <p class="text-xs text-gray-600 mt-1"><%= history.observaciones %></p>
                  <% end %>
                  <% if history.user.present? %>
                    <p class="text-xs text-gray-400 mt-1">por <%= history.user.email %></p>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-sm text-gray-500">Sin historial</p>
          </div>
        <% end %>
      </section>


</div>
    </div>
  </div>
    </div>
  </div>
</div>
