<tbody class="bg-white divide-y divide-gray-100" data-controller="expandable-row" id="<%= dom_id(bl_house_line, :row) %>">
  <tr class="hover:bg-gray-50 transition-colors duration-150 cursor-pointer" data-action="click->expandable-row#toggle">
    <td class="px-6 py-4 whitespace-nowrap">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center shadow-sm flex-shrink-0">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
        </div>
        <div class="flex items-center gap-2">
          <span class="text-sm font-semibold text-gray-900"><%= bl_house_line.blhouse %></span>
          <svg data-expandable-row-target="chevron" class="w-4 h-4 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 9l6 6 6-6" />
          </svg>
        </div>
      </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= bl_house_line.partida %></td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 max-w-xs truncate"><%= bl_house_line.contiene %></td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= bl_house_line.cantidad %></td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= number_with_precision(bl_house_line.peso, precision: 2) if bl_house_line.peso %></td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= number_with_precision(bl_house_line.volumen, precision: 2) if bl_house_line.volumen %></td>
    <td class="px-6 py-4 whitespace-nowrap">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= bl_house_line_status_badge_class(bl_house_line.status) %>">
        <%= bl_house_line_status_icon(bl_house_line.status) %>
        <%= bl_house_line_status_nombre(bl_house_line.status) %>
      </span>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
      <div class="relative inline-block text-left" data-controller="dropdown">
        <button type="button" class="cursor-pointer inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-50 text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500" id="dropdownMenuButton-<%= bl_house_line.id %>" aria-expanded="false" aria-haspopup="true" onclick="document.getElementById('dropdown-menu-<%= bl_house_line.id %>').classList.toggle('hidden')">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <circle cx="6" cy="12" r="1.5" />
            <circle cx="12" cy="12" r="1.5" />
            <circle cx="18" cy="12" r="1.5" />
          </svg>
        </button>
        <div id="dropdown-menu-<%= bl_house_line.id %>" class="hidden absolute right-0 z-10 mt-2 w-44 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
          <div class="py-2" role="menu">
            <%= link_to bl_house_line, class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              Ver detalles
            <% end %>

            <% unless current_user&.customs_broker? %>
              <%= link_to edit_bl_house_line_path(bl_house_line), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Editar
              <% end %>

              <% if bl_house_line.revalidado? %>
                <%= link_to dispatch_date_bl_house_line_path(bl_house_line), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-blue-700 hover:bg-blue-50 hover:text-blue-900 transition-colors", role: "menuitem", data: { turbo_frame: "dispatch_modal" } do %>
                  <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10m-7 4h4m-9 6h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  Fecha Despacho
                <% end %>
              <% end %>

              <%= button_to bl_house_line_path(bl_house_line, bl_house_line: { hidden_from_customs_agent: !bl_house_line.hidden_from_customs_agent }), method: :patch, class: "flex items-center gap-3 w-full px-4 py-2.5 text-sm #{bl_house_line.hidden_from_customs_agent? ? 'text-emerald-700 hover:bg-emerald-50' : 'text-amber-700 hover:bg-amber-50'} transition-colors", form: { data: { turbo_confirm: bl_house_line.hidden_from_customs_agent? ? nil : "Ocultar esta partida a la agencia aduanal?" } }, role: "menuitem" do %>
                <% if bl_house_line.hidden_from_customs_agent? %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Mostrar al agente
                <% else %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.973 9.973 0 013.478-5.568m3.065-1.72A9.956 9.956 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-1.249 2.592m-4.764-1.35a3 3 0 11-4.358-4.358" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3l18 18" />
                  </svg>
                  Ocultar al agente
                <% end %>
              <% end %>
            <% end %>

            <% if policy(bl_house_line).approve_revalidation? %>
              <%= link_to revalidation_approval_bl_house_line_path(bl_house_line), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-indigo-700 hover:bg-indigo-50 transition-colors", role: "menuitem", data: { turbo_frame: "approval_modal" } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2a2 2 0 012-2h2a2 2 0 012 2v2m-3-4v-2a2 2 0 00-2-2H9a2 2 0 00-2 2v2m6-6V7a2 2 0 00-2-2H9a2 2 0 00-2 2v2" />
                </svg>
                Abrir aprobación
              <% end %>
            <% end %>

            <% if policy(bl_house_line).reassign? && bl_house_line.revalidado? %>
              <%= link_to reassign_bl_house_line_path(bl_house_line), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-amber-700 hover:bg-amber-50 transition-colors", role: "menuitem" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
                Reasignar Agente
              <% end %>
            <% end %>

            <% if bl_house_line.revalidado? %>
               <%= link_to documents_bl_house_line_path(bl_house_line), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-green-700 hover:bg-green-50 transition-colors", role: "menuitem", data: { turbo_frame: "revalidation_modal" } do %>
                 <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V18a2 2 0 01-2 2z"/>
                 </svg>
                 Descarga Docs
               <% end %>
            <% end %>

            <% if policy(bl_house_line).destroy? %>
              <div class="border-t border-gray-100 my-1"></div>
              <%= button_to bl_house_line, method: :delete, class: "group flex w-full items-center gap-3 px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 hover:text-red-900 transition-colors", role: "menuitem", data: { turbo_confirm: "¿Estás seguro de eliminar esta partida?" } do %>
                 <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                 </svg>
                 Eliminar
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </td>
  </tr>
  <tr class="hidden bg-gray-50" data-expandable-row-target="content">
    <td colspan="8" class="bg-blue-50">
      <div class="px-4 py-8 sm:px-12 lg:px-12 lg:px-4 lg:mr-6">
        <div class="rounded-2xl border border-gray-200 bg-white shadow-sm overflow-hidden">
          <div class="p-6 sm:p-8 space-y-8">
            <div class="space-y-4">
              <div class="flex items-center justify-center gap-2">
                 <div class="h-px w-8 bg-gray-300"></div>
                 <div class="text-xs font-bold uppercase tracking-widest text-gray-500 text-center">Documentos</div>
                 <div class="h-px w-8 bg-gray-300"></div>
              </div>
              <div class="flex justify-center w-full overflow-x-auto">
                <%= render partial: "customs_agents/documents_info", locals: { bl_house_line: bl_house_line } %>
              </div>
            </div>

            <div class="space-y-4">
               <div class="flex items-center justify-center gap-2">
                 <div class="h-px w-8 bg-gray-300"></div>
                 <div class="text-xs font-bold uppercase tracking-widest text-gray-500 text-center">Estatus</div>
                 <div class="h-px w-8 bg-gray-300"></div>
              </div>
              <div class="w-full overflow-x-auto">
                <%= render partial: "customs_agents/status_pipeline", locals: { bl_house_line: bl_house_line } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </td>
  </tr>
</tbody>
