<div class="bg-white shadow-sm rounded-xl p-4 border border-gray-100 hover:shadow-md transition-shadow duration-200" id="<%= dom_id(bl_house_line, :mobile) %>">
  <div class="flex items-start gap-3 mb-3">
    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center shadow-sm flex-shrink-0">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
      </svg>
    </div>
    <div class="flex-1">
      <h3 class="text-lg font-bold text-gray-900"><%= bl_house_line.blhouse %></h3>
      <div class="flex items-center gap-2 mt-1">
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
          Partida <%= bl_house_line.partida %>
        </span>
      </div>
      <p class="text-sm text-gray-600 flex items-center gap-1 mt-2">Cliente: <%= bl_house_line.client&.name || "N/A" %></p>
      <div class="mt-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= bl_house_line_status_badge_class(bl_house_line.status) %>">
          <%= bl_house_line_status_icon(bl_house_line.status) %>
          <%= bl_house_line_status_nombre(bl_house_line.status) %>
        </span>
      </div>
    </div>
  </div>

  <div class="flex justify-end gap-2 pt-3 border-t border-gray-100">
    <%= link_to bl_house_line, class: "p-2 text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors", title: "Ver" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
      </svg>
    <% end %>
    <% unless current_user&.customs_broker? %>
      <%= button_to bl_house_line_path(bl_house_line, bl_house_line: { hidden_from_customs_agent: !bl_house_line.hidden_from_customs_agent }), method: :patch, class: "p-2 #{bl_house_line.hidden_from_customs_agent? ? 'text-emerald-700 hover:bg-emerald-50' : 'text-amber-700 hover:bg-amber-50'} rounded-lg transition-colors", form: { data: { turbo_confirm: bl_house_line.hidden_from_customs_agent? ? nil : "Ocultar esta partida a la agencia aduanal?" } }, title: (bl_house_line.hidden_from_customs_agent? ? "Mostrar a la agencia" : "Ocultar a la agencia") do %>
        <% if bl_house_line.hidden_from_customs_agent? %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% else %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.973 9.973 0 013.478-5.568m3.065-1.72A9.956 9.956 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-1.249 2.592m-4.764-1.35a3 3 0 11-4.358-4.358" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3l18 18" />
          </svg>
        <% end %>
      <% end %>
    <% end %>
    <% unless current_user&.customs_broker? %>
      <%= link_to edit_bl_house_line_path(bl_house_line), class: "p-2 text-gray-600 hover:bg-gray-50 rounded-lg transition-colors", title: "Editar" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      <% end %>
    <% end %>
    <% unless current_user&.customs_broker? %>
      <%= link_to dispatch_date_bl_house_line_path(bl_house_line), class: "p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors", title: "Fecha de Despacho", data: { turbo_frame: "dispatch_modal" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10m-7 4h4m-9 6h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      <% end %>
    <% end %>
    <% if policy(bl_house_line).approve_revalidation? %>
      <%= link_to revalidation_approval_bl_house_line_path(bl_house_line), class: "p-2 text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors", title: "Aprobar", data: { turbo_frame: "approval_modal" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2a2 2 0 012-2h2a2 2 0 012 2v2m-3-4v-2a2 2 0 00-2-2H9a2 2 0 00-2 2v2" />
        </svg>
      <% end %>
    <% end %>
    <% if policy(bl_house_line).reassign? && bl_house_line.revalidado? %>
      <%= link_to reassign_bl_house_line_path(bl_house_line), class: "p-2 text-amber-700 hover:bg-amber-50 rounded-lg transition-colors", title: "Reasignar" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
        </svg>
      <% end %>
    <% end %>
    <% if bl_house_line.revalidado? %>
      <%= link_to documents_bl_house_line_path(bl_house_line), class: "p-2 text-green-600 hover:bg-green-50 rounded-lg transition-colors", title: "Descargar Documentos", data: { turbo_frame: "revalidation_modal" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V18a2 2 0 01-2 2z"/>
        </svg>
      <% end %>
    <% end %>
    <% if policy(bl_house_line).destroy? %>
      <%= button_to bl_house_line, method: :delete, class: "p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors inline-flex", title: "Eliminar", data: { turbo_confirm: "Â¿EstÃ¡s seguro?" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      <% end %>
    <% end %>
  </div>
</div>
