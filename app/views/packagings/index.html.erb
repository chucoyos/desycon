<% content_for :title, "Empaques" %>

<div id="packagings">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-2xl font-bold">Empaques</h2>
    <%= link_to "Nuevo Empaque", new_packaging_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if notice.present? %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Creado</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @packagings.each do |packaging| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= packaging.nombre %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= l(packaging.created_at, format: :short) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to "Ver", packaging, class: "text-blue-600 hover:text-blue-900 mr-3" %>
              <%= link_to "Editar", edit_packaging_path(packaging), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
              <%= button_to "Eliminar", packaging, method: :delete,
                    class: "text-red-600 hover:text-red-900",
                    data: { turbo_confirm: "¿Estás seguro de que deseas eliminar este empaque?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @packagings.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-500">No hay empaques registrados.</p>
    </div>
  <% end %>
</div>
