<% content_for :title, "Empaque: #{@packaging.nombre}" %>

<div class="max-w-4xl mx-auto">
  <% if notice.present? %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900">Empaque: <%= @packaging.nombre %></h1>
    </div>

    <div class="px-6 py-4">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Nombre</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @packaging.nombre %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Creado</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= l(@packaging.created_at) %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Actualizado</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= l(@packaging.updated_at) %></dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="mt-6 flex justify-between">
    <%= link_to "Editar", edit_packaging_path(@packaging), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Volver a Empaques", packagings_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    <%= button_to "Eliminar", @packaging, method: :delete,
          class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded",
          data: { turbo_confirm: "¿Estás seguro de que deseas eliminar este empaque?" } %>
  </div>
</div>
