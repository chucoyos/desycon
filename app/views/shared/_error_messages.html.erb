<% if object.errors.any? %>
  <div id="error_explanation" class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-lg">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-red-800">
          <%= t("errors.template.header", count: object.errors.count, model: object.class.model_name.human.downcase) %>
        </h3>
        <div class="mt-2 text-sm text-red-700">
          <ul class="list-disc list-inside space-y-1">
            <%# Filtrar errores generales de modelos asociados que serán mostrados específicamente %>
            <% general_errors = object.errors.full_messages.reject { |message| message.include?("no es válido") } %>
            <% general_errors.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
          <%# Mostrar errores específicos de modelos asociados %>
          <% object.errors.each do |attribute, message| %>
            <% if message.present? && message.include?("no es válido") && object.respond_to?(attribute) %>
              <% associated_object = object.send(attribute) %>
              <% if associated_object && associated_object.errors.any? %>
                <div class="mt-2 p-2 bg-red-50 rounded border-l-2 border-red-300">
                  <p class="text-xs font-medium text-red-800 mb-1"><%= attribute.to_s.humanize %>:</p>
                  <ul class="list-disc list-inside space-y-1 text-xs text-red-700">
                    <% associated_object.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <% if object.errors.details.any? { |attr, details| details.any? { |d| d[:error] == :invalid } } %>
          <div class="mt-3 p-3 bg-red-100 rounded border border-red-200">
            <p class="text-sm text-red-800 font-medium">Nota: Si estás intentando agregar una dirección, asegúrate de completar todos los campos requeridos marcados con *.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
