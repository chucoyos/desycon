<% content_for :title, "Usuarios" %>

<div class="w-full px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <div class="flex items-start gap-4">
        <div class="flex items-center justify-center w-14 h-14 rounded-xl bg-gradient-to-br from-cyan-500 to-cyan-600 shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.856-1.487M15 10a3 3 0 11-6 0 3 3 0 016 0zM6 20a6 6 0 0110.89-1.23M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
        </div>
        <div>
          <h1 class="font-bold text-3xl text-gray-900">Usuarios</h1>
          <p class="text-sm text-gray-500 mt-1">Administra los usuarios del sistema</p>
        </div>
      </div>
      <%= link_to new_admin_user_path, class: "inline-flex items-center justify-center px-5 py-2.5 rounded-lg bg-gradient-to-r from-cyan-600 to-cyan-700 hover:from-cyan-700 hover:to-cyan-800 text-white shadow-md hover:shadow-lg transition-all duration-200 text-sm font-semibold" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Nuevo Usuario
      <% end %>
    </div>
  </div>

  <!-- Filtros de búsqueda -->
  <div class="bg-white rounded-xl shadow-md border border-gray-200 p-5 mb-6">
    <div class="flex items-center gap-2 mb-4">
      <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
      </svg>
      <h2 class="text-sm font-semibold text-gray-700 uppercase tracking-wider">Filtros de búsqueda</h2>
    </div>

    <%= form_with url: admin_users_path, method: :get, class: "grid grid-cols-1 md:grid-cols-3 gap-4" do |f| %>
      <div>
        <label class="block text-xs font-medium text-gray-600 mb-1">Buscar por email</label>
        <%= f.text_field :search, value: params[:search], placeholder: "usuario@ejemplo.com", class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 text-sm transition-all" %>
      </div>

      <div>
        <label class="block text-xs font-medium text-gray-600 mb-1">Rol</label>
        <%= f.select :role_id, options_for_select([["Todos", ""]] + @roles.map { |r| [r.display_name, r.id] }, params[:role_id]), {}, class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 text-sm transition-all" %>
      </div>

      <div>
        <label class="block text-xs font-medium text-gray-600 mb-1">Estado</label>
        <%= f.select :disabled, options_for_select([["Todos", ""], ["Habilitados", "enabled"], ["Deshabilitados", "disabled"]], params[:disabled]), {}, class: "w-full px-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 text-sm transition-all" %>
      </div>

      <div class="flex gap-2 items-end md:col-span-3">
        <%= f.submit "Filtrar", class: "cursor-pointer flex-1 md:flex-none px-4 py-2.5 bg-cyan-600 hover:bg-cyan-700 text-white rounded-lg text-sm font-semibold transition-all shadow-sm hover:shadow-md" %>
        <%= link_to "Limpiar", admin_users_path, class: "px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="mb-6">
    <%= render 'shared/tailwind_pagination', paginated: @users %>
  </div>

  <!-- Desktop Table View -->
  <div class="hidden lg:block bg-white shadow-sm rounded-xl overflow-visible border border-gray-100 relative">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gradient-to-r from-gray-50 to-white">
        <tr>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Email</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Role</th>
          <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Entidad</th>
          <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        <% if @users.any? %>
          <% @users.each do |user| %>
            <tr class="hover:bg-gray-50 transition-colors duration-150">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-full bg-gradient-to-br from-cyan-500 to-cyan-600 flex items-center justify-center shadow-sm flex-shrink-0">
                    <span class="text-white text-xs font-semibold"><%= user.email.first.upcase %></span>
                  </div>
                  <span class="text-sm font-semibold text-gray-900"><%= user.email %></span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                  <%= user.role&.display_name || "Sin Role" %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                  <%= user.entity&.name || "Sin Entidad" %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="relative inline-block text-left" data-controller="dropdown">
                  <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none" data-action="click->dropdown#toggle" title="Opciones">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                    </svg>
                  </button>
                  <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-56 rounded-xl shadow-xl bg-white border border-gray-100 z-50 origin-top-right ring-1 ring-black ring-opacity-5 focus:outline-none">
                    <div class="py-2" role="menu">
                      <%= link_to admin_user_path(user), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        Ver detalles
                      <% end %>
                      <%= link_to edit_admin_user_path(user), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        Editar
                      <% end %>
                      <%= button_to admin_user_path(user), method: :delete, class: "group flex w-full items-center gap-3 px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 hover:text-red-900 transition-colors", role: "menuitem", data: { turbo_confirm: "¿Estás seguro de eliminar este usuario?" } do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Eliminar
                      <% end %>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="4" class="px-6 py-12 text-center">
              <div class="flex flex-col items-center">
                <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.856-1.487M15 10a3 3 0 11-6 0 3 3 0 016 0zM6 20a6 6 0 0110.89-1.23M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
                <p class="text-gray-500 text-lg font-medium">No hay usuarios registrados</p>
                <p class="text-gray-400 text-sm mt-1">Comienza creando tu primer usuario</p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Mobile Card View -->
  <div class="lg:hidden space-y-4">
    <% if @users.any? %>
      <% @users.each do |user| %>
        <div class="bg-white shadow-sm rounded-xl p-4 border border-gray-100 hover:shadow-md transition-shadow duration-200">
          <div class="flex items-start gap-3 mb-4">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-cyan-500 to-cyan-600 flex items-center justify-center shadow-sm flex-shrink-0">
              <span class="text-white text-sm font-semibold"><%= user.email.first.upcase %></span>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-lg font-bold text-gray-900 truncate"><%= user.email %></h3>
              <div class="flex items-center gap-2 mt-2 flex-wrap">
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                  <%= user.role&.display_name || "Sin Role" %>
                </span>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                  <%= user.entity&.name || "Sin Entidad" %>
                </span>
              </div>
            </div>
          </div>
          
          <div class="flex justify-end gap-2 pt-3 border-t border-gray-100">
            <div class="relative inline-block text-left" data-controller="dropdown">
              <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none" data-action="click->dropdown#toggle" title="Opciones">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                </svg>
              </button>
              <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-56 rounded-xl shadow-xl bg-white border border-gray-100 z-50 origin-top-right ring-1 ring-black ring-opacity-5 focus:outline-none">
                <div class="py-2" role="menu">
                  <%= link_to admin_user_path(user), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    Ver
                  <% end %>
                  <%= link_to edit_admin_user_path(user), class: "flex items-center gap-3 px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-gray-900 transition-colors", role: "menuitem" do %>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Editar
                  <% end %>
                  <%= button_to admin_user_path(user), method: :delete, class: "group flex w-full items-center gap-3 px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 hover:text-red-900 transition-colors", role: "menuitem", data: { turbo_confirm: "¿Estás seguro?" } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                    Eliminar
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white shadow-sm rounded-xl p-12 text-center border border-gray-100">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.856-1.487M15 10a3 3 0 11-6 0 3 3 0 016 0zM6 20a6 6 0 0110.89-1.23M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
        <p class="text-gray-500 text-lg font-medium">No hay usuarios registrados</p>
        <p class="text-gray-400 text-sm mt-1">Comienza creando tu primer usuario</p>
      </div>
    <% end %>
  </div>
</div>
